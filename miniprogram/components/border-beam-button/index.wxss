/**
 * BorderBeamButton 组件样式
 * 日光未来主义设计 - 旋转光束边框按钮
 */

.beam-button {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 36rpx;
  border-radius: 9999rpx;
  background: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 300ms ease;
}

.beam-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 禁用状态 */
.beam-button.disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* ============ 旋转光束 ============ */
.beam-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  border-radius: 9999rpx;
  padding: 2rpx;
}

.rotating-beam {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(
    from 0deg,
    transparent 0deg 300deg,
    #FF6B35 360deg
  );
  opacity: 0;
  transition: opacity 300ms ease;
  animation: spin 3s linear infinite;
}

/* 悬停时显示光束 */
.beam-button:active .rotating-beam {
  opacity: 1;
}

/* 加载状态 - 光束常亮 + 加速旋转 */
.beam-button.loading .rotating-beam {
  opacity: 1;
}

.rotating-beam.fast {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* ============ 内层遮罩 ============ */
.inner-mask {
  position: absolute;
  top: 3rpx;
  left: 3rpx;
  right: 3rpx;
  bottom: 3rpx;
  background: #FFFFFF;
  border-radius: 9999rpx;
  z-index: 1;
}

/* ============ 按钮内容 ============ */
.button-content {
  position: relative;
  display: flex;
  align-items: center;
  gap: 12rpx;
  z-index: 10;
}

/* 图标区域 */
.icon-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}

.sparkle-icon {
  font-size: 28rpx;
  color: #FF6B35;
  transition: transform 300ms ease;
}

.beam-button:active .sparkle-icon {
  transform: scale(1.25);
}

/* 加载动画 */
.loading-spinner {
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid rgba(255, 107, 53, 0.2);
  border-top-color: #FF6B35;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

/* 文字 */
.button-text {
  font-size: 22rpx;
  font-weight: 700;
  font-family: 'SF Mono', 'Menlo', monospace;
  color: #6B7280;
  letter-spacing: 2rpx;
  transition: color 300ms ease;
}

.beam-button:active .button-text {
  color: #FF6B35;
}

/* ============ 尺寸变体 ============ */
.beam-button.size-sm {
  padding: 12rpx 24rpx;
}

.beam-button.size-sm .sparkle-icon {
  font-size: 24rpx;
}

.beam-button.size-sm .button-text {
  font-size: 20rpx;
}

.beam-button.size-lg {
  padding: 24rpx 48rpx;
}

.beam-button.size-lg .sparkle-icon {
  font-size: 36rpx;
}

.beam-button.size-lg .button-text {
  font-size: 26rpx;
}

/* ============ 主题变体 ============ */
/* 蓝色主题 */
.beam-button.theme-blue .rotating-beam {
  background: conic-gradient(
    from 0deg,
    transparent 0deg 300deg,
    #3D9BFF 360deg
  );
}

.beam-button.theme-blue .sparkle-icon,
.beam-button.theme-blue:active .button-text {
  color: #3D9BFF;
}

.beam-button.theme-blue .loading-spinner {
  border-color: rgba(61, 155, 255, 0.2);
  border-top-color: #3D9BFF;
}

/* 绿色主题 */
.beam-button.theme-green .rotating-beam {
  background: conic-gradient(
    from 0deg,
    transparent 0deg 300deg,
    #52C41A 360deg
  );
}

.beam-button.theme-green .sparkle-icon,
.beam-button.theme-green:active .button-text {
  color: #52C41A;
}

.beam-button.theme-green .loading-spinner {
  border-color: rgba(82, 196, 26, 0.2);
  border-top-color: #52C41A;
}

/* ============ 常亮模式 ============ */
.beam-button.always-on .rotating-beam {
  opacity: 1;
}
