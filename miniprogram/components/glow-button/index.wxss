  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: url('data:image/svg+xml;base64,PHN2ZyB4bWxucz0iaHR0cDovL3d3dy53My5vcmcvMjAwMC9zdmciIHdpZHRoPSIzMDAiIGhlaWdodD0iMzAwIj48ZmlsdGVyIGlkPSJhIj48ZmVUdXJidWxlbmNlIHR5cGU9ImZyYWN0YWxOb2lzZSIgYmFzZUZyZXF1ZW5jeT0iLjc1Ii8+PC9maWx0ZXI+PHJlY3Qgd2lkdGg9IjEwMCUiIGhlaWdodD0iMTAwJSIgZmlsdGVyPSJ1cmwoI2EpIiBvcGFjaXR5PSIuMDUiLz48L3N2Zz4=');
  mix-blend-mode: overlay;
  opacity: 0.2;
  pointer-events: none;
}

/* 移动光泽层 - 跟随触摸位置 */
.glow-layer {
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  pointer-events: none;
  background: radial-gradient(
    600rpx circle at var(--glow-x, 0px) var(--glow-y, 0px),
    rgba(255, 255, 255, 0.3) 0%,
    transparent 100%
  );
  opacity: 0;
  mix-blend-mode: overlay;
  transition: opacity 300ms ease;
}

.glow-button:active .glow-layer {
  opacity: 1;
}

/* 内容区域 */
.content-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 48rpx;
  z-index: 10;
}

/* 文本内容 */
.text-content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFFFFF;
  letter-spacing: 1rpx;
  line-height: 1.3;
}

.subtitle {
  font-size: 24rpx;
  font-family: 'SF Mono', 'Menlo', monospace;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 8rpx;
}

/* 图标区域 */
.icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  transition: all 300ms ease;
}

.glow-button:active .icon-wrapper {
  transform: translateX(4rpx);
  background: #FFFFFF;
}

.glow-button:active .arrow-icon {
  color: #FF6B35;
}

.arrow-icon {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: 300;
  transition: color 300ms ease;
}

/* 加载动画 */
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* ============ 尺寸变体 ============ */
.glow-button.size-sm .content-wrapper {
  padding: 24rpx 32rpx;
}

.glow-button.size-sm .title {
  font-size: 28rpx;
}

.glow-button.size-sm .icon-wrapper {
  width: 56rpx;
  height: 56rpx;
}

.glow-button.size-sm .arrow-icon {
  font-size: 28rpx;
}

/* ============ 主题变体 ============ */
/* 蓝色主题 */
.glow-button.theme-blue {
  background: linear-gradient(135deg, #3D9BFF 0%, #6BB3FF 100%);
  box-shadow:
    0 20rpx 50rpx -10rpx rgba(61, 155, 255, 0.4),
    0 16rpx 20rpx -12rpx rgba(61, 155, 255, 0.2);
}

.glow-button.theme-blue:active {
  box-shadow:
    0 24rpx 60rpx -10rpx rgba(61, 155, 255, 0.5),
    0 20rpx 24rpx -12rpx rgba(61, 155, 255, 0.25);
}

.glow-button.theme-blue:active .arrow-icon {
  color: #3D9BFF;
}

/* 绿色主题 */
.glow-button.theme-green {
  background: linear-gradient(135deg, #52C41A 0%, #73D13D 100%);
  box-shadow:
    0 20rpx 50rpx -10rpx rgba(82, 196, 26, 0.4),
    0 16rpx 20rpx -12rpx rgba(82, 196, 26, 0.2);
}

.glow-button.theme-green:active {
  box-shadow:
    0 24rpx 60rpx -10rpx rgba(82, 196, 26, 0.5),
    0 20rpx 24rpx -12rpx rgba(82, 196, 26, 0.25);
}

.glow-button.theme-green:active .arrow-icon {
  color: #52C41A;
}

/* 暗色主题 */
.glow-button.theme-dark {
  background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
  box-shadow:
    0 20rpx 50rpx -10rpx rgba(31, 41, 55, 0.5),
    0 16rpx 20rpx -12rpx rgba(31, 41, 55, 0.3);
}

.glow-button.theme-dark:active .arrow-icon {
  color: #1F2937;
}

/* ============ 无图标变体 ============ */
.glow-button.no-icon .content-wrapper {
  justify-content: center;
}

.glow-button.no-icon .text-content {
  align-items: center;
}

.glow-button.no-icon .icon-wrapper {
  display: none;
}
