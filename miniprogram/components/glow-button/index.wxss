/**
 * GlowButton 组件样式
 * 日光未来主义设计 - 全息发光按钮
 */

.glow-button {
  position: relative;
  width: 100%;
  overflow: hidden;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  box-shadow:
    0 20rpx 50rpx -10rpx rgba(255, 107, 53, 0.4),
    0 16rpx 20rpx -12rpx rgba(255, 107, 53, 0.2);
  transition: all 300ms ease;
}

.glow-button:active {
  transform: translateY(-2rpx) scale(0.98);
  box-shadow:
    0 24rpx 60rpx -10rpx rgba(255, 107, 53, 0.5),
    0 20rpx 24rpx -12rpx rgba(255, 107, 53, 0.25);
}

/* 禁用状态 */
.glow-button.disabled {
  opacity: 0.6;
  pointer-events: none;
}

/* 加载状态 */
.glow-button.loading {
  pointer-events: none;
}

/* 全息纹理层 */
