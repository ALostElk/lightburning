/**
 * FloatingFab 组件样式
 * 日光未来主义设计 - 浮动操作按钮
 */

.fab-container {
  position: fixed;
  z-index: 999;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: levitate 4s ease-in-out infinite;
}

/* 位置变体 */
.fab-container.bottom-center {
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
}

.fab-container.bottom-right {
  bottom: 100rpx;
  right: 48rpx;
}

.fab-container.bottom-left {
  bottom: 100rpx;
  left: 48rpx;
}

/* 浮动动画 */
@keyframes levitate {
  0%, 100% { transform: translateX(-50%) translateY(0); }
  50% { transform: translateX(-50%) translateY(-12rpx); }
}

.fab-container.bottom-right {
  animation: levitate-right 4s ease-in-out infinite;
}

@keyframes levitate-right {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.fab-container.bottom-left {
  animation: levitate-left 4s ease-in-out infinite;
}

@keyframes levitate-left {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

/* ============ 外层发光环 ============ */
.glow-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(255, 107, 53, 0.2);
  filter: blur(40rpx);
  z-index: -1;
}

/* ============ 主按钮 ============ */
.fab-button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 16rpx 64rpx 0 rgba(0, 0, 0, 0.36);
  transition: all 300ms ease;
}

.fab-button:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}

/* 图标 */
.fab-icon {
  font-size: 56rpx;
  color: #FFFFFF;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* ============ 尺寸变体 ============ */
.fab-button.size-sm {
  width: 96rpx;
  height: 96rpx;
}

.fab-button.size-sm .fab-icon {
  font-size: 40rpx;
}

.fab-container .size-sm ~ .glow-ring {
  width: 120rpx;
  height: 120rpx;
}

.fab-button.size-lg {
  width: 160rpx;
  height: 160rpx;
}

.fab-button.size-lg .fab-icon {
  font-size: 72rpx;
}

.fab-container .size-lg ~ .glow-ring {
  width: 200rpx;
  height: 200rpx;
}

/* ============ 主题变体 ============ */
/* 主色实心 */
.fab-button.theme-solid {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  border: none;
  box-shadow:
    0 16rpx 48rpx -8rpx rgba(255, 107, 53, 0.6),
    0 8rpx 16rpx -4rpx rgba(255, 107, 53, 0.3);
}

.fab-button.theme-solid:active {
  box-shadow:
    0 20rpx 56rpx -8rpx rgba(255, 107, 53, 0.7),
    0 12rpx 20rpx -4rpx rgba(255, 107, 53, 0.35);
}

.fab-container .theme-solid ~ .glow-ring {
  background: rgba(255, 107, 53, 0.3);
}

/* 蓝色主题 */
.fab-button.theme-blue {
  background: linear-gradient(135deg, #3D9BFF 0%, #6BB3FF 100%);
  border: none;
  box-shadow:
    0 16rpx 48rpx -8rpx rgba(61, 155, 255, 0.6),
    0 8rpx 16rpx -4rpx rgba(61, 155, 255, 0.3);
}

.fab-container .theme-blue ~ .glow-ring {
  background: rgba(61, 155, 255, 0.3);
}

/* 暗色玻璃态 */
.fab-button.theme-dark {
  background: rgba(0, 0, 0, 0.3);
  border-color: rgba(255, 255, 255, 0.1);
}

/* ============ 标签 ============ */
.fab-label {
  margin-top: 16rpx;
  padding: 8rpx 20rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
}

.fab-label text {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* ============ 脉动效果 ============ */
.fab-container.pulse .glow-ring {
  animation: pulse-ring 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse-ring {
  0%, 100% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 0.5;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

/* ============ 安全区域适配 ============ */
.fab-container.safe-area {
  bottom: calc(60rpx + constant(safe-area-inset-bottom));
  bottom: calc(60rpx + env(safe-area-inset-bottom));
}
