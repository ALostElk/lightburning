/* app.wxss */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
  color: #fff;
  border-radius: 50rpx;
  border: none;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-secondary {
  background: #fff;
  color: #FF6B35;
  border: 2rpx solid #FF6B35;
  border-radius: 50rpx;
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.tag-protein {
  background: #FFE8E0;
  color: #FF6B35;
}

.tag-lowcal {
  background: #E0F4FF;
  color: #0099FF;
}

.tag-veg {
  background: #E8F5E9;
  color: #4CAF50;
}

