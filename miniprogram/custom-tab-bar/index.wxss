.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 78px; /* Further increased height (was 68px) */
  background: rgba(255, 255, 255, 0.98);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  backdrop-filter: blur(24px);
  -webkit-backdrop-filter: blur(24px);
  /* Soft shadow for depth */
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
  transition: all 0.3s ease;
}

.tab-bar-border {
  display: none;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.icon-container {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  position: relative;
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.tab-text {
  font-size: 20rpx;
  line-height: 1;
  font-weight: 300;
  letter-spacing: 1rpx;
  transition: all 0.3s ease;
}

/* Active State Styles */
.tab-bar-item.active .tab-icon {
  transform: translateY(-4rpx) scale(1.1);
  filter: drop-shadow(0 4rpx 8rpx rgba(16, 185, 129, 0.3));
  animation: elastic-pop 0.5s;
}

.tab-bar-item.active .tab-text {
  font-weight: 500;
  color: #10B981;
  transform: translateY(-2rpx);
}

@keyframes elastic-pop {
  0% { transform: scale(1); }
  50% { transform: scale(1.15); }
  70% { transform: scale(0.95); }
  100% { transform: scale(1.1) translateY(-4rpx); }
}

@keyframes fade-in-up {
  0% { opacity: 0; transform: translateX(-50%) translateY(4rpx); }
  100% { opacity: 1; transform: translateX(-50%) translateY(0); }
}
