/* pages/report/daily/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx 30rpx 40rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.date {
  font-size: 26rpx;
  color: #999;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 红绿灯卡片 */
.traffic-light-card {
  display: flex;
  align-items: center;
  border: 2rpx solid;
}

.traffic-light-icon {
  font-size: 80rpx;
  margin-right: 20rpx;
}

.traffic-light-info {
  flex: 1;
}

.traffic-light-status {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.traffic-light-desc {
  font-size: 26rpx;
  opacity: 0.8;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

.calorie-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.calorie-item:last-child {
  border-bottom: none;
}

.calorie-item.highlight {
  background: #f8f8f8;
  padding: 18rpx 20rpx;
  border-radius: 8rpx;
  margin: 10rpx 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.value.deficit {
  color: #51CF66;
}

.value.surplus {
  color: #FF6B6B;
}

/* 营养评分 */
.score-circle {
  text-align: center;
  margin-bottom: 20rpx;
}

.score-value {
  font-size: 72rpx;
  font-weight: bold;
  color: #51CF66;
}

.score-label {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.progress-bar {
  margin: 20rpx 0;
}

/* 建议列表 */
.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 刷新按钮 */
.refresh-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 45rpx;
  margin-top: 20rpx;
}

