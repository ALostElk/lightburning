/** pages/home/index.wxss **/
/* Fresh & Elegant Theme (Low Saturation) - Final Fix */

/* 1. Page Container */
.page-container {
  min-height: 100vh;
  /* 天空白渐变 - 极淡 */
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  padding: 0 32rpx 40rpx; /* Added bottom padding */
  padding-top: calc(env(safe-area-inset-top) + 88rpx); /* 状态栏 + 导航栏高度 */
  box-sizing: border-box;
  color: #334155; /* Slate-700 */
}

/* 2. Header */
.minimal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
}

.greeting-time {
  font-size: 32rpx;
  font-weight: 300; /* Extra Light */
  color: #94A3B8; /* Slate-400 */
}

.user-nickname {
  font-size: 48rpx;
  font-weight: 300; /* Light */
  color: #334155;
}

.header-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.2);
}

.avatar-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #A7F3D0; /* Emerald-200 */
  border: 4rpx solid #FFFFFF;
}

/* Date Navigator */
.date-navigator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.nav-arrow {
  padding: 16rpx;
  color: #94A3B8; /* Slate-400 */
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.date-display {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.6);
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.05);
}

.date-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #334155; /* Slate-700 */
}

.calendar-icon {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 3. Hero Card (Traffic Light) */
.hero-section {
  margin-bottom: 40rpx;
}

.hero-card {
  position: relative;
  width: 100%;
  height: 320rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 
    0 20rpx 40rpx rgba(148, 163, 184, 0.05),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* Hero Glow - The Traffic Light */
.hero-glow {
  position: absolute;
  width: 120%;
  height: 120%;
  top: -10%;
  left: -10%;
  z-index: 0;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.25; 
  transition: background 1s ease;
}

/* 状态色 - 低饱和度 */
.hero-card[data-status="green"] .hero-glow {
  background: radial-gradient(circle, #6EE7B7 0%, transparent 70%); /* Emerald-300 */
}
.hero-card[data-status="yellow"] .hero-glow {
  background: radial-gradient(circle, #FDE047 0%, transparent 70%); /* Yellow-300 */
}
.hero-card[data-status="red"] .hero-glow {
  background: radial-gradient(circle, #FCA5A5 0%, transparent 70%); /* Red-300 */
}

.hero-content {
  position: relative;
  z-index: 10;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.hero-label {
  font-size: 24rpx;
  color: #64748B;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.hero-value-group {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
}

.hero-value {
  font-size: 80rpx;
  font-weight: 200; /* Ultra Light */
  color: #1E293B;
  font-family: 'SF Mono', 'Menlo', sans-serif;
}

.hero-unit {
  font-size: 28rpx;
  color: #94A3B8;
  font-weight: 300;
}

.hero-status-pill {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.02);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #CBD5E1; 
}

.hero-card[data-status="green"] .status-dot { background: #6EE7B7; }
.hero-card[data-status="yellow"] .status-dot { background: #FDE047; }
.hero-card[data-status="red"] .status-dot { background: #FCA5A5; }

.status-text {
  font-size: 24rpx;
  color: #475569;
}

/* 4. Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  height: 220rpx;
  border-radius: 32rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(148, 163, 184, 0.05);
  gap: 16rpx;
  border: 1rpx solid rgba(241, 245, 249, 1);
}

/* Mini Liquid Spheres */
.mini-sphere {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: relative;
  background: #F8FAFC;
  overflow: hidden;
}

.liquid {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  transition: height 1s ease;
  opacity: 0.8; 
  /* Fix overflow for waves */
  overflow: visible; 
}

.diet-sphere .liquid { background: #FDBA74; } /* Orange-300 */
.exercise-sphere .liquid { background: #5EEAD4; } /* Teal-300 */

/* Wave Layers */
.wave-layer {
  position: absolute;
  left: -50%;
  width: 200%;
  background: inherit;
}

.wave-layer.wave-1 {
  height: 20rpx;
  top: -10rpx;
  border-radius: 40% 50% 45% 55%;
  animation: wave-sway-1 4s linear infinite;
  opacity: 1;
  z-index: 3;
}

.wave-layer.wave-2 {
  height: 20rpx;
  top: -16rpx;
  border-radius: 50% 40% 55% 45%;
  animation: wave-sway-2 5s linear infinite;
  opacity: 0.6;
  z-index: 2;
}

.wave-layer.wave-3 {
  height: 20rpx;
  top: -22rpx;
  border-radius: 45% 55% 40% 60%;
  animation: wave-sway-3 6s linear infinite;
  opacity: 0.4;
  z-index: 1;
}

@keyframes wave-sway-1 {
  0% { transform: translateX(0) rotate(0deg); }
  100% { transform: translateX(25%) rotate(360deg); } /* Simple rotation for continuous wave */
}

@keyframes wave-sway-2 {
  0% { transform: translateX(0) rotate(0deg); }
  100% { transform: translateX(-25%) rotate(-360deg); }
}

@keyframes wave-sway-3 {
  0% { transform: translateX(0) rotate(0deg); }
  100% { transform: translateX(15%) rotate(180deg); }
}

.sphere-glass {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.9), transparent 70%);
  border-radius: 50%;
  box-shadow: inset 0 0 10rpx rgba(0,0,0,0.05);
  z-index: 10;
  pointer-events: none;
}

.stat-info {
  text-align: center;
}

.stat-label {
  font-size: 22rpx;
  color: #94A3B8;
  display: block;
  margin-bottom: 4rpx;
}

.stat-num {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  font-family: 'SF Mono', 'Menlo', sans-serif;
  margin-right: 4rpx;
}

.stat-target {
  font-size: 22rpx;
  color: #CBD5E1;
}

/* 5. Actions Grid (2x2) */
.actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.action-card {
  position: relative;
  height: 140rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.05); /* Very subtle shadow */
  border: 1rpx solid rgba(241, 245, 249, 1);
  transition: transform 0.15s ease;
  overflow: hidden;
}

.action-card:active {
  transform: scale(0.98);
}

.action-content {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
  width: 100%;
}

.action-label {
  font-size: 32rpx;
  font-weight: 500;
  color: #475569; /* Slate-600 */
  letter-spacing: 2rpx;
}

/* Primary Card (饮食记录 & 运动记录) - Soft Colorful Gradient */
.action-card.primary {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%); /* Soft Peach/Pink */
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.25);
}

.action-card.primary .action-label {
  color: #881337; /* Rose-900 */
  font-weight: 600;
}

/* Internal Glow for Primary Card */
.action-glow {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 60%);
  z-index: 1;
  pointer-events: none;
}

/* 5. Weight Card (体重趋势卡片) - 放在行动胶囊之后 */
.weight-card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
  margin-bottom: 200rpx;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.05);
  position: relative;
  overflow: hidden;
}

.weight-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.weight-title-group {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.weight-label {
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 400;
}

.weight-value-group {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.weight-value {
  font-size: 48rpx;
  font-weight: 200;
  color: #1E293B;
  font-family: 'SF Mono', 'Menlo', sans-serif;
}

.weight-unit {
  font-size: 24rpx;
  color: #94A3B8;
  font-weight: 300;
}

.weight-change {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(241, 245, 249, 0.8);
}

.weight-change.up {
  background: rgba(239, 68, 68, 0.1);
}

.weight-change.down {
  background: rgba(16, 185, 129, 0.1);
}

.weight-change.stable {
  background: rgba(148, 163, 184, 0.1);
}

.change-text {
  font-size: 22rpx;
  color: #64748B;
  font-weight: 500;
}

.weight-change.up .change-text {
  color: #EF4444;
}

.weight-change.down .change-text {
  color: #10B981;
}

/* 迷你折线图 */
.mini-chart {
  height: 120rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.chart-canvas {
  width: 100%;
  height: 100%;
}

/* 添加提示 */
.add-weight-hint {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx 0;
  border-top: 1rpx solid rgba(241, 245, 249, 0.8);
}

.hint-icon {
  font-size: 24rpx;
  color: #94A3B8;
}

.hint-text {
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 400;
}

/* 6. AI Banner */
.ai-floating-bar {
  position: fixed;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 16rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  z-index: 100;
}

.ai-bar-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.ai-bar-text {
  font-size: 24rpx;
  color: #475569;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  flex: 1;
}

.ai-bar-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(148, 163, 184, 0.1);
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.ai-bar-close:active {
  background: rgba(148, 163, 184, 0.2);
  transform: scale(0.95);
}

.close-icon {
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
}

/* Animations */
.animate-fade-in {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* ============ 日历弹窗样式 ============ */
.calendar-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.calendar-modal.show {
  opacity: 1;
  visibility: visible;
}

.calendar-content {
  width: 100%;
  max-width: 750rpx;
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.calendar-modal.show .calendar-content {
  transform: translateY(0);
}

/* 日历头部 */
.calendar-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.calendar-nav {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F3F4F6;
  border-radius: 50%;
  font-size: 40rpx;
  color: #374151;
}

.calendar-nav:active {
  background: #E5E7EB;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

/* 星期标题 */
.calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  margin-bottom: 16rpx;
}

.weekday {
  text-align: center;
  font-size: 24rpx;
  color: #9CA3AF;
  font-weight: 500;
  padding: 12rpx 0;
}

/* 日期网格 */
.calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-day {
  position: relative;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.calendar-day:active {
  background: #F3F4F6;
}

.day-number {
  font-size: 28rpx;
  font-weight: 500;
  color: #374151;
}

/* 非当前月日期 */
.calendar-day.other-month .day-number {
  color: #D1D5DB;
}

/* 今天 */
.calendar-day.today {
  background: rgba(255, 107, 53, 0.1);
}

.calendar-day.today .day-number {
  color: #FF6B35;
  font-weight: 700;
}

/* 选中日期 */
.calendar-day.selected {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
}

.calendar-day.selected .day-number {
  color: #FFFFFF;
  font-weight: 700;
}

.calendar-day.selected .record-dot {
  background: #FFFFFF;
}

/* 未来日期 */
.calendar-day.future {
  opacity: 0.4;
}

.calendar-day.future .day-number {
  color: #D1D5DB;
}

/* 有记录的日期标记 */
.record-dot {
  position: absolute;
  bottom: 8rpx;
  width: 8rpx;
  height: 8rpx;
  background: #52C41A;
  border-radius: 50%;
}

/* 快捷选择按钮 */
.calendar-shortcuts {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #F3F4F6;
}

.shortcut-btn {
  padding: 16rpx 32rpx;
  background: #F9FAFB;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #6B7280;
  font-weight: 500;
  transition: all 0.2s ease;
}

.shortcut-btn:active {
  background: #FF6B35;
  color: #FFFFFF;
}

/* ============ 体重记录弹窗样式 ============ */
.weight-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.weight-modal.show {
  opacity: 1;
  visibility: visible;
}

.weight-modal-content {
  width: 100%;
  max-height: 70vh;
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  padding: 32rpx 32rpx calc(32rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

.weight-modal.show .weight-modal-content {
  transform: translateY(0);
}

/* 可滚动内容区 */
.modal-scroll-content {
  flex: 1;
  overflow-y: auto;
  min-height: 0;
  max-height: calc(70vh - 200rpx);
  padding-bottom: 16rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #94A3B8;
  border-radius: 50%;
  background: rgba(241, 245, 249, 0.8);
}

/* 体重显示区 */
.weight-display-section {
  text-align: center;
  margin-bottom: 24rpx;
}

.weight-display-value {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.display-number {
  font-size: 72rpx;
  font-weight: 200;
  color: #1E293B;
  font-family: 'SF Mono', 'Menlo', sans-serif;
}

.display-unit {
  font-size: 28rpx;
  color: #94A3B8;
  font-weight: 300;
}

.weight-compare {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
}

.compare-label {
  font-size: 24rpx;
  color: #94A3B8;
}

.compare-value {
  font-size: 24rpx;
  color: #64748B;
  font-weight: 500;
}

/* 滑动条输入 */
.slider-input-section {
  margin-bottom: 24rpx;
}

.slider-wrapper {
  position: relative;
  height: 48rpx;
  margin-bottom: 12rpx;
}

.slider-track {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  height: 8rpx;
  background: #F1F5F9;
  border-radius: 4rpx;
  transform: translateY(-50%);
}

.slider-fill {
  height: 100%;
  background: linear-gradient(90deg, #10B981 0%, #059669 100%);
  border-radius: 4rpx;
  transition: width 0.1s ease;
}

.weight-slider {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.slider-thumb {
  position: absolute;
  top: 50%;
  transform: translate(-50%, -50%);
  transition: left 0.1s ease;
}

.thumb-dot {
  width: 32rpx;
  height: 32rpx;
  background: #FFFFFF;
  border: 4rpx solid #10B981;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.slider-marks {
  display: flex;
  justify-content: space-between;
  padding: 0 16rpx;
}

.mark {
  font-size: 20rpx;
  color: #CBD5E1;
}

/* 快捷输入 */
.quick-weights {
  margin-bottom: 20rpx;
}

.quick-label {
  font-size: 24rpx;
  color: #64748B;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.quick-btns {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.quick-btn {
  flex: 0 0 auto;
  padding: 10rpx 16rpx;
  background: rgba(241, 245, 249, 0.8);
