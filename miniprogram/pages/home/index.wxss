}

.balance-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #1F2937;
}

.balance-score {
  font-size: 28rpx;
  font-weight: 700;
  color: #1F2937;
}

.balance-status {
  text-align: center;
}

.status-text {
  font-size: 24rpx;
