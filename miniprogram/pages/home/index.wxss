  flex-direction: column;
  gap: 16rpx;
}

.macro-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.macro-info {
  width: 120rpx;
  display: flex;
  flex-direction: column;
  gap: 2rpx;
