/* pages/home/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 欢迎卡片 */
.welcome-card {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  margin: 20rpx;
  padding: 40rpx 30rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.welcome-text {
  flex: 1;
}

.greeting {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.date {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.profile-btn {
  background: rgba(255, 255, 255, 0.2);
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  color: white;
  font-size: 26rpx;
  backdrop-filter: blur(10rpx);
}

/* 今日数据卡片 */
.data-card {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

/* 热量部分 */
.calorie-section {
  margin-bottom: 30rpx;
}

.calorie-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.calorie-label {
  font-size: 28rpx;
  color: #666;
}

.calorie-value {
  font-size: 28rpx;
  color: #333;
}

.calorie-value .current {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.calorie-value .divider {
  margin: 0 8rpx;
  color: #999;
}

.calorie-value .target {
  font-size: 32rpx;
  color: #666;
}

.calorie-value .unit {
  margin-left: 8rpx;
  font-size: 24rpx;
  color: #999;
}

.progress-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FF6B6B 0%, #FF8E8E 100%);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.calorie-detail {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.detail-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.detail-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.detail-value.over {
  color: #FF6B6B;
}

/* 营养素部分 */
.macros-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.macro-item {
  display: flex;
  flex-direction: column;
}

.macro-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.macro-label {
  font-size: 26rpx;
  color: #666;
}

.macro-value {
  font-size: 24rpx;
  color: #999;
}

.macro-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.macro-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.macro-fill.protein {
  background: #4ECDC4;
}

.macro-fill.carbs {
  background: #FFD93D;
}

.macro-fill.fat {
  background: #FF6B6B;
}

/* 快捷操作 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin: 20rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 20rpx;
  border: 2rpx solid;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.action-item:active {
  transform: scale(0.95);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.action-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 推荐食谱 */
.recommendations {
  margin: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  display: flex;
  align-items: center;
  color: #FF6B6B;
  font-size: 26rpx;
}

.arrow {
  font-size: 32rpx;
  margin-left: 4rpx;
}

.recipe-list {
  display: flex;
  gap: 20rpx;
  overflow-x: auto;
  padding-bottom: 10rpx;
}

.recipe-card {
  flex-shrink: 0;
  width: 280rpx;
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.recipe-image {
  width: 100%;
  height: 180rpx;
}

.recipe-info {
  padding: 20rpx;
}

.recipe-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recipe-calories {
  font-size: 24rpx;
  color: #FF6B6B;
}

/* AI入口 */
.ai-entry {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.ai-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.ai-text {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.ai-title {
  font-size: 30rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
}

.ai-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.ai-arrow {
  font-size: 40rpx;
  color: white;
  font-weight: 300;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
