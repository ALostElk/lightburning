}

.balance-icon {
  font-size: 32rpx;
}

.balance-text {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
}

.balance-title {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.balance-value {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* ============ 仪表盘卡片 ============ */
.dashboard-card {
  margin-bottom: 24rpx;
  border-radius: 36rpx;
  position: relative;
  overflow: hidden;

  /* 液态玻璃基础 */
  background: linear-gradient(
    145deg,
    rgba(255, 255, 255, 0.75) 0%,
    rgba(255, 247, 237, 0.65) 30%,
    rgba(255, 237, 213, 0.55) 60%,
    rgba(255, 220, 180, 0.45) 100%
  ) !important;

  /* 玻璃模糊效果 */
  backdrop-filter: blur(40rpx) saturate(180%);
  -webkit-backdrop-filter: blur(40rpx) saturate(180%);

  /* 边框光泽 */
  border: 1rpx solid rgba(255, 255, 255, 0.6);

  /* 多层阴影营造深度 */
  box-shadow:
    0 8rpx 32rpx rgba(255, 107, 53, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8),
    inset 0 -1rpx 0 rgba(0, 0, 0, 0.02);
}

/* 液态光斑效果 */
.dashboard-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    ellipse 80% 60% at 30% 20%,
    rgba(255, 255, 255, 0.5) 0%,
    transparent 60%
  );
  pointer-events: none;
  z-index: 1;
}

/* 右下角光晕 */
.dashboard-card::after {
  content: '';
  position: absolute;
  bottom: -30%;
  right: -20%;
  width: 80%;
  height: 80%;
  background: radial-gradient(
    ellipse 70% 50% at 70% 70%,
    rgba(255, 107, 53, 0.2) 0%,
    transparent 60%
  );
  pointer-events: none;
  z-index: 1;
}

.dashboard-content {
  padding: 32rpx;
  position: relative;
  z-index: 2;
}

/* 热量仪表盘 */
.calories-dashboard {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

/* 环形图 */
.donut-chart-wrapper {
  flex-shrink: 0;
}

.donut-chart {
  position: relative;
  width: 260rpx;
  height: 260rpx;
}

.donut-ring {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  mask: radial-gradient(transparent 58%, black 59%);
  -webkit-mask: radial-gradient(transparent 58%, black 59%);
  transition: background 0.5s ease;
  position: relative;
  overflow: hidden;
  box-shadow:
    0 0 30rpx rgba(255, 107, 53, 0.3),
    inset 0 0 20rpx rgba(255, 255, 255, 0.2);
}

/* 圆环液态流动效果 */
.donut-ring::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(
    from 0deg,
    transparent 0deg,
    rgba(255, 255, 255, 0.3) 60deg,
    transparent 120deg,
    transparent 360deg
  );
  animation: ring-rotate 4s linear infinite;
}

/* 圆环光泽扫过效果 */
.donut-ring::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    135deg,
    transparent 40%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 60%
  );
  animation: ring-shine 3s ease-in-out infinite;
}

@keyframes ring-rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes ring-shine {
  0%, 100% {
    opacity: 0;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

.donut-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.donut-value-wrapper {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  justify-content: center;
}

.donut-value {
  font-size: 56rpx;
  font-weight: 800;
  color: #1F2937;
  font-family: 'SF Mono', 'Menlo', monospace;
  line-height: 1;
}

.donut-unit {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 500;
  line-height: 1;
}

.donut-label {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

/* 热量详细数据 */
.calories-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.calorie-row {
