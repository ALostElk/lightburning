}

.macro-progress-fill.carbs {
  background: linear-gradient(90deg, #06B6D4 0%, #67E8F9 100%);
}

.macro-progress-fill.fat {
  background: linear-gradient(90deg, #0891B2 0%, #0E7490 100%);
}

/* ============ 快捷操作 - 液态玻璃风格 ============ */
.quick-actions {
  margin-bottom: 32rpx;
}

.actions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
