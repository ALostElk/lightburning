/* pages/home/index.wxss */

/* ============ 页面容器 ============ */
.page {
  min-height: 100vh;
  background: linear-gradient(135deg, #F0FDF4 0%, #DCFCE7 50%, #BBF7D0 100%);
  display: flex;
  flex-direction: column;
}

/* ============ 计划概览卡片 ============ */
.plan-overview-card {
  margin: 24rpx 32rpx 0;
  padding: 32rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #F9FAFB 100%);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.plan-header {
  margin-bottom: 24rpx;
}

.plan-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.plan-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.plan-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: linear-gradient(135deg, #10B981, #34D399);
}

.plan-status[data-status="completed"] {
  background: linear-gradient(135deg, #F59E0B, #FCD34D);
}

.status-text {
  font-size: 22rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.plan-meta {
  display: flex;
  align-items: center;
}

.meta-text {
  font-size: 24rpx;
  color: #6B7280;
}

.plan-progress {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.progress-bar-bg {
  height: 12rpx;
  background: #E5E7EB;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #3B82F6, #6366F1);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-text {
  font-size: 26rpx;
  font-weight: 600;
  color: #1F2937;
}

.weight-text {
  font-size: 24rpx;
  color: #6B7280;
}

/* ============ 粘性头部 ============ */
.sticky-header {
  position: sticky;
  top: 0;
  z-index: 40;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.status-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 20rpx;
  height: 20rpx;
  background: #52C41A;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.greeting {
  font-size: 22rpx;
  color: #9CA3AF;
  line-height: 1.2;
  display: block;
}

.user-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
  line-height: 1.2;
  display: block;
}

.goal-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.status-badge {
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #10B981, #34D399);
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
  transition: all 0.2s ease;
}

.status-badge:active {
  transform: scale(0.95);
}

.status-badge.progress {
  background: linear-gradient(135deg, #06B6D4, #0891B2);
}

.status-icon {
  font-size: 24rpx;
}

.status-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #ffffff;
}

/* ============ 主内容区 ============ */
.main-content {
  padding: 24rpx;
}

/* ============ 日期切换导航栏 - 液态玻璃风格 ============ */
.date-nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.7) 0%, rgba(255, 251, 235, 0.6) 100%);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow:
    0 8rpx 32rpx rgba(255, 107, 53, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8),
    inset 0 -1rpx 0 rgba(255, 107, 53, 0.1);
}

.date-nav-arrow {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 237, 213, 0.6) 100%);
  border: 1rpx solid rgba(255, 255, 255, 0.7);
  box-shadow:
    0 4rpx 12rpx rgba(255, 107, 53, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transition: all 0.2s ease;
}

.date-nav-arrow:active {
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.9) 0%, rgba(255, 200, 150, 0.7) 100%);
  transform: scale(0.95);
}

.arrow-icon {
  font-size: 40rpx;
  color: #FF6B35;
  font-weight: 500;
}

.date-nav-center {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 36rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.7) 0%, rgba(255, 245, 235, 0.5) 100%);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.date-nav-center:active {
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.8) 0%, rgba(255, 220, 180, 0.6) 100%);
}

.date-nav-text {
  font-size: 38rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6B35 0%, #F59E0B 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ============ AI 分析横幅 ============ */
.ai-banner {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(61, 155, 255, 0.1) 0%, rgba(82, 196, 26, 0.1) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(61, 155, 255, 0.2);
  margin-bottom: 24rpx;
  animation: fadeInUp 0.5s ease-out;
}

.ai-banner[data-priority="high"] {
  border-color: #EF4444;
  box-shadow: 0 8rpx 32rpx rgba(239, 68, 68, 0.2);
}

.ai-banner[data-priority="medium"] {
  border-color: #F59E0B;
  box-shadow: 0 8rpx 32rpx rgba(245, 158, 11, 0.2);
}

.ai-banner-content {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  flex: 1;
}

.ai-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #3D9BFF 0%, #52C41A 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.ai-banner[data-priority="high"] .ai-icon-wrapper {
  background: linear-gradient(135deg, #EF4444, #F87171);
}

.ai-banner[data-priority="medium"] .ai-icon-wrapper {
  background: linear-gradient(135deg, #F59E0B, #FCD34D);
}

.ai-icon {
  font-size: 28rpx;
}

.ai-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.ai-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #3D9BFF;
}

.ai-message {
  font-size: 26rpx;
  color: #1F2937;
  line-height: 1.5;
}

.ai-priority {
  flex-shrink: 0;
}

.priority-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #EF4444;
  animation: pulse 2s infinite;
}

.ai-banner[data-priority="medium"] .priority-dot {
  background: #F59E0B;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

.ai-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9CA3AF;
  font-size: 32rpx;
}

/* ============ 动画 ============ */
@keyframes fade-in-up {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in-up {
  animation: fade-in-up 0.4s ease-out;
}

/* ============ 进度卡片 ============ */
.progress-card {
  margin: 24rpx 32rpx 0;
}

.progress-content {
  padding: 32rpx;
}

/* 双环形图样式 */
.dual-ring-section {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 32rpx;
}

.ring-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.ring-wrapper {
  position: relative;
  width: 140rpx;
  height: 140rpx;
}

.progress-ring {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.ring-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #E5E7EB;
}

.ring-fill {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  clip-path: polygon(50% 50%, 50% 0%, 100% 0%, 100% 100%, 0% 100%, 0% 50%);
}

.diet-ring .ring-fill {
  background: conic-gradient(#FF6B35 0deg, #FF6B35 360deg);
}

.exercise-ring .ring-fill {
  background: conic-gradient(#4ECDC4 0deg, #4ECDC4 360deg);
}

.ring-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  background: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.ring-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1F2937;
  line-height: 1;
}

.ring-unit {
  font-size: 20rpx;
  color: #6B7280;
  margin-top: 4rpx;
}

.ring-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.ring-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
}

.ring-detail {
  font-size: 22rpx;
  color: #6B7280;
}

/* 平衡指标 */
.balance-indicator {
