/** pages/home/index.wxss **/
/* Fresh & Elegant Theme (Low Saturation) - Final Fix */

/* 1. Page Container */
.page-container {
  min-height: 100vh;
  /* 天空白渐变 - 极淡 */
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  padding: 0 32rpx 40rpx; /* Added bottom padding */
  box-sizing: border-box;
  color: #334155; /* Slate-700 */
}

/* 2. Header */
.minimal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.header-text {
  display: flex;
  flex-direction: column;
}

.greeting-time {
  font-size: 32rpx;
  font-weight: 300; /* Extra Light */
  color: #94A3B8; /* Slate-400 */
}

.user-nickname {
  font-size: 48rpx;
  font-weight: 300; /* Light */
  color: #334155;
}

.header-avatar {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.2);
}

.avatar-dot {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #A7F3D0; /* Emerald-200 */
  border: 4rpx solid #FFFFFF;
}

/* Date Navigator */
.date-navigator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

.nav-arrow {
  padding: 16rpx;
  color: #94A3B8; /* Slate-400 */
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.date-display {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: rgba(255, 255, 255, 0.6);
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.05);
}

.date-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #334155; /* Slate-700 */
}

.calendar-icon {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 3. Hero Card (Traffic Light) */
.hero-section {
  margin-bottom: 40rpx;
}

.hero-card {
  position: relative;
  width: 100%;
  height: 320rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 
    0 20rpx 40rpx rgba(148, 163, 184, 0.05),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* Hero Glow - The Traffic Light */
.hero-glow {
  position: absolute;
  width: 120%;
  height: 120%;
  top: -10%;
  left: -10%;
  z-index: 0;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.25; 
  transition: background 1s ease;
}

/* 状态色 - 低饱和度 */
.hero-card[data-status="green"] .hero-glow {
  background: radial-gradient(circle, #6EE7B7 0%, transparent 70%); /* Emerald-300 */
}
.hero-card[data-status="yellow"] .hero-glow {
  background: radial-gradient(circle, #FDE047 0%, transparent 70%); /* Yellow-300 */
}
.hero-card[data-status="red"] .hero-glow {
  background: radial-gradient(circle, #FCA5A5 0%, transparent 70%); /* Red-300 */
}

.hero-content {
  position: relative;
  z-index: 10;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.hero-label {
  font-size: 24rpx;
  color: #64748B;
  font-weight: 400;
  letter-spacing: 2rpx;
}

.hero-value-group {
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
}

.hero-value {
  font-size: 80rpx;
  font-weight: 200; /* Ultra Light */
  color: #1E293B;
  font-family: 'SF Mono', 'Menlo', sans-serif;
}

.hero-unit {
  font-size: 28rpx;
  color: #94A3B8;
  font-weight: 300;
}

.hero-status-pill {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.02);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #CBD5E1; 
}

.hero-card[data-status="green"] .status-dot { background: #6EE7B7; }
.hero-card[data-status="yellow"] .status-dot { background: #FDE047; }
.hero-card[data-status="red"] .status-dot { background: #FCA5A5; }

.status-text {
  font-size: 24rpx;
  color: #475569;
}

/* 4. Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.stat-card {
  height: 220rpx;
  border-radius: 32rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(148, 163, 184, 0.05);
  gap: 16rpx;
  border: 1rpx solid rgba(241, 245, 249, 1);
}

/* Mini Liquid Spheres */
.mini-sphere {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  position: relative;
  background: #F8FAFC;
  overflow: hidden;
}

.liquid {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  transition: height 1s ease;
  opacity: 0.8; 
  /* Fix overflow for waves */
  overflow: visible; 
}

.diet-sphere .liquid { background: #FDBA74; } /* Orange-300 */
.exercise-sphere .liquid { background: #5EEAD4; } /* Teal-300 */

/* Wave Layers */
.wave-layer {
  position: absolute;
  left: -50%;
  width: 200%;
  background: inherit;
}

.wave-layer.wave-1 {
  height: 20rpx;
  top: -10rpx;
  border-radius: 40% 50% 45% 55%;
  animation: wave-sway-1 4s linear infinite;
  opacity: 1;
  z-index: 3;
}

.wave-layer.wave-2 {
  height: 20rpx;
  top: -16rpx;
  border-radius: 50% 40% 55% 45%;
  animation: wave-sway-2 5s linear infinite;
  opacity: 0.6;
  z-index: 2;
}

.wave-layer.wave-3 {
  height: 20rpx;
  top: -22rpx;
  border-radius: 45% 55% 40% 60%;
  animation: wave-sway-3 6s linear infinite;
  opacity: 0.4;
  z-index: 1;
}

@keyframes wave-sway-1 {
  0% { transform: translateX(0) rotate(0deg); }
  100% { transform: translateX(25%) rotate(360deg); } /* Simple rotation for continuous wave */
}

@keyframes wave-sway-2 {
  0% { transform: translateX(0) rotate(0deg); }
  100% { transform: translateX(-25%) rotate(-360deg); }
}

@keyframes wave-sway-3 {
  0% { transform: translateX(0) rotate(0deg); }
  100% { transform: translateX(15%) rotate(180deg); }
}

.sphere-glass {
  position: absolute;
  top: 0; left: 0; width: 100%; height: 100%;
  background: radial-gradient(circle at 30% 30%, rgba(255,255,255,0.9), transparent 70%);
  border-radius: 50%;
  box-shadow: inset 0 0 10rpx rgba(0,0,0,0.05);
  z-index: 10;
  pointer-events: none;
}

.stat-info {
  text-align: center;
}

.stat-label {
  font-size: 22rpx;
  color: #94A3B8;
  display: block;
  margin-bottom: 4rpx;
}

.stat-num {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  font-family: 'SF Mono', 'Menlo', sans-serif;
  margin-right: 4rpx;
}

.stat-target {
  font-size: 22rpx;
  color: #CBD5E1;
}

/* 5. Actions Grid (2x2) */
.actions-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.action-card {
  position: relative;
  height: 140rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.05); /* Very subtle shadow */
  border: 1rpx solid rgba(241, 245, 249, 1);
  transition: transform 0.15s ease;
  overflow: hidden;
}

.action-card:active {
  transform: scale(0.98);
}

.action-content {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
  width: 100%;
}

.action-label {
  font-size: 32rpx; /* Slightly larger text */
  font-weight: 500;
  color: #475569; /* Slate-600 */
  letter-spacing: 2rpx; /* Elegant spacing */
}

/* Primary Card (拍一拍) - Soft Colorful Gradient */
.action-card.primary {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%); /* Soft Peach/Pink */
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.25);
}

.action-card.primary .action-label {
  color: #881337; /* Rose-900 */
  font-weight: 600;
}

/* Internal Glow for Primary Card */
.action-glow {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.3) 0%, transparent 60%);
  z-index: 1;
  pointer-events: none;
}

/* 6. AI Banner */
.ai-floating-bar {
  position: fixed;
  bottom: 40rpx;
  left: 32rpx;
  right: 32rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  gap: 16rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  z-index: 100;
}

.ai-bar-icon {
  font-size: 32rpx;
}

.ai-bar-text {
  font-size: 24rpx;
  color: #475569;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* Animations */
.animate-fade-in {
  animation: fadeIn 0.8s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
