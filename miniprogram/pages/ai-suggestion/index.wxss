/* pages/ai-suggestion/index.wxss */

/* ===== 全局基调 V5: 淡绿雅致 (Pale Green Elegant) ===== */
.page-container {
  min-height: 100vh;
  /* 极淡的薄荷绿渐变 */
  background: linear-gradient(180deg, #F2FBF5 0%, #FFFFFF 100%);
  padding: 40rpx 32rpx 100rpx;
  box-sizing: border-box;
  color: #2F3E33; /* 深绿灰，比纯黑更柔和 */
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  -webkit-font-smoothing: antialiased;
}

/* 玻璃卡片通用样式 */
.glass-card {
  background: rgba(255, 255, 255, 0.75); /* 稍微提高不透明度 */
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  /* 极淡的绿色阴影 */
  box-shadow: 0 10rpx 30rpx rgba(46, 125, 50, 0.03);
  border-radius: 32rpx;
}

/* 头部 */
.header-section {
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  padding: 0 10rpx;
}
.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 300;
  color: #1B5E20; /* 深森林绿 */
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}
.page-desc {
  font-size: 26rpx;
  color: #557C58; /* 中灰绿 */
  font-weight: 300;
}

/* 加载 */
.loading-wrapper {
  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}
.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #E8F5E9;
  border-top-color: #66BB6A; /* 鲜亮一点的绿 */
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
.loading-text {
  font-size: 26rpx;
  color: #81C784;
}
@keyframes spin { to { transform: rotate(360deg); } }

/* 区块通用 */
.section-container {
  margin-bottom: 50rpx;
}
.section-header {
  margin-bottom: 24rpx;
  padding: 0 10rpx;
}
.row-between {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #2E7D32; /* 标题绿 */
  letter-spacing: 1rpx;
}
.link-text {
  font-size: 24rpx;
  color: #66BB6A;
}

/* 智能建议 (Organic Note Style) */
.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx; /* 增加间距 */
}
.suggestion-item {
  padding: 40rpx; /* 更加宽敞 */
  position: relative;
  transition: all 0.2s ease;
  background: rgba(255, 255, 255, 0.85); /* 提高不透明度，像纸张 */
}
.suggestion-item:active {
  transform: scale(0.99);
  background: rgba(255, 255, 255, 0.95);
}

/* 顶部指示条 */
.note-indicator {
  width: 40rpx;
  height: 6rpx;
  border-radius: 6rpx;
  margin-bottom: 24rpx; /* 与标题拉开距离 */
}
.note-indicator.success { background: #66BB6A; box-shadow: 0 2rpx 10rpx rgba(102, 187, 106, 0.3); }
.note-indicator.warning { background: #FCD34D; box-shadow: 0 2rpx 10rpx rgba(252, 211, 77, 0.3); }
.note-indicator.error { background: #F87171; box-shadow: 0 2rpx 10rpx rgba(248, 113, 113, 0.3); }
.note-indicator.info { background: #A5D6A7; box-shadow: 0 2rpx 10rpx rgba(165, 214, 167, 0.3); }

.note-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.suggestion-title {
  font-size: 32rpx; /* 标题加大 */
  font-weight: 500;
  color: #1B5E20;
  letter-spacing: 1rpx;
}
.suggestion-body {
  font-size: 28rpx;
  color: #526756;
  line-height: 1.7; /* 增加行高，提升阅读感 */
  text-align: justify;
}

/* 仪表盘 */
.dashboard-card {
  padding: 40rpx;
}
.data-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
}
.data-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}
.divider {
  width: 1rpx;
  height: 60rpx;
  background: #E8F5E9;
  align-self: center;
}

.label {
  font-size: 24rpx;
  color: #8D9E90;
  font-weight: 300;
}
.value {
  font-size: 36rpx;
  font-weight: 400; 
  color: #2F3E33;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
}
.unit {
  font-size: 22rpx;
  color: #B0C4B4;
}
.value-small {
  font-size: 26rpx;
  color: #526756;
}

/* 状态小点 */
.status-dot {
  width: 8rpx; height: 8rpx;
  border-radius: 50%;
  margin-top: 4rpx;
  background: #E8F5E9;
}
.status-dot.good { background: #66BB6A; }
.status-dot.warn { background: #FCD34D; }

.progress-section {
  background: rgba(232, 245, 233, 0.4); /* 极淡的绿底 */
  padding: 24rpx;
  border-radius: 20rpx;
}
.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.progress-bar-bg {
  height: 6rpx;
  background: #E8F5E9;
  border-radius: 6rpx;
  overflow: hidden;
}
.progress-bar-fill {
  height: 100%;
  background: #66BB6A; /* 主题绿 */
  border-radius: 6rpx;
}

/* 推荐食谱 */
.recipes-scroll {
  display: flex;
  gap: 24rpx;
  padding-bottom: 20rpx;
}
.recipe-card {
  width: 300rpx;
  flex-shrink: 0;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.recipe-img {
  width: 100%;
  height: 200rpx;
  background: #E8F5E9;
}
.recipe-content {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.recipe-name {
  font-size: 28rpx;
  color: #2F3E33;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.recipe-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}
.meta-text {
  font-size: 22rpx;
  color: #8D9E90;
}
.meta-dot {
  font-size: 20rpx;
  color: #C8E6C9;
}
