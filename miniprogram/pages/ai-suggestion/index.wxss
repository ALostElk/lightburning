/* pages/ai-suggestion/index.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0F4FF 0%, #F5F5F5 100%);
  padding: 20rpx 20rpx 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 80vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #E0E7FF;
  border-top-color: #667EEA;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* AI头部 */
.ai-header {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.ai-avatar {
  width: 100rpx;
  height: 100rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.ai-intro {
  flex: 1;
}

.ai-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.ai-subtitle {
  display: block;
  font-size: 24rpx;
  opacity: 0.9;
}

/* 通用区块标题 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 建议区块 */
.suggestions-section {
  margin-bottom: 24rpx;
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.suggestion-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border-left: 6rpx solid #ccc;
}

.suggestion-card.severity-success {
  border-left-color: #51CF66;
}

.suggestion-card.severity-warning {
  border-left-color: #FFB84D;
}

.suggestion-card.severity-error {
  border-left-color: #FF6B6B;
}

.suggestion-card.severity-info {
  border-left-color: #4DABF7;
}

.suggestion-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.suggestion-icon {
  font-size: 40rpx;
}

.severity-badge {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.severity-badge.severity-success {
  background: #E8F5E9;
  color: #2E7D32;
}

.severity-badge.severity-warning {
  background: #FFF3E0;
  color: #E65100;
}

.severity-badge.severity-error {
  background: #FFEBEE;
  color: #C62828;
}

.severity-badge.severity-info {
  background: #E3F2FD;
  color: #1565C0;
}

.suggestion-message {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

/* 统计区块 */
.stats-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-top: 20rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 16rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 4rpx;
}

.stat-unit {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #E9ECEF;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-fill {
  height: 100%;
  transition: width 0.3s ease;
  border-radius: 4rpx;
}

.stat-percentage {
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
}

/* 推荐食谱区块 */
.recipes-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.recipes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.recipe-mini-card {
  background: #F8F9FA;
  border-radius: 12rpx;
  overflow: hidden;
}

.recipe-mini-image {
  width: 100%;
  height: 200rpx;
}

.recipe-mini-info {
  padding: 16rpx;
}

.recipe-mini-name {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ai-reason {
  display: block;
  font-size: 22rpx;
  color: #667EEA;
  line-height: 1.4;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}

.recipe-mini-nutrition {
  display: flex;
  gap: 12rpx;
}

.mini-nutrition-item {
  font-size: 22rpx;
  color: #666;
}

.btn-view-more {
  width: 100%;
  background: #fff;
  color: #667EEA;
  border: 2rpx solid #667EEA;
  border-radius: 50rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

/* 详细分析区块 */
.detail-analysis-section {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.detail-analysis-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.toggle-icon {
  font-size: 24rpx;
  color: #999;
}

.detail-analysis-content {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.analysis-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #F8F9FA;
}

.analysis-item:last-child {
  border-bottom: none;
}

.analysis-label {
  font-size: 28rpx;
  color: #666;
}

.analysis-value {
  font-size: 32rpx;
  font-weight: 700;
}

.analysis-value.deficit {
  color: #FFB84D;
}

.analysis-value.surplus {
  color: #51CF66;
}

/* 刷新按钮 */
.refresh-section {
  display: flex;
  justify-content: center;
}

.btn-refresh {
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #667EEA;
  border-radius: 50rpx;
  padding: 20rpx 48rpx;
  font-size: 28rpx;
  color: #667EEA;
}

.refresh-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

