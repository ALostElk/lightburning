/* pages/profile/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  padding: 20rpx 30rpx 40rpx;
  color: #334155;
}

/* 标题 */
.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: 300;
  color: #334155;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #94A3B8;
  line-height: 1.5;
}

/* 卡片 */
.card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20px);
  border-radius: 40rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 20rpx 40rpx rgba(148, 163, 184, 0.05);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.card-goal {
  border: 1rpx solid rgba(173, 216, 230, 0.8);
  border-top: 4rpx solid #4A90E2;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.15);
  background: linear-gradient(180deg, rgba(219, 234, 254, 0.6) 0%, rgba(255, 255, 255, 0.6) 100%);
}

.card-health {
  border-top: 4rpx solid #9B59B6;
  box-shadow: 0 4rpx 20rpx rgba(155, 89, 182, 0.15);
}

.card-macro {
  border-top: 4rpx solid #51CF66;
  box-shadow: 0 4rpx 20rpx rgba(81, 207, 102, 0.15);
}

.card-basic {
  border: 1rpx solid rgba(255, 192, 203, 0.8);
  border-top: 4rpx solid #FF6B6B;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 107, 0.15);
  background: linear-gradient(180deg, rgba(252, 231, 243, 0.6) 0%, rgba(255, 255, 255, 0.6) 100%);
}

.card-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 30rpx;
  position: relative;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  min-height: 88rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.2s ease;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item:active {
  background: rgba(255, 107, 107, 0.02);
  margin: 0 -36rpx;
  padding-left: 36rpx;
  padding-right: 36rpx;
  border-radius: 12rpx;
}

.card-basic .form-item:active {
  background: rgba(255, 107, 107, 0.02);
}

.card-goal .form-item:active {
  background: rgba(74, 144, 226, 0.02);
}

.label {
  flex: 0 0 180rpx;
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
}

.input {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #334155;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
  transition: all 0.2s ease;
  box-shadow: 0 2rpx 8rpx rgba(148, 163, 184, 0.05);
}

.input:focus {
  background: #fff;
  border-color: #94A3B8;
  box-shadow: 0 0 0 4rpx rgba(148, 163, 184, 0.1);
}

.picker {
  flex: 1;
  padding: 0 24rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  color: #334155;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
  transition: all 0.2s ease;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(148, 163, 184, 0.05);
}

.picker:active {
  background: #fff;
  border-color: #94A3B8;
  box-shadow: 0 0 0 4rpx rgba(148, 163, 184, 0.1);
}

.unit {
  flex: 0 0 60rpx;
  text-align: right;
  font-size: 26rpx;
  color: #94A3B8;
  font-weight: 500;
  margin-left: 12rpx;
}



/* 按钮组 */
.button-group {
  display: flex;
  gap: 24rpx;
  margin-top: 50rpx;
  padding-bottom: 40rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.08);
}

.btn-primary {
  background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%);
  color: #881337;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 158, 0.25);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 158, 0.2);
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.8);
  color: #475569;
  border: 1rpx solid rgba(148, 163, 184, 0.2);
}

.btn-secondary:active {
  background: #fff;
  border-color: rgba(148, 163, 184, 0.3);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(148, 163, 184, 0.1);
}


