/* 手动输入页面样式 - 优化版 */

.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5EB 0%, #FEF0E3 15%, #F8F4FF 50%, #EEF4FF 100%);
  position: relative;
}

/* 背景装饰 */
.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #FF8C42 0%, #FF6B35 50%, #FF9A56 100%);
  border-radius: 0 0 60rpx 60rpx;
  z-index: 0;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  position: relative;
  z-index: 1;
}

.back-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #fff;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

.header-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.header-placeholder {
  width: 70rpx;
}

.content {
  padding: 20rpx 30rpx;
  padding-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

/* 信息卡片 */
.info-card {
  background: rgba(255,255,255,0.95);
  border-radius: 36rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.06);
  border: 2rpx solid rgba(255,255,255,0.8);
}

.food-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.food-emoji {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(145deg, #FFF7ED 0%, #FFEDD5 100%);
  border-radius: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(255,107,0,0.15);
}

.food-name-section {
  flex: 1;
}

.name-input {
  width: 100%;
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  border-bottom: 4rpx solid #E5E7EB;
  padding-bottom: 12rpx;
  transition: all 0.2s ease;
}

.name-input:focus {
  border-bottom-color: #FF6B00;
}

.food-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
  display: block;
}

.food-category {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

/* 基础营养 */
.base-nutrition {
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border-radius: 24rpx;
  padding: 24rpx;
}

.base-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.base-values {
  display: flex;
  justify-content: space-between;
  text-align: center;
}

.base-item {
  display: flex;
  flex-direction: column;
  padding: 12rpx 16rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 16rpx;
  min-width: 120rpx;
}

.base-value {
  font-size: 32rpx;
  font-weight: 800;
}

.base-value.orange {
  background: linear-gradient(135deg, #FF6B35, #FF9040);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.base-value.blue { color: #2563EB; }
.base-value.amber { color: #D97706; }
.base-value.purple { color: #7C3AED; }

.base-unit {
  font-size: 20rpx;
  color: #888;
  margin-top: 4rpx;
}

/* 手动输入营养 */
.manual-nutrition {
  margin-top: 24rpx;
}

.manual-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.manual-inputs {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.manual-input-item {
  display: flex;
  flex-direction: column;
}

.input-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.nutrition-input {
  padding: 18rpx 20rpx;
  background: linear-gradient(135deg, #F9FAFB 0%, #F3F4F6 100%);
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

.nutrition-input:focus {
  border-color: #FF6B00;
  background: #fff;
  box-shadow: 0 0 0 4rpx rgba(255,107,0,0.1);
}

/* 份量卡片 */
.amount-card {
  background: rgba(255,255,255,0.95);
  border-radius: 36rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.06);
  border: 2rpx solid rgba(255,255,255,0.8);
}

.amount-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.amount-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.amount-display {
  display: flex;
  align-items: baseline;
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

.amount-value {
  font-size: 48rpx;
  font-weight: 800;
  background: linear-gradient(135deg, #FF6B35, #FF9040);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.amount-unit-text {
  font-size: 24rpx;
  color: #FF8C42;
  margin-left: 8rpx;
  font-weight: 600;
}

/* 滑动条容器 */
.slider-container {
  position: relative;
  height: 120rpx;
  margin-bottom: 32rpx;
  padding: 0 30rpx;
}

/* 滑动轨道 */
.slider-track {
  position: absolute;
  top: 40rpx;
  left: 30rpx;
  right: 30rpx;
  height: 20rpx;
  background: linear-gradient(180deg, #E8EAED 0%, #F5F6F8 50%, #ECEEF0 100%);
  border-radius: 10rpx;
  box-shadow: inset 0 2rpx 6rpx rgba(0,0,0,0.1),
              inset 0 -1rpx 3rpx rgba(255,255,255,0.8);
}

/* 滑动填充 */
.slider-fill {
  height: 100%;
  background: linear-gradient(90deg, #FBBF24, #FF9040, #FF6B35);
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(255,107,0,0.4);
  transition: width 0.05s ease-out;
}

/* 原生滑动条 - 隐藏样式 */
.amount-slider {
  position: absolute;
  top: 20rpx;
  left: 0;
  right: 0;
  width: 100%;
  margin: 0;
  z-index: 10;
}

/* 自定义滑块 */
.slider-thumb {
  position: absolute;
  top: 16rpx;
  transform: translateX(-50%);
  z-index: 5;
  pointer-events: none;
  transition: left 0.05s ease-out;
}

.thumb-icon {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(145deg, #FFFFFF 0%, #F8F8F8 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  box-shadow: 0 6rpx 20rpx rgba(255,107,0,0.3),
              0 2rpx 8rpx rgba(0,0,0,0.1),
              inset 0 2rpx 4rpx rgba(255,255,255,0.9);
  border: 4rpx solid #FF8C42;
  animation: thumbPulse 2s ease-in-out infinite;
}

@keyframes thumbPulse {
  0%, 100% {
    box-shadow: 0 6rpx 20rpx rgba(255,107,0,0.3),
                0 2rpx 8rpx rgba(0,0,0,0.1),
                inset 0 2rpx 4rpx rgba(255,255,255,0.9);
  }
  50% {
    box-shadow: 0 8rpx 28rpx rgba(255,107,0,0.45),
                0 4rpx 12rpx rgba(0,0,0,0.15),
                inset 0 2rpx 4rpx rgba(255,255,255,0.9),
                0 0 0 8rpx rgba(255,107,0,0.1);
  }
}

/* 刻度标记 */
.slider-marks {
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 30rpx;
  display: flex;
  justify-content: space-between;
}

.mark {
  font-size: 22rpx;
  color: #999;
}

/* 快捷份量按钮 */
.quick-amounts {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 28rpx;
}

.quick-amount {
  padding: 18rpx 32rpx;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border: 2rpx solid #E2E8F0;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.2s ease;
}

.quick-amount.active {
  background: linear-gradient(135deg, #FF8C42 0%, #FF6B35 100%);
  border-color: transparent;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255,107,0,0.3);
}

/* 精确调整区域 */
.fine-adjust {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #F3F4F6;
}

.adjust-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  transition: all 0.2s ease;
}

.adjust-btn:active {
  transform: scale(0.9);
}

.adjust-btn.minus {
  background: linear-gradient(145deg, #FEE2E2 0%, #FECACA 100%);
  color: #DC2626;
}

.adjust-btn.minus-small {
  background: linear-gradient(145deg, #FEF2F2 0%, #FEE2E2 100%);
  color: #EF4444;
}

.adjust-btn.plus-small {
  background: linear-gradient(145deg, #ECFDF5 0%, #D1FAE5 100%);
  color: #059669;
}

.adjust-btn.plus {
  background: linear-gradient(145deg, #D1FAE5 0%, #A7F3D0 100%);
  color: #047857;
}

.current-amount {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border: 2rpx solid #E5E7EB;
  border-radius: 20rpx;
  padding: 0 20rpx;
  min-width: 160rpx;
}

.amount-input-field {
  width: 100rpx;
  height: 72rpx;
  font-size: 36rpx;
  font-weight: 700;
  text-align: center;
  color: #333;
}

.g-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

/* 餐次卡片 */
.meal-card {
  background: rgba(255,255,255,0.95);
  border-radius: 36rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.06);
  border: 2rpx solid rgba(255,255,255,0.8);
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meal-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.meal-btn {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255,107,0,0.1);
}

.meal-btn text:first-child {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF6B00;
  margin-right: 12rpx;
}

.arrow {
  font-size: 20rpx;
  color: #FF8C42;
}

.meal-options {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.meal-option {
  flex: 1;
  padding: 18rpx;
  text-align: center;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border: 2rpx solid #E2E8F0;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
  transition: all 0.2s ease;
}

.meal-option.active {
  background: linear-gradient(135deg, #FF8C42 0%, #FF6B35 100%);
  border-color: transparent;
  color: #fff;
  box-shadow: 0 4rpx 16rpx rgba(255,107,0,0.3);
}

/* 结果卡片 - 3D立体效果 */
.result-card {
  background: linear-gradient(145deg, #FF8C42 0%, #FF6B35 50%, #F7931E 100%);
  border-radius: 40rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  color: #fff;
  box-shadow: 0 20rpx 60rpx rgba(255,107,0,0.35),
              0 8rpx 24rpx rgba(255,107,0,0.25),
              inset 0 4rpx 8rpx rgba(255,255,255,0.2);
  position: relative;
  overflow: hidden;
}

.result-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(255,255,255,0.15) 0%, transparent 100%);
  border-radius: 40rpx 40rpx 0 0;
}

.result-header {
  text-align: center;
  margin-bottom: 16rpx;
  position: relative;
}

.result-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.result-calories {
  text-align: center;
  margin-bottom: 32rpx;
  position: relative;
}

.result-value {
  font-size: 88rpx;
  font-weight: 800;
  text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
}

.result-unit {
  font-size: 32rpx;
  opacity: 0.85;
  margin-left: 8rpx;
}

.result-macros {
  display: flex;
  justify-content: space-around;
  position: relative;
}

.result-macro {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(255,255,255,0.2);
  border-radius: 24rpx;
  padding: 24rpx 36rpx;
  backdrop-filter: blur(10rpx);
}

.macro-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.macro-value {
  font-size: 32rpx;
  font-weight: 700;
}

.macro-name {
  font-size: 20rpx;
  opacity: 0.85;
  margin-top: 4rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  padding: 32rpx;
  background: linear-gradient(145deg, #1F2937 0%, #111827 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 28rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.2),
              inset 0 2rpx 4rpx rgba(255,255,255,0.1);
  transition: all 0.2s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.15);
}

.submit-btn[disabled] {
  opacity: 0.5;
  box-shadow: none;
}
