/**
 * 拍照识别页面 - diet-camera/index
 * 设计语言: Daylight Futurism (日光未来主义)
 * 全屏沉浸式相机界面 - "日光全息界面"
 */

/* ============ 全局容器 ============ */
.camera-page {
  width: 100vw;
  height: 100vh;
  position: relative;
  background: #000; /* 相机加载前的底色 */
  overflow: hidden;
}

/* ============ 返回按钮 ============ */
.nav-back-btn {
  position: fixed;
  left: 32rpx;
  z-index: 100;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border-radius: 50%;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.2s ease;
}

.nav-back-btn:active {
  background: rgba(0, 0, 0, 0.6);
  transform: scale(0.95);
}

.back-arrow {
  font-size: 48rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
  line-height: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  text-align: center;
  margin: 0;
  padding: 0;
}

.fullscreen-camera {
  width: 100%;
  height: 100%;
  z-index: 1;
}

/* ============ 扫描框 HUD ============ */
.scan-area {
  position: absolute;
  top: 20%; /* 稍微上移，留出下方空间给提示语 */
  left: 10%;
  width: 80%;
  height: 40%; /* 方形取景框 */
  z-index: 10;
}

/* 扫描角标：发光的白色/淡橙色 */
.scan-corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border-color: rgba(255, 255, 255, 0.9);
  border-style: solid;
  border-width: 0;
  box-shadow: 0 0 15rpx rgba(255, 255, 255, 0.5); /* 光晕 */
}

.top-left { 
  border-top-width: 6rpx; 
  border-left-width: 6rpx; 
  top: 0; 
  left: 0; 
  border-radius: 12rpx 0 0 0; 
}

.top-right { 
  border-top-width: 6rpx; 
  border-right-width: 6rpx; 
  top: 0; 
  right: 0; 
  border-radius: 0 12rpx 0 0; 
}

.bottom-left { 
  border-bottom-width: 6rpx; 
  border-left-width: 6rpx; 
  bottom: 0; 
  left: 0; 
  border-radius: 0 0 0 12rpx; 
}

.bottom-right { 
  border-bottom-width: 6rpx; 
  border-right-width: 6rpx; 
  bottom: 0; 
  right: 0; 
  border-radius: 0 0 12rpx 0; 
}

/* 扫描线动画 */
.scan-line {
  position: absolute;
  width: 100%;
  height: 4rpx;
  background: linear-gradient(90deg, transparent 0%, #FF6B35 50%, transparent 100%);
  animation: scan-move 2.5s cubic-bezier(0.4, 0, 0.2, 1) infinite;
  box-shadow: 0 0 10rpx rgba(255, 107, 53, 0.6);
}

@keyframes scan-move {
  0% { top: 0; opacity: 0; }
  10% { opacity: 1; }
  90% { opacity: 1; }
  100% { top: 100%; opacity: 0; }
}

/* ============ 引导与搜索区 (新增) ============ */
.guide-area {
  position: absolute;
  top: 62%; /* 紧贴扫描框下方 */
  left: 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 20;
}

.guide-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
  letter-spacing: 2rpx;
}

/* ============ 底部控制台 (Glass Console) ============ */
.bottom-console {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 260rpx; /* 减小高度，避免遮挡 */
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 30;
  
  /* 渐变遮罩，不再用实体背景 */
  background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.8) 100%);
  
  display: flex;
  justify-content: space-around;
  align-items: center;
}

/* 次要按钮 (相册/取消) - 纯文字样式 */
.control-btn.text-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2); /* 磨砂玻璃 */
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.2s;
}

.control-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.95);
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
}

.btn-label,
.btn-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 500;
}

/* ============ 能量快门 (Core Element) ============ */
.shutter-btn-wrapper {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

/* 外环 - 玻璃质感 */
.shutter-outer-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  box-shadow: 0 0 20rpx rgba(255, 255, 255, 0.2);
}

/* 内核 - 日光能量球 (呼应主页) */
.shutter-inner-core {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF9A9E 0%, #FF6B35 100%); /* 品牌渐变 */
  box-shadow: 
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.5), /* 顶部高光 */
    0 8rpx 20rpx rgba(255, 107, 53, 0.4); /* 弥散光 */
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

/* 点击时的能量收缩效果 */
.shutter-btn-wrapper:active .shutter-inner-core {
  transform: scale(0.85);
  background: #FF6B35;
  box-shadow: 0 0 40rpx rgba(255, 107, 53, 0.8); /* 能量爆发 */
}

/* ============ Loading 层 ============ */
.analyzing-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 200;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.overlay-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -2;
}

.overlay-blur {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  background: rgba(0, 0, 0, 0.6); /* 半透黑遮罩 */
  backdrop-filter: blur(15px);     /* 强高斯模糊 */
  -webkit-backdrop-filter: blur(15px);
}

.radar-scan {
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid #FF6B35;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
  z-index: 1;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.analyzing-text {
  color: #fff;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  z-index: 1;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.5);
}

/* ============ 结果层容器 ============ */
.result-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
}

/* 背景模糊处理 */
.result-bg {
