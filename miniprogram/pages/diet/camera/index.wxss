/**
 * 拍照识别页面 - diet-camera/index
 * 设计语言: Daylight Futurism (日光未来主义)
 * 1:1 复刻 React 参考项目样式
 */

/* ============ 页面容器 ============ */
.page-container {
  min-height: 100vh;
  /* 继承全局背景，不再单独设置 */
  background: transparent;
}

/* ============ 自定义导航栏 ============ */
.nav-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0.85);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.6);
}

.nav-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
}

.nav-back {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.nav-back:active {
  transform: scale(0.92);
  background: rgba(255, 107, 53, 0.1);
}

.back-icon {
  font-size: 48rpx;
  color: #374151;
  font-weight: 300;
  line-height: 1;
  margin-top: -4rpx;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1F2937;
  letter-spacing: 1rpx;
}

.nav-placeholder {
  width: 72rpx;
}

/* ============ 主内容区 ============ */
.main-content {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* ============ 上传区域 ============ */
.upload-section {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.upload-card-content {
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  background: linear-gradient(135deg, #F5F3FF 0%, #EDE9FE 100%);
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 92, 246, 0.08);
}

/* 上传图标 */
.upload-icon-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-icon-bg {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.15) 0%, rgba(255, 142, 83, 0.15) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.upload-icon {
  font-size: 56rpx;
}

/* 脉冲光环动画 */
.pulse-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  border: 4rpx solid rgba(255, 107, 53, 0.3);
  border-radius: 50%;
  animation: pulse-expand 2s ease-out infinite;
}

.pulse-ring-2 {
  animation-delay: 1s;
}

@keyframes pulse-expand {
  0% {
    width: 120rpx;
    height: 120rpx;
    opacity: 1;
  }
  100% {
    width: 200rpx;
    height: 200rpx;
    opacity: 0;
  }
}

/* 上传文字 */
.upload-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  text-align: center;
}

.upload-title {
  font-size: 40rpx;
  font-weight: 800;
  color: #1F2937;
  letter-spacing: 2rpx;
}

.upload-desc {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
  max-width: 500rpx;
}

/* 操作按钮 */
.upload-actions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 16rpx;
}

.action-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 36rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  overflow: hidden;
}

.action-btn.primary {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  color: #FFFFFF;
  box-shadow: 0 16rpx 40rpx rgba(255, 107, 53, 0.35);
}

.action-btn.primary:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
}

.action-btn-inner {
  display: flex;
  align-items: center;
  gap: 16rpx;
  z-index: 1;
}

.btn-glow {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  animation: shine 3s infinite;
}

@keyframes shine {
  0% { left: -100%; }
  50%, 100% { left: 100%; }
}

/* 蓝色灯光效果 */
.btn-glow.blue {
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  animation: shine-blue 3s infinite;
}

@keyframes shine-blue {
  0% { left: -100%; }
  50%, 100% { left: 100%; }
}

.action-btn.secondary {
  background: linear-gradient(135deg, #3B82F6 0%, #60A5FA 100%);
  color: #FFFFFF;
  box-shadow: 0 16rpx 40rpx rgba(59, 130, 246, 0.35);
}

.action-btn.secondary:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.4);
}

.action-icon {
  font-size: 36rpx;
}

.action-text {
  font-size: 30rpx;
}

/* 提示区域 */
.tips-section {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 0 16rpx;
}

.tip-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.tip-icon {
  font-size: 28rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #6B7280;
}

/* ============ 结果区域 ============ */
.result-section {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 预览卡片 */
.preview-wrapper {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 400rpx;
  display: block;
}

/* 分析中遮罩 */
.analyzing-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(8rpx);
  display: flex;
  align-items: center;
  justify-content: center;
}

.analyzing-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.analyzing-spinner {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.spinner-ring {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 6rpx solid rgba(255, 255, 255, 0.2);
  border-top-color: #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.spinner-icon {
  font-size: 40rpx;
  z-index: 1;
}

.analyzing-text {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.analyzing-progress {
  width: 200rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-bar {
  width: 60%;
  height: 100%;
  background: linear-gradient(90deg, #FF6B35, #FF8E53);
  border-radius: 4rpx;
  animation: progress 2s ease-in-out infinite;
}

@keyframes progress {
  0% { width: 0%; }
  50% { width: 80%; }
  100% { width: 100%; }
}

/* 重拍按钮 */
.retake-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.retake-btn:active {
  transform: scale(0.9);
  background: rgba(255, 77, 79, 0.8);
}

.retake-icon {
  font-size: 32rpx;
  color: #FFFFFF;
  font-weight: 300;
}

/* 图片标签 */
.image-badge {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(82, 196, 26, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
}

.badge-icon {
  font-size: 24rpx;
  color: #FFFFFF;
}

.badge-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* ============ 错误提示 ============ */
.error-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(254, 202, 202, 0.8) 0%, rgba(254, 226, 226, 0.8) 100%);
  border: 2rpx solid rgba(252, 165, 165, 0.6);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.error-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.error-icon {
  font-size: 32rpx;
}

.error-text {
  font-size: 28rpx;
  color: #DC2626;
  font-weight: 500;
}

.error-action {
  padding: 12rpx 24rpx;
  background: rgba(220, 38, 38, 0.1);
  border-radius: 12rpx;
}

.error-action text {
  font-size: 26rpx;
  color: #DC2626;
  font-weight: 600;
}

/* ============ 识别结果卡片 ============ */
.results-content {
  padding: 24rpx;
  background: linear-gradient(135deg, #ECFEFF 0%, #CFFAFE 100%);
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(6, 182, 212, 0.08);
}

.results-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.results-title-group {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.results-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.results-badge {
  padding: 6rpx 16rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  border-radius: 20rpx;
}

.results-badge text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.results-subtitle {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 食物列表 */
.food-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.food-item {
  background: rgba(249, 250, 251, 0.8);
  border: 3rpx solid #E5E7EB;
  border-radius: 20rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.food-item.selected {
  background: linear-gradient(135deg, rgba(255, 251, 235, 0.9) 0%, rgba(254, 243, 199, 0.9) 100%);
  border-color: #FDBA74;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.1);
}

.food-header {
  display: flex;
  align-items: center;
  padding: 24rpx;
  gap: 16rpx;
}

/* 复选框 */
.food-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 4rpx solid #D1D5DB;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.food-checkbox.checked {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  border-color: #FF6B35;
}

.check-icon {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 700;
}

/* 食物信息 */
.food-info {
  flex: 1;
  min-width: 0;
}

.food-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 6rpx;
}

.food-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
}

.confidence-tag {
  padding: 4rpx 12rpx;
  background: rgba(209, 250, 229, 0.8);
  border-radius: 8rpx;
}

.confidence-tag text {
  font-size: 20rpx;
  color: #059669;
  font-weight: 600;
}

.food-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.food-category,
.food-cal-base {
  font-size: 24rpx;
  color: #6B7280;
}

.food-dot {
  color: #D1D5DB;
}

/* 热量显示 */
.food-calories {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.cal-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #FF6B35;
  font-family: 'SF Mono', 'Menlo', monospace;
  line-height: 1;
}

.cal-unit {
  font-size: 20rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

/* ============ 份量调整区域 ============ */
.amount-section {
  padding: 20rpx 24rpx;
  border-top: 2rpx solid rgba(253, 186, 116, 0.3);
  background: rgba(255, 255, 255, 0.5);
}

.amount-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.amount-label {
  font-size: 26rpx;
  color: #6B7280;
  font-weight: 500;
}

.amount-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.amount-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.9);
  border: 2rpx solid #E5E7EB;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.amount-btn:active {
  transform: scale(0.9);
  background: rgba(255, 107, 53, 0.1);
  border-color: #FF6B35;
}

.amount-btn text {
  font-size: 32rpx;
  color: #374151;
  font-weight: 500;
  line-height: 1;
}

.amount-display {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  min-width: 100rpx;
  justify-content: center;
}

.amount-value {
  font-size: 36rpx;
  font-weight: 800;
  color: #1F2937;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.amount-unit {
  font-size: 24rpx;
  color: #6B7280;
}

/* 营养详情 */
.nutrition-details {
  display: flex;
  justify-content: space-between;
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 12rpx 16rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 12rpx;
  flex: 1;
  margin: 0 6rpx;
}

.nutrition-item:first-child {
  margin-left: 0;
}

.nutrition-item:last-child {
  margin-right: 0;
}

.nutrition-label {
  font-size: 22rpx;
  color: #9CA3AF;
}

.nutrition-value {
  font-size: 26rpx;
  font-weight: 700;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.nutrition-item.protein .nutrition-value {
  color: #FF6B35;
}

.nutrition-item.carbs .nutrition-value {
  color: #F59E0B;
}

.nutrition-item.fat .nutrition-value {
  color: #3D9BFF;
}

/* ============ 餐次选择卡片 ============ */
.meal-content {
  padding: 24rpx;
  background: linear-gradient(135deg, #FFFBEB 0%, #FEF3C7 100%);
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(251, 191, 36, 0.08);
}

.meal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.meal-label {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
}

.meal-selector {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 24rpx;
  background: rgba(243, 244, 246, 0.8);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.meal-selector:active {
  background: rgba(255, 107, 53, 0.1);
}

.meal-emoji {
  font-size: 28rpx;
}

.meal-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.meal-arrow {
  font-size: 32rpx;
  color: #9CA3AF;
  transform: rotate(90deg);
  transition: transform 0.3s ease;
}

.meal-arrow.up {
  transform: rotate(-90deg);
}

/* 餐次选项 */
.meal-options {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.04);
}

.meal-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 12rpx;
  background: rgba(243, 244, 246, 0.8);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.meal-option:active {
  transform: scale(0.95);
}

.meal-option.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  box-shadow: 0 8rpx 20rpx rgba(255, 107, 53, 0.3);
}

.option-emoji {
  font-size: 32rpx;
}

.option-name {
  font-size: 24rpx;
  font-weight: 600;
  color: #374151;
}

.meal-option.active .option-name {
  color: #FFFFFF;
}

/* ============ 摘要区域 ============ */
.summary-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.summary-content {
  padding: 24rpx;
  background: linear-gradient(135deg, #FFF1F2 0%, #FFE4E6 100%);
  border-radius: 28rpx;
  box-shadow: 0 8rpx 32rpx rgba(251, 113, 133, 0.08);
}

.summary-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.summary-left {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.summary-label {
  font-size: 26rpx;
  color: #6B7280;
}

.summary-count {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
}

.summary-right {
  display: flex;
  align-items: baseline;
  gap: 6rpx;
}

.summary-total {
  font-size: 48rpx;
  font-weight: 800;
  color: #FF6B35;
  font-family: 'SF Mono', 'Menlo', monospace;
  line-height: 1;
}

.summary-unit {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 营养汇总 */
.summary-macros {
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
  border-top: 2rpx solid rgba(0, 0, 0, 0.04);
}

.macro-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.macro-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.macro-dot.protein {
  background: #FF6B35;
}

.macro-dot.carbs {
  background: #F59E0B;
}

.macro-dot.fat {
  background: #3D9BFF;
}

.macro-text {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
}

/* ============ 手动搜索链接 ============ */
.manual-search {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 32rpx;
  margin-top: 16rpx;
}

.search-hint {
  font-size: 26rpx;
  color: #9CA3AF;
}

.search-link {
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 600;
}

.search-arrow {
  font-size: 24rpx;
  color: #FF6B35;
  transition: transform 0.2s ease;
}

.manual-search:active .search-arrow {
  transform: translateX(8rpx);
}

/* ============ 动画 ============ */
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 0.4s ease-out;
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-slide-up {
  animation: slide-up 0.5s ease-out;
}

@keyframes shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-6rpx); }
  20%, 40%, 60%, 80% { transform: translateX(6rpx); }
}

.animate-shake {
  animation: shake 0.5s ease-in-out;
}
