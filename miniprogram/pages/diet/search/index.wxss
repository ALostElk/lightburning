/* 食物搜索页面样式 - Daylight Futurism */

/* === 全局容器 === */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  display: flex;
  flex-direction: column;
}

/* === 顶部搜索区优化 === */
.search-header {
  padding: 20rpx 32rpx;
  padding-top: 20rpx; /* 额外下移，避免贴顶 */
  display: flex;
  align-items: center;
  gap: 24rpx;
  /* Sticky Header */
  position: sticky;
  z-index: 50;
  /* 背景优化：增加一点模糊，防止滑动时内容透得太乱 */
  background: rgba(245, 250, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

/* 复用返回按钮样式 (保持一致性) */
.nav-back-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.1);
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.nav-back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.8);
}

.back-arrow {
  font-size: 40rpx;
  color: #334155;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  text-align: center;
  margin: 0;
  padding: 0;
  margin-top: -6rpx;
}

/* 玻璃搜索胶囊 */
.search-capsule {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 1);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  box-shadow: 
    0 8rpx 20rpx rgba(148, 163, 184, 0.08),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 1);
  transition: all 0.3s ease;
}

/* 聚焦态：微弱橙色光晕 */
.search-capsule:focus-within {
  border-color: rgba(255, 107, 53, 0.4);
  box-shadow: 
    0 0 0 4rpx rgba(255, 107, 53, 0.1),
    0 8rpx 20rpx rgba(148, 163, 184, 0.08),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 1);
  background: #fff;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #334155;
  height: 100%;
  background: transparent;
}

.input-placeholder {
  color: #94A3B8;
  font-weight: 300;
}

.clear-btn {
  padding: 10rpx;
  color: #CBD5E1;
  font-size: 32rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.clear-btn:active {
  background: rgba(203, 213, 225, 0.2);
  color: #94A3B8;
}

/* CSS 放大镜图标 */
.search-icon-css {
  width: 24rpx;
  height: 24rpx;
  border: 3rpx solid #94A3B8;
  border-radius: 50%;
  position: relative;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.search-icon-css::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  width: 10rpx;
  height: 3rpx;
  background: #94A3B8;
  transform: rotate(45deg);
}

/* === 搜索结果列表 === */
.search-body {
  flex: 1;
  padding: 0 32rpx;
  box-sizing: border-box;
  width: 100%;
}

.result-list {
  padding-top: 20rpx;
  padding-bottom: 60rpx;
}

/* 空气卡片 */
.food-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  margin-bottom: 20rpx;
  
  /* 质感核心 */
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.03);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  
  transition: all 0.2s;
}

.food-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.9);
}

.food-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.food-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #334155;
}

.food-meta {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.cal-val {
  font-size: 32rpx;
  font-weight: 600;
  color: #FF6B35; /* 品牌橙 */
  font-family: 'SF Mono', monospace;
}

.cal-unit {
  font-size: 22rpx;
  color: #94A3B8;
}

/* 添加按钮圆圈 */
.add-btn-circle {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: rgba(255, 107, 53, 0.1); /* 极淡橙色底 */
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  flex-shrink: 0;
}

.plus-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
}

.plus-icon::before,
.plus-icon::after {
  content: '';
  position: absolute;
  background: #FF6B35;
  border-radius: 2rpx;
  transition: all 0.2s;
}

.plus-icon::before {
  width: 100%;
  height: 4rpx;
  top: 10rpx;
  left: 0;
}

.plus-icon::after {
  width: 4rpx;
  height: 100%;
  top: 0;
  left: 10rpx;
}

/* 激活态 */
.food-card:active .add-btn-circle {
  background: #FF6B35;
}

.food-card:active .plus-icon::before,
.food-card:active .plus-icon::after {
  background: #fff;
}

/* === 空状态容器调整 === */
.empty-state {
  padding-top: 40rpx; /* 减少留白，让内容靠上 */
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  box-sizing: border-box;
}

.empty-header {
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 28rpx;
  color: #64748B;
  letter-spacing: 2rpx;
}

/* === 餐次切换器 (Glass Pills) === */
.meal-tabs {
  display: inline-flex;
  gap: 16rpx;
  margin-bottom: 40rpx;
  background: rgba(255, 255, 255, 0.4);
  padding: 8rpx;
  border-radius: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
}

.meal-tab {
  padding: 12rpx 32rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #64748B;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  white-space: nowrap;
}

.meal-tab.active {
  background: #fff;
  color: #FF6B35;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.15);
}

/* === 常用网格 (Favorites Grid) === */
.favorites-grid-wrapper {
  width: 100%;
  box-sizing: border-box;
}

.favorites-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr); /* 双列布局 */
  gap: 24rpx;
  width: 100%;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

/* 动画：淡入 */
.animate-fade-in {
  animation: fadeIn 0.4s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* === 液态玻璃卡片 (Fav Card) === */
.fav-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  gap: 16rpx;

  /* 玻璃质感 */
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(12rpx);
  -webkit-backdrop-filter: blur(12rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.05);

  transition: all 0.2s;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  width: 100%;
}

.fav-card:active {
  transform: scale(0.96);
  background: rgba(255, 255, 255, 0.9);
}

.fav-emoji {
  font-size: 40rpx;
  /* 柔和背景衬托 Emoji */
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.fav-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  min-width: 0;
}

.fav-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #334155;
}

.fav-cal {
  font-size: 22rpx;
  color: #94A3B8;
}

/* 迷你添加按钮 */
.fav-add {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 107, 53, 0.1);
  color: #FF6B35;
  font-size: 32rpx;
  line-height: 48rpx;
  text-align: center;
  font-weight: 300;
  flex-shrink: 0;
  transition: all 0.2s ease;
}

.fav-card:active .fav-add {
  background: #FF6B35;
  color: #fff;
}

.no-fav {
  grid-column: span 2;
  text-align: center;
  padding: 40rpx;
  color: #CBD5E1;
  font-size: 26rpx;
}

.list-end {
  text-align: center;
  font-size: 22rpx;
  color: #CBD5E1;
  margin-top: 40rpx;
}

/* ============ 食物编辑弹窗 ============ */
.food-edit-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 200;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
}

.food-edit-modal.show {
  visibility: visible;
  opacity: 1;
}

.food-edit-content {
  width: 100%;
  /* 强磨砂玻璃 + 微渐变背景 (薄荷玻璃质感) */
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.98) 0%, rgba(236, 253, 245, 0.95) 100%);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-radius: 40rpx 40rpx 0 0;
  padding: 40rpx 32rpx calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  max-height: 80vh;
  overflow-y: auto;
  /* 增加边框和阴影，提升质感 */
  border: 1rpx solid rgba(16, 185, 129, 0.1);
  box-shadow: 0 -16rpx 48rpx rgba(16, 185, 129, 0.08);
}

.food-edit-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.food-edit-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #334155;
}

.food-edit-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #94A3B8;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.food-edit-close:active {
  background: rgba(16, 185, 129, 0.1);
  color: #10B981;
}

.food-edit-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.food-edit-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  text-align: center;
}

.slider-container {
  margin: 40rpx 0;
}

.slider-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #64748B;
}

/* === 核心数字 (Slider Value) - 加深颜色 === */
.slider-value {
  color: #059669; /* Emerald-600: 深邃的翡翠绿，对比度极高 */
  font-weight: 800; /* 加粗 */
  font-size: 56rpx; /* 加大字号 */
  font-family: 'SF Pro Display', sans-serif;
  text-shadow: 0 2rpx 10rpx rgba(5, 150, 105, 0.1); /* 微投影增加立体感 */
}

.amount-slider {
  width: 100%;
}

.calories-preview {
  display: flex;
  justify-content: space-between;
  /* 极淡的绿色半透背景 */
  background: rgba(236, 253, 245, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(16, 185, 129, 0.15);
  padding: 20rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.05);
}

.preview-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.p-label {
  font-size: 22rpx;
  color: #94A3B8;
}

/* === 营养数值 (Nutrient Values) - 清晰化 === */
.p-val {
  font-size: 36rpx; /* 稍微加大 */
  font-weight: 700;
  color: #1E293B; /* Slate-800: 近乎黑色的深灰，保证阅读清晰 */
}

/* 针对特定营养素，使用深色版 (Darker variants) */
.p-val.protein { 
  color: #047857; /* Deep Green */
}

.p-val.carbs { 
  color: #B45309; /* Deep Amber */
}

.p-val.fat { 
  color: #B91C1C; /* Deep Red */
}

.food-edit-actions {
  margin-top: 20rpx;
}

/* === 确认按钮 (Confirm Button) - 深色高亮 === */
.edit-btn-save {
  /* 背景：从 翡翠绿(500) 到 森林绿(700) 的深色渐变 */
  background: linear-gradient(135deg, #10B981 0%, #047857 100%);
  color: #FFFFFF;
  
  text-align: center;
  padding: 32rpx;
  border-radius: 60rpx;
  
  font-size: 32rpx;
  font-weight: 700; /* 最粗字重 */
  letter-spacing: 4rpx;
  
  /* 强烈的深绿色投影，让按钮浮起来 */
  box-shadow: 0 12rpx 30rpx rgba(4, 120, 87, 0.4);
  transition: all 0.2s;
}

.edit-btn-save:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 16rpx rgba(4, 120, 87, 0.5); /* 按压时投影收缩 */
}
