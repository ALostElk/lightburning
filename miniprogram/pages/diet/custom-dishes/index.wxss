/* 自定义菜品页面样式 - 清爽淡雅版 (Fresh & Elegant) */

/* === 全局容器 === */
.page {
  min-height: 100vh;
  /* 天空/云朵白渐变 */
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  display: flex;
  flex-direction: column;
}

/* === 1. 顶部导航 (Sticky Glass) === */
.header-glass {
  padding-top: env(safe-area-inset-top);
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 32rpx;
  padding-right: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.nav-back-btn {
  width: 72rpx;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.1);
  transition: all 0.2s ease;
}

.nav-back-btn:active {
  background: #F1F5F9;
  transform: scale(0.95);
}

.back-arrow {
  font-size: 40rpx;
  color: #64748B; /* Slate-500 */
  line-height: 1;
  padding-bottom: 4rpx; /* 微调对齐 */
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: center; /* 居中标题 */
  padding: 20rpx 30rpx;
  flex-shrink: 0;
  position: relative;
  z-index: 10;
  margin-top: 20rpx; /* 避开状态栏 */
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
}

.header-placeholder {
  display: none;
}

/* === 2. 内容区 === */
.content {
  flex: 1;
  padding: 32rpx;
  padding-bottom: 300rpx; /* 增加底部 padding，防止被底部栏遮挡 */
  box-sizing: border-box;
}

/* 玻璃表单卡片 */
.form-card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(16rpx);
  -webkit-backdrop-filter: blur(16rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.05);
}

.card-header {
  display: flex;
  align-items: baseline;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #334155;
  margin-right: 16rpx;
}

.card-subtitle {
  font-size: 22rpx;
  color: #94A3B8;
  font-weight: 400;
}

/* 输入行 */
.input-group {
  display: flex;
  flex-direction: column;
}

.form-row {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(241, 245, 249, 0.8);
}

.form-row:last-child {
  border-bottom: none;
}

.label {
  width: 100rpx;
  font-size: 28rpx;
  color: #64748B;
  flex-shrink: 0;
}

.glass-input {
  flex: 1;
  font-size: 28rpx;
  color: #334155;
  height: 48rpx;
  background: transparent;
  border: none;
  padding: 0;
}

.ph-style {
  color: #CBD5E1;
  font-weight: 300;
}

.input-right {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.align-right {
  text-align: right;
  margin-right: 8rpx;
}

.suffix {
  font-size: 24rpx;
  color: #94A3B8;
}

/* === 3. 营养网格 (Minimal Grid) === */
.macro-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.macro-item {
  background: rgba(255, 255, 255, 0.5);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid transparent;
  transition: all 0.2s;
}

.macro-item.highlight {
  background: rgba(255, 107, 53, 0.05);
  border-color: rgba(255, 107, 53, 0.1);
}

.macro-item.protein {
  background: rgba(16, 185, 129, 0.05);
  border-color: rgba(16, 185, 129, 0.1);
}

.macro-item.carbs {
  background: rgba(245, 158, 11, 0.05);
  border-color: rgba(245, 158, 11, 0.1);
}

.macro-item.fat {
  background: rgba(239, 68, 68, 0.05);
  border-color: rgba(239, 68, 68, 0.1);
}

.macro-label {
  font-size: 22rpx;
  color: #94A3B8;
  margin-bottom: 8rpx;
}

.macro-input {
  font-size: 40rpx;
  font-weight: 600;
  color: #334155;
  height: 60rpx;
  text-align: center;
  width: 100%;
  font-family: 'SF Pro Display', sans-serif;
  background: transparent;
  border: none;
  padding: 0;
}

.macro-unit {
  font-size: 20rpx;
  color: #CBD5E1;
  margin-top: 4rpx;
}

/* === 4. 图片上传 === */
.upload-area {
  height: 240rpx;
  background: rgba(255, 255, 255, 0.4);
  border: 2rpx dashed #CBD5E1;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  margin-bottom: 32rpx;
}

/* 紧凑版图片上传 */
.upload-area.compact {
  height: 160rpx; /* 减小高度 */
  margin-bottom: 0; /* 贴底 */
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

/* 横向布局 */
.upload-placeholder.row-layout {
  flex-direction: row; /* 改为横向 */
  gap: 24rpx;
}

.plus-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 107, 53, 0.1);
  color: #FF6B35;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 300;
}

/* 小号图标 */
.plus-icon.small {
  width: 48rpx;
  height: 48rpx;
  font-size: 32rpx;
}

.upload-placeholder text {
  font-size: 24rpx;
  color: #94A3B8;
}

/* === 图片上传动效 === */
.uploaded-img {
  width: 100%;
  height: 100%;
  /* 吸入/凝结动画 */
  animation: image-absorb 0.6s cubic-bezier(0.22, 1, 0.36, 1) forwards;
  /* 初始状态不可见，防止闪烁 */
  opacity: 0;
  transform-origin: center center;
}

/* 吸入/凝结动画 */
@keyframes image-absorb {
  0% {
    opacity: 0;
    transform: scale(1.15); /* 稍微放大 */
    filter: blur(8rpx) brightness(1.2); /* 模糊且高亮，像一团光 */
  }
  100% {
    opacity: 1;
    transform: scale(1); /* 归位 */
    filter: blur(0) brightness(1); /* 清晰 */
  }
}

.re-upload-mask {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 8rpx 0;
  background: rgba(0, 0, 0, 0.4);
  text-align: center;
  backdrop-filter: blur(4rpx);
  -webkit-backdrop-filter: blur(4rpx);
  /* 遮罩层延迟显示，增加层次感 */
  animation: fade-in 0.4s ease 0.4s forwards;
  opacity: 0;
}

/* 遮罩层淡入动画 */
@keyframes fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.re-upload-mask text {
  color: #fff;
  font-size: 20rpx;
}

/* === 5. 底部悬浮栏 (升级版) === */
.bottom-glass-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  /* 增加高度适配两行内容 */
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  
  background: rgba(255, 255, 255, 0.9); /* 稍微不透明一点，防干扰 */
  backdrop-filter: blur(24rpx);
  -webkit-backdrop-filter: blur(24rpx);
  border-top: 1rpx solid rgba(255, 255, 255, 1);
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.05);
  
  z-index: 100;
  box-sizing: border-box;
  
  display: flex;
  flex-direction: column;
  gap: 24rpx; /* 上下间距 */
}

/* 新增：快捷添加栏 */
.quick-add-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bar-label {
  font-size: 26rpx;
  color: #64748B;
  font-weight: 500;
}

.meal-pills-row {
  display: flex;
  gap: 16rpx;
}

/* 迷你胶囊 */
.meal-pill-mini {
  padding: 10rpx 24rpx;
  background: rgba(241, 245, 249, 0.8);
  border-radius: 60rpx;
  font-size: 24rpx;
  color: #64748B;
  transition: all 0.2s;
  border: 2rpx solid transparent;
}

.meal-pill-mini.active {
  background: #ECFDF5; /* 浅翡翠 */
  color: #059669;
  border-color: #10B981;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.15);
}

.save-pill-btn {
  /* 翡翠绿渐变 + 晶莹剔透效果 */
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.9) 0%, rgba(5, 150, 105, 0.95) 100%);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 
    0 8rpx 24rpx rgba(5, 150, 105, 0.3),
    inset 0 2rpx 8rpx rgba(255, 255, 255, 0.3),
    inset 0 -2rpx 4rpx rgba(5, 150, 105, 0.2);
  width: 100%;
  position: relative;
  overflow: hidden;
}

/* 按钮内部高光效果 */
.save-pill-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.4) 0%, transparent 100%);
  border-radius: 44rpx 44rpx 0 0;
  pointer-events: none;
}

.save-pill-btn[disabled] {
  background: #E2E8F0;
  color: #94A3B8;
  box-shadow: none;
  border: 1rpx solid rgba(226, 232, 240, 0.5);
  backdrop-filter: none;
  -webkit-backdrop-filter: none;
}

.save-pill-btn[disabled]::before {
  display: none;
}


/* 动画 */
.animate-slide-up {
  animation: slideUp 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
