/* 自定义菜品页面样式 - 清爽淡雅版 (Fresh & Elegant) */
.page {
  min-height: 100vh;
  /* 天空/云朵白渐变 */
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  display: flex;
  flex-direction: column;
  position: relative;
  box-sizing: border-box;
  color: #334155; /* Slate-700 */
}

/* ============ 悬浮返回按钮 ============ */
.nav-back-btn {
  position: fixed;
  left: 32rpx;
  z-index: 100;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.1);
  transition: all 0.2s ease;
}

.nav-back-btn:active {
  background: #F1F5F9;
  transform: scale(0.95);
}

.back-arrow {
  font-size: 40rpx;
  color: #64748B; /* Slate-500 */
  line-height: 1;
  padding-bottom: 4rpx; /* 微调对齐 */
}

/* 背景装饰 (原有橙色波浪移除，改为无或极简) */
.page-bg {
  display: none;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: center; /* 居中标题 */
  padding: 20rpx 30rpx;
  flex-shrink: 0;
  position: relative;
  z-index: 10;
  margin-top: 20rpx; /* 避开状态栏 */
}

.header-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #334155; /* Slate-700 */
  letter-spacing: 1rpx;
}

.header-placeholder {
  display: none;
}

/* 内容区 */
.content {
  flex: 1;
  padding: 32rpx;
  padding-bottom: 200rpx; /* 底部留白 */
  overflow-y: auto;
  position: relative;
  z-index: 1;
}

/* 表单卡片 - 玻璃拟态 */
.form-card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.05); /* 极淡阴影 */
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #334155;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #F1F5F9;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.card-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: #94A3B8; /* Slate-400 */
  border-radius: 4rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #64748B; /* Slate-500 */
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required {
  color: #EF4444;
  margin-left: 4rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 32rpx;
  background: #F8FAFC; /* Slate-50 */
  border: 1rpx solid #E2E8F0; /* Slate-200 */
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #334155;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.form-input:focus {
  background: #FFFFFF;
  border-color: #94A3B8; /* Slate-400 */
  box-shadow: 0 0 0 4rpx rgba(148, 163, 184, 0.1);
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  padding: 24rpx 32rpx;
  background: #F8FAFC;
  border: 1rpx solid #E2E8F0;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #334155;
  box-sizing: border-box;
  line-height: 1.6;
  transition: all 0.2s ease;
}

.form-textarea:focus {
  background: #FFFFFF;
  border-color: #94A3B8;
  box-shadow: 0 0 0 4rpx rgba(148, 163, 184, 0.1);
}

.input-with-unit {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.unit {
  font-size: 28rpx;
  color: #94A3B8;
  flex-shrink: 0;
  font-weight: 400;
}

/* 营养信息网格 */
.nutrition-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.nutrition-item {
  border-radius: 24rpx;
  padding: 24rpx;
  background: #F8FAFC;
  border: 1rpx solid #F1F5F9;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.nutrition-label {
  font-size: 24rpx;
  color: #94A3B8;
  font-weight: 500;
}

.nutrition-input-wrapper {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.nutrition-input {
  width: 100rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #334155;
  text-align: center;
  border-bottom: 2rpx solid transparent;
  padding-bottom: 4rpx;
  font-family: 'SF Mono', 'Menlo', sans-serif;
}

.nutrition-input:focus {
  border-bottom-color: #94A3B8;
}

.nutrition-unit {
  font-size: 22rpx;
  color: #CBD5E1;
}

/* 提示框 */
.nutrition-tip {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  margin-top: 32rpx;
  padding: 24rpx;
  background: rgba(241, 245, 249, 0.5); /* Slate-100 half transparent */
  border-radius: 20rpx;
}

.tip-icon {
  font-size: 32rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #64748B;
  line-height: 1.5;
}

/* 图片上传 */
.image-upload {
  width: 100%;
  height: 320rpx;
  border-radius: 24rpx;
  overflow: hidden;
  background: #F8FAFC;
  border: 2rpx dashed #E2E8F0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.image-upload:active {
  background: #F1F5F9;
  border-color: #94A3B8;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.upload-icon {
  font-size: 64rpx;
  opacity: 0.4;
  filter: grayscale(100%);
}

.upload-text {
  font-size: 26rpx;
  color: #94A3B8;
}

.remove-image {
  margin-top: 20rpx;
  text-align: center;
  color: #EF4444;
  font-size: 26rpx;
  padding: 12rpx;
}

/* 底部按钮栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(241, 245, 249, 1);
  z-index: 100;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: #334155; /* Slate-700 */
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(51, 65, 85, 0.25);
  border: none;
  transition: all 0.2s ease;
}

.save-btn:active {
  transform: scale(0.98);
  background: #1E293B; /* Slate-800 */
}

.save-btn[disabled] {
  background: #CBD5E1; /* Slate-300 */
  color: #F1F5F9;
  box-shadow: none;
  pointer-events: none;
}
