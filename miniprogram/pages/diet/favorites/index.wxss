/* 我的常用页面样式 - 优化版 */

.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5EB 0%, #FEF0E3 15%, #F8F4FF 50%, #EEF4FF 100%);
  padding-bottom: 140rpx;
  position: relative;
}

/* 背景装饰 */
.page-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 280rpx;
  background: linear-gradient(135deg, #FF8C42 0%, #FF6B35 50%, #FF9A56 100%);
  border-radius: 0 0 60rpx 60rpx;
  z-index: 0;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  position: relative;
  z-index: 1;
}

.back-btn {
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #fff;
  background: rgba(255,255,255,0.2);
  border-radius: 50%;
  backdrop-filter: blur(10rpx);
}

.header-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.header-placeholder {
  width: 70rpx;
}

/* Tab 切换 - 3D效果 */
.tab-bar {
  display: flex;
  margin: 20rpx 30rpx;
  padding: 8rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 28rpx;
  gap: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.08),
              inset 0 2rpx 4rpx rgba(255,255,255,0.8);
  position: relative;
  z-index: 1;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx;
  background: transparent;
  border-radius: 22rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #FF8C42 0%, #FF6B35 100%);
  color: #fff;
  box-shadow: 0 6rpx 20rpx rgba(255,107,0,0.35),
              inset 0 2rpx 4rpx rgba(255,255,255,0.2);
}

.tab-icon {
  font-size: 32rpx;
}

/* 餐次提示 */
.meal-hint {
  margin: 0 30rpx 16rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,247,237,0.95) 100%);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  position: relative;
  z-index: 1;
}

.meal-name {
  color: #FF6B00;
  font-weight: 700;
}

/* 餐次筛选栏 */
.meal-filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 30rpx 16rpx;
  padding: 20rpx 24rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  position: relative;
  z-index: 1;
}

.filter-label {
  font-size: 26rpx;
  color: #666;
}

.filter-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 14rpx 24rpx;
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #FF6B00;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(255,107,0,0.12);
}

.filter-arrow {
  font-size: 20rpx;
  color: #FF8C42;
}

/* 餐次筛选下拉 */
.meal-filter-dropdown {
  position: relative;
  z-index: 100;
  margin: 0 30rpx 16rpx;
  background: rgba(255,255,255,0.98);
  border-radius: 20rpx;
  box-shadow: 0 12rpx 40rpx rgba(0,0,0,0.12);
  overflow: hidden;
}

.filter-option {
  padding: 28rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 2rpx solid #F3F4F6;
  transition: all 0.2s ease;
}

.filter-option:last-child {
  border-bottom: none;
}

.filter-option.active {
  color: #FF6B00;
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  font-weight: 700;
}

/* 内容区 */
.content {
  padding: 0 30rpx;
  position: relative;
  z-index: 1;
}

/* 加载状态 */
.loading-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255,107,0,0.2);
  border-top: 4rpx solid #FF6B00;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  color: #666;
  font-size: 28rpx;
}

/* 食物列表 */
.food-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.food-card {
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.95);
  border-radius: 28rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,0.05),
              0 2rpx 8rpx rgba(0,0,0,0.03);
  border: 2rpx solid rgba(255,255,255,0.8);
  transition: all 0.2s ease;
}

.food-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
}

.food-emoji {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(145deg, #FFF7ED 0%, #FFEDD5 100%);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255,107,0,0.1);
}

.dish-image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 24rpx;
}

.food-info {
  flex: 1;
  min-width: 0;
}

.food-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.food-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.use-count {
  font-size: 22rpx;
  color: #FF6B00;
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  font-weight: 600;
}

.custom-badge {
  font-size: 22rpx;
  color: #8B5CF6;
  background: linear-gradient(135deg, #F3E8FF 0%, #EDE9FE 100%);
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  font-weight: 600;
}

.food-meta {
  font-size: 24rpx;
  color: #888;
  display: block;
  margin-bottom: 8rpx;
}

.food-macros {
  display: flex;
  gap: 16rpx;
}

.macro {
  font-size: 22rpx;
  font-weight: 600;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.macro.protein {
  color: #2563EB;
  background: rgba(59,130,246,0.1);
}
.macro.carbs {
  color: #D97706;
  background: rgba(245,158,11,0.1);
}
.macro.fat {
  color: #7C3AED;
  background: rgba(139,92,246,0.1);
}

/* 食物操作按钮 */
.food-action {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(145deg, #FF8C42 0%, #FF6B35 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 6rpx 20rpx rgba(255,107,0,0.35),
              inset 0 2rpx 4rpx rgba(255,255,255,0.3);
}

.action-icon {
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}

.food-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  flex-shrink: 0;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.9);
}

.action-btn.add {
  background: linear-gradient(145deg, #FF8C42 0%, #FF6B35 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255,107,0,0.3);
}

.action-btn.edit {
  background: linear-gradient(145deg, #F3F4F6 0%, #E5E7EB 100%);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.action-btn.delete {
  background: linear-gradient(145deg, #FEE2E2 0%, #FECACA 100%);
  box-shadow: 0 2rpx 8rpx rgba(239,68,68,0.15);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 32rpx;
  margin-top: 20rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
}

/* 添加自定义菜品按钮 */
.add-custom-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-top: 30rpx;
  padding: 32rpx;
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,247,237,0.95) 100%);
  border: 3rpx dashed #FF8C42;
  border-radius: 28rpx;
  color: #FF6B00;
  font-size: 30rpx;
  font-weight: 700;
  box-shadow: 0 4rpx 16rpx rgba(255,107,0,0.08);
  transition: all 0.2s ease;
}

.add-custom-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
}

.btn-icon {
  font-size: 40rpx;
  font-weight: bold;
}

/* 底部搜索入口 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: rgba(255,255,255,0.98);
  box-shadow: 0 -8rpx 30rpx rgba(0,0,0,0.06);
  backdrop-filter: blur(20rpx);
}

.search-entry {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx;
  background: linear-gradient(135deg, #F8FAFC 0%, #F1F5F9 100%);
  border-radius: 24rpx;
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
  box-shadow: inset 0 2rpx 4rpx rgba(0,0,0,0.04);
}

.search-icon {
  font-size: 32rpx;
}
