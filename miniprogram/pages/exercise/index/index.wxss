/**
 * 运动记录主页 - exercise/index
 * 设计语言: Daylight Futurism (日光未来主义)
 * 与饮食记录保持一致的液态玻璃风格
 */

/* ============ 页面容器 ============ */
.page-container {
  min-height: 100vh;
  padding-bottom: 200rpx;
  position: relative;
}

/* ============ 粘性头部 ============ */
.sticky-header {
  position: sticky;
  top: 0;
  z-index: 40;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.status-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 20rpx;
  height: 20rpx;
  background: #52C41A;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 0;
}

.greeting {
  font-size: 22rpx;
  color: #9CA3AF;
  line-height: 1.2;
  display: block;
}

.user-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
  line-height: 1.2;
  display: block;
}

/* ============ 主内容区 ============ */
.main-content {
  padding: 24rpx;
}

/* ============ 日期切换导航栏 - 液态玻璃风格 ============ */
.date-nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.7) 0%, rgba(255, 251, 235, 0.6) 100%);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow:
    0 8rpx 32rpx rgba(255, 107, 53, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8),
    inset 0 -1rpx 0 rgba(255, 107, 53, 0.1);
}

.date-nav-arrow {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 237, 213, 0.6) 100%);
  border: 1rpx solid rgba(255, 255, 255, 0.7);
  box-shadow:
    0 4rpx 12rpx rgba(255, 107, 53, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transition: all 0.2s ease;
}

.date-nav-arrow:active {
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.9) 0%, rgba(255, 200, 150, 0.7) 100%);
  transform: scale(0.95);
}

.arrow-icon {
  font-size: 40rpx;
  color: #FF6B35;
  font-weight: 500;
}

.date-nav-center {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 36rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.7) 0%, rgba(255, 245, 235, 0.5) 100%);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.date-nav-center:active {
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.8) 0%, rgba(255, 220, 180, 0.6) 100%);
}

.date-nav-text {
  font-size: 38rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6B35 0%, #F59E0B 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ============ AI 分析横幅 ============ */
.ai-banner {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(61, 155, 255, 0.1) 0%, rgba(82, 196, 26, 0.1) 100%);
  border-radius: 24rpx;
  border: 1rpx solid rgba(61, 155, 255, 0.2);
  margin-bottom: 24rpx;
}

.ai-banner-content {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  flex: 1;
}

.ai-icon-wrapper {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #3D9BFF 0%, #52C41A 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.ai-icon {
  font-size: 28rpx;
}

.ai-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.ai-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #3D9BFF;
}

.ai-message {
  font-size: 26rpx;
  color: #1F2937;
  line-height: 1.5;
}

.ai-close {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9CA3AF;
  font-size: 32rpx;
}

/* ============ 仪表盘卡片 ============ */
.dashboard-card {
  margin-bottom: 24rpx;
  border-radius: 36rpx;
  position: relative;
  overflow: hidden;

  /* 液态玻璃基础 - 运动主题橙色调 */
  background: linear-gradient(
    145deg,
    rgba(255, 255, 255, 0.75) 0%,
    rgba(255, 247, 237, 0.65) 30%,
    rgba(255, 237, 213, 0.55) 60%,
    rgba(255, 220, 180, 0.45) 100%
  ) !important;

  backdrop-filter: blur(40rpx) saturate(180%);
  -webkit-backdrop-filter: blur(40rpx) saturate(180%);

  border: 1rpx solid rgba(255, 255, 255, 0.6);

  box-shadow:
    0 8rpx 32rpx rgba(255, 107, 53, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8),
    inset 0 -1rpx 0 rgba(0, 0, 0, 0.02);
}

.dashboard-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    ellipse 80% 60% at 30% 20%,
    rgba(255, 255, 255, 0.5) 0%,
    transparent 60%
  );
  pointer-events: none;
  z-index: 1;
}

.dashboard-card::after {
  content: '';
  position: absolute;
  bottom: -30%;
  right: -20%;
  width: 80%;
  height: 80%;
  background: radial-gradient(
    ellipse 70% 50% at 70% 70%,
    rgba(255, 107, 53, 0.2) 0%,
    transparent 60%
  );
  pointer-events: none;
  z-index: 1;
}

.dashboard-content {
  padding: 32rpx;
  position: relative;
  z-index: 2;
}

/* 热量仪表盘 */
.calories-dashboard {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

/* 环形图 */
.donut-chart-wrapper {
  flex-shrink: 0;
}

.donut-chart {
  position: relative;
  width: 260rpx;
  height: 260rpx;
}

.donut-ring {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  mask: radial-gradient(transparent 58%, black 59%);
  -webkit-mask: radial-gradient(transparent 58%, black 59%);
  transition: background 0.5s ease;
  position: relative;
  overflow: hidden;
  box-shadow:
    0 0 30rpx rgba(255, 107, 53, 0.3),
    inset 0 0 20rpx rgba(255, 255, 255, 0.2);
}

.donut-ring::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(
    from 0deg,
    transparent 0deg,
    rgba(255, 255, 255, 0.3) 60deg,
    transparent 120deg,
    transparent 360deg
  );
  animation: ring-rotate 4s linear infinite;
}

.donut-ring::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    135deg,
    transparent 40%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 60%
  );
  animation: ring-shine 3s ease-in-out infinite;
}

@keyframes ring-rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes ring-shine {
  0%, 100% {
    opacity: 0;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

.donut-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.donut-value-wrapper {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  justify-content: center;
}

.donut-value {
  font-size: 56rpx;
  font-weight: 800;
  color: #1F2937;
  font-family: 'SF Mono', 'Menlo', monospace;
  line-height: 1;
}

.donut-unit {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 500;
  line-height: 1;
}

.donut-label {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

/* 热量详细数据 */
.calories-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.calorie-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(255, 237, 213, 0.6);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.calorie-row:active {
  background: rgba(255, 237, 213, 0.9);
  transform: scale(0.98);
}

.calorie-indicator {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  box-shadow: 0 0 8rpx currentColor;
}

.calorie-indicator.consumed {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  box-shadow: 0 0 10rpx rgba(255, 107, 53, 0.5);
}

.calorie-indicator.duration {
  background: linear-gradient(135deg, #3D9BFF 0%, #6BB3FF 100%);
  box-shadow: 0 0 10rpx rgba(61, 155, 255, 0.5);
}

.calorie-indicator.goal-ind {
  background: linear-gradient(135deg, #E5E7EB 0%, #D1D5DB 100%);
  box-shadow: 0 0 8rpx rgba(209, 213, 219, 0.5);
}

.calorie-label {
  font-size: 30rpx;
  color: #374151;
  flex: 1;
  font-weight: 600;
}

.calorie-value-wrapper {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.calorie-value {
  font-size: 34rpx;
  font-weight: 800;
  color: #1F2937;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.calorie-unit {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 500;
}

/* 宏量营养素/运动时长进度条 */
.macros-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
}

.macro-bar {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.macro-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.macro-name {
  font-size: 28rpx;
  color: #374151;
  font-weight: 600;
}

.macro-values {
  font-size: 26rpx;
  color: #6B7280;
  font-family: 'SF Mono', 'Menlo', monospace;
  font-weight: 600;
}

.macro-progress-bg {
  height: 20rpx;
  background: rgba(243, 244, 246, 0.8);
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
}

.macro-progress-fill {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.macro-progress-fill::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -10%;
  width: 120%;
  height: 200%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 100%
  );
  animation: liquid-wave 2s ease-in-out infinite;
}

.macro-progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.6) 50%,
    transparent 100%
  );
  animation: shine-sweep 3s ease-in-out infinite;
}

@keyframes liquid-wave {
  0%, 100% {
    transform: translateX(-5%) rotate(-2deg);
  }
  50% {
    transform: translateX(5%) rotate(2deg);
  }
}

@keyframes shine-sweep {
  0% {
    left: -100%;
    opacity: 0;
  }
  20% {
    opacity: 1;
  }
  80% {
    opacity: 1;
  }
  100% {
    left: 200%;
    opacity: 0;
  }
}

.macro-progress-fill.duration-fill {
  background: linear-gradient(90deg, #FF6B35 0%, #FF8E53 50%, #FF6B35 100%);
  background-size: 200% 100%;
  animation: liquid-flow 3s ease-in-out infinite;
  box-shadow: 0 0 12rpx rgba(255, 107, 53, 0.5), inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

@keyframes liquid-flow {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

/* ============ 时间线区域 ============ */
.timeline-section {
  margin-top: 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
  position: relative;
  z-index: 20;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
  position: relative;
  z-index: 21;
}

/* 编辑按钮 */
.edit-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
  z-index: 22;
}

.edit-btn.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.edit-btn:active {
  transform: scale(0.95);
}

/* 时间线容器 */
.timeline-container {
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
}

.timeline-item {
  display: flex;
  gap: 16rpx;
}

/* 时间线轨道 */
.timeline-track {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 56rpx;
  flex-shrink: 0;
}

.timeline-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  border: 3rpx solid #E5E7EB;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.timeline-dot.active {
  border-color: #FF6B35;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 12rpx rgba(255, 107, 53, 0.2);
}

.dot-icon {
  font-size: 24rpx;
  line-height: 1;
}

.timeline-line {
  width: 4rpx;
  flex: 1;
  min-height: 40rpx;
  background: linear-gradient(180deg, #E5E7EB 0%, transparent 100%);
  margin: 8rpx 0;
}

/* 运动类型卡片容器 */
.type-card-wrapper {
  flex: 1;
  margin-bottom: 20rpx;
}

.type-card {
  border-radius: 28rpx;
  background: linear-gradient(135deg, #EFF6FF 0%, #DBEAFE 100%) !important;
}

.type-card.has-data {
  box-shadow: 0 8rpx 32rpx rgba(61, 155, 255, 0.12);
}

/* 不同类型的渐变背景 */
.type-card.aerobic {
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%) !important;
}
.type-card.aerobic.has-data {
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 53, 0.12);
}

.type-card.strength {
  background: linear-gradient(135deg, #F0FDF4 0%, #DCFCE7 100%) !important;
}
.type-card.strength.has-data {
  box-shadow: 0 8rpx 32rpx rgba(82, 196, 26, 0.12);
}

.type-card.flexibility {
  background: linear-gradient(135deg, #F5F3FF 0%, #EDE9FE 100%) !important;
}
.type-card.flexibility.has-data {
  box-shadow: 0 8rpx 32rpx rgba(139, 92, 246, 0.12);
}

.type-card.sports {
  background: linear-gradient(135deg, #FFF1F2 0%, #FFE4E6 100%) !important;
}
.type-card.sports.has-data {
  box-shadow: 0 8rpx 32rpx rgba(244, 63, 94, 0.12);
}

.type-card-content {
  padding: 24rpx;
}

/* 类型头部 */
.type-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.type-title-group {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.type-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
}

.type-time {
  font-size: 22rpx;
  color: #9CA3AF;
}

.type-right-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 单类型编辑按钮 */
.type-edit-btn {
  padding: 8rpx 20rpx;
  background: rgba(243, 244, 246, 0.8);
  border-radius: 12rpx;
  font-size: 22rpx;
  color: #9CA3AF;
  font-weight: 500;
  transition: all 0.3s ease;
}

.type-edit-btn.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.type-edit-btn:active {
  transform: scale(0.95);
}

.type-calories {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.cal-number {
  font-size: 36rpx;
  font-weight: 800;
  color: #FF6B35;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.cal-unit {
  font-size: 20rpx;
  color: #9CA3AF;
}

.collapse-icon {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #9CA3AF;
  font-size: 20rpx;
  transition: transform 0.3s ease;
}

.collapse-icon.collapsed {
  transform: rotate(-90deg);
}

/* 进度条 */
.type-progress-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.type-progress-bar {
  flex: 1;
  height: 16rpx;
  background: rgba(243, 244, 246, 0.8);
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.06);
}

.type-progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #FFB347 0%, #FF6B35 50%, #FFB347 100%);
  background-size: 200% 100%;
  border-radius: 8rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  animation: liquid-flow 3s ease-in-out infinite;
  box-shadow: 0 0 10rpx rgba(255, 107, 53, 0.4), inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.type-progress-fill::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -10%;
  width: 120%;
  height: 200%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.35) 50%,
    transparent 100%
  );
  animation: liquid-wave 2s ease-in-out infinite;
}

.type-progress-fill::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 50%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.5) 50%,
    transparent 100%
  );
  animation: shine-sweep 3s ease-in-out infinite;
}

.type-progress-fill.over {
  background: linear-gradient(90deg, #FF6B35 0%, #FF4D4F 50%, #FF6B35 100%);
  background-size: 200% 100%;
  box-shadow: 0 0 12rpx rgba(255, 77, 79, 0.5), inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.type-progress-text {
  font-size: 22rpx;
  color: #9CA3AF;
  font-weight: 600;
  min-width: 60rpx;
  text-align: right;
}

/* 可折叠内容区域 */
.collapsible-content {
  max-height: 3000rpx;
  overflow: hidden;
  transition: max-height 0.3s ease, opacity 0.3s ease;
  opacity: 1;
