/* pages/exercise/recommend/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* 难度选择器 */
.level-selector {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.level-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.level-item.active {
  border-color: #FF6B6B;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
}

.level-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.level-label {
  font-size: 26rpx;
  color: #666;
}

.level-item.active .level-label {
  color: #FF6B6B;
  font-weight: 600;
}

/* 运动列表 */
.exercise-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.exercise-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.exercise-name-section {
  flex: 1;
}

.exercise-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.exercise-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  padding: 6rpx 16rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #666;
}

.tag.intensity {
  background: #FFF5F5;
  color: #FF6B6B;
}

.quick-add-btn {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  font-weight: 300;
}

.exercise-stats {
  display: flex;
  gap: 30rpx;
  margin-bottom: 16rpx;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stat-icon {
  font-size: 28rpx;
}

.stat-value {
  font-size: 26rpx;
  color: #666;
}

.exercise-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.6;
}

/* 空状态 */
.empty-state,
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

