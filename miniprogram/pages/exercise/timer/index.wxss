  border-color: rgba(45, 212, 191, 0.4);
}

.mvp-bpr-opt:active {
  transform: scale(0.98);
}

.mvp-btn {
  width: 100%;
  padding: 14rpx 16rpx;
  border-radius: 18rpx;
  background: rgba(45, 212, 191, 0.18);
  border: 1rpx solid rgba(45, 212, 191, 0.35);
  text-align: center;
  pointer-events: auto;
}

.mvp-btn:active {
  transform: scale(0.98);
  background: rgba(45, 212, 191, 0.28);
}

.mvp-btn-text {
