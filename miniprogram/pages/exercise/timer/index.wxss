  font-size: 24rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.mvp-bpr {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  padding: 10rpx 12rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  margin-bottom: 10rpx;
}

.mvp-bpr-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
}

.mvp-bpr-options {
  display: flex;
  gap: 10rpx;
}

.mvp-bpr-opt {
  padding: 10rpx 14rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.14);
  color: rgba(255, 255, 255, 0.9);
  font-size: 22rpx;
