/**
 * 沉浸式运动计时页面样式
 * 设计语言: Daylight Futurism - Kinetic Aqua (海盐湖水绿)
 */

/* ============ 页面容器 ============ */
.timer-page {
  height: 100vh;
  width: 100vw;
  background: linear-gradient(180deg, #F0FDFA 0%, #E0F2FE 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
}

/* ============ 头部信息区 ============ */
.timer-header {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 60rpx);
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  z-index: 20;
}

.exercise-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #0F766E;
  letter-spacing: 2rpx;
}

.calorie-pill {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  padding: 12rpx 32rpx;
  border-radius: 100rpx;
  color: #2DD4BF;
  font-weight: 600;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(45, 212, 191, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  z-index: 10;
}

/* AI 计数胶囊 */
.ai-count-pill {
  background: rgba(15, 118, 110, 0.15);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  border: 1rpx solid rgba(45, 212, 191, 0.3);
}

.ai-count-text {
  font-size: 24rpx;
  color: #0F766E;
  font-weight: 500;
}

/* ============ 核心计时器 ============ */
.timer-display {
  font-size: 140rpx;
  font-weight: 200;
  color: #0F766E;
  font-feature-settings: "tnum";
  text-shadow: 0 8rpx 20rpx rgba(45, 212, 191, 0.2);
  z-index: 10;
  letter-spacing: 8rpx;
  font-family: 'SF Pro Display', -apple-system, sans-serif;
}

/* ============ 动态波浪层 ============ */
.wave-container {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40%;
  z-index: 0;
  opacity: 0.6;
  overflow: hidden;
}

.wave {
  position: absolute;
  bottom: 0;
  width: 200%;
  height: 100%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(45, 212, 191, 0.2) 100%);
  border-radius: 40%;
  animation: wave-rotate 10s infinite linear;
}

.wave-1 {
  left: -50%;
  animation-duration: 10s;
  animation-timing-function: linear;
}

.wave-2 {
  left: -50%;
  animation-duration: 15s;
  animation-timing-function: linear;
  animation-direction: reverse;
  opacity: 0.4;
}

@keyframes wave-rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* ============ 控制栏 ============ */
.control-bar {
  position: absolute;
  bottom: calc(100rpx + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
  z-index: 20;
}

.btn-glass {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  box-shadow: 0 12rpx 30rpx rgba(45, 212, 191, 0.2);
  transition: all 0.2s;
}

.btn-glass:active {
  transform: scale(0.95);
}

.btn-glass.pause {
  background: rgba(255, 255, 255, 0.8);
}

.btn-glass.stop {
  background: #FFE4E6;
  border-color: rgba(225, 29, 72, 0.2);
}

.btn-icon {
  font-size: 48rpx;
  color: #0F766E;
  font-weight: 300;
}

.btn-text {
  font-size: 28rpx;
  color: #E11D48;
  font-weight: 600;
}

/* ============ 页面容器 ============ */
.page-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
}

/* ============ 基础模式容器 ============ */
.mode-basic {
  width: 100%;
  height: 100%;
  position: relative;
}

/* ============ AI 开关按钮 ============ */
.ai-toggle-btn {
  position: absolute;
  bottom: calc(260rpx + env(safe-area-inset-bottom));
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(240, 253, 250, 0.95) 100%);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 28rpx 64rpx;
  border-radius: 50rpx;
  color: #0F766E;
  font-weight: 600;
  font-size: 32rpx;
  box-shadow:
    0 8rpx 32rpx rgba(45, 212, 191, 0.25),
    0 2rpx 8rpx rgba(0, 0, 0, 0.05),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  border: 2rpx solid rgba(45, 212, 191, 0.4);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  min-width: 320rpx;
  animation: ai-btn-pulse 2s ease-in-out infinite;
}

.ai-toggle-btn:active {
  transform: translateX(-50%) scale(0.95);
  box-shadow: 0 4rpx 12rpx rgba(45, 212, 191, 0.15);
}

.ai-icon {
  font-size: 32rpx;
}

.ai-text {
  letter-spacing: 4rpx;
}

/* ============ AI 模式容器 ============ */
.mode-ai {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 100;
}

.camera-fullscreen {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1; /* 底层 */
}

.pose-overlay {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99; /* 顶层，确保能画出来 */
  pointer-events: none;
}

/* 点击层：用于简化模式手动计数 */
.tap-layer {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 15;
  pointer-events: auto;
  background: transparent;
}

/* ============ AI HUD 覆盖层 ============ */
.ai-hud {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 20;
  padding-top: env(safe-area-inset-top);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 调试 HUD */
.debug-hud {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 120rpx);
  left: 24rpx;
  right: 24rpx;
  background: rgba(0, 0, 0, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 16rpx 18rpx;
  box-sizing: border-box;
  z-index: 35;
  pointer-events: none;
}

.debug-line {
  display: block;
  color: rgba(255, 255, 255, 0.92);
  font-size: 22rpx;
  line-height: 30rpx;
  font-family: Menlo, Monaco, Consolas, "Courier New", monospace;
}

/* 顶部控制栏 */
.hud-top {
  position: absolute;
  top: calc(env(safe-area-inset-top) + 40rpx);
  left: 0;
  right: 0;
  padding: 0 32rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  pointer-events: auto;
  z-index: 30;
}

.hud-left,
.hud-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.hud-right {
  justify-content: flex-end;
}

.debug-pill {
  background: rgba(0, 0, 0, 0.35);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  color: rgba(255, 255, 255, 0.9);
  padding: 10rpx 18rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
  pointer-events: auto;
}

.debug-pill:active {
  background: rgba(0, 0, 0, 0.55);
  transform: scale(0.97);
}

.debug-pill-text {
  letter-spacing: 1rpx;
}

.metronome-pill {
  background: rgba(0, 0, 0, 0.35);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  color: rgba(255, 255, 255, 0.9);
  padding: 10rpx 18rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.15);
