}

.mvp-sub {
  color: rgba(255, 255, 255, 0.78);
  font-size: 22rpx;
}

.mvp-tip {
  margin-top: 14rpx;
  padding: 12rpx 14rpx;
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.12);
}

