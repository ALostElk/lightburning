  font-size: 24rpx;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.mvp-stepper {
  margin-top: 10rpx;
  display: flex;
  gap: 10rpx;
}

.mvp-step {
  flex: 1;
  padding: 10rpx 0;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.12);
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  font-size: 22rpx;
  pointer-events: auto;
}

.mvp-step:active {
  background: rgba(255, 255, 255, 0.14);
  transform: scale(0.98);
}

.mvp-slider {
  margin-top: 6rpx;
}

.back-pill {
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.2s;
}

.back-pill:active {
  background: rgba(0, 0, 0, 0.6);
  transform: scale(0.95);
}

.back-icon {
  font-size: 28rpx;
}

.back-text {
  letter-spacing: 1rpx;
}

.status-pill {
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  opacity: 0.6;
  transition: all 0.3s;
}

.status-pill.active {
  opacity: 1;
  border-color: rgba(45, 212, 191, 0.5);
  background: rgba(15, 118, 110, 0.3);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #2DD4BF;
  animation: pulse-dot 1.5s ease-in-out infinite;
}

.status-pill.active .status-dot {
  box-shadow: 0 0 12rpx rgba(45, 212, 191, 0.8);
}

@keyframes pulse-dot {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.5;
    transform: scale(0.8);
  }
}

.status-text {
  letter-spacing: 1rpx;
}

/* 反馈区域 */
.feedback-zone {
  position: absolute;
  bottom: calc(200rpx + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
  pointer-events: none;
  z-index: 30;
}

/* 计数显示 */
.counter-box {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-radius: 32rpx;
  padding: 32rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  min-width: 200rpx;
}

.count-num {
  font-size: 80rpx;
  font-weight: 700;
  color: #0F766E;
  font-feature-settings: "tnum";
  line-height: 1;
  text-shadow: 0 4rpx 12rpx rgba(45, 212, 191, 0.2);
}

.count-label {
  font-size: 28rpx;
  color: #2DD4BF;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 指导气泡 */
.guide-bubble {
  background: rgba(15, 118, 110, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  color: #fff;
  padding: 20rpx 32rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  max-width: 80%;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.3);
  border: 1rpx solid rgba(45, 212, 191, 0.3);
  animation: bubble-fade-in 0.3s ease-out;
}

@keyframes bubble-fade-in {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.guide-text {
  letter-spacing: 1rpx;
  line-height: 1.5;
}

