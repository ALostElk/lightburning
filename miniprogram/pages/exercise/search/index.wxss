/**
 * 运动搜索页面样式
 * 与饮食搜索保持一致的设计语言
 */

.container {
  min-height: 100vh;
  background: #F5F7FA;
  display: flex;
  flex-direction: column;
}

/* ============ 自定义导航栏 ============ */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 24rpx 16rpx;
  background: #FFFFFF;
}

.navbar-back {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F3F4F6;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.navbar-back:active {
  background: #E5E7EB;
  transform: scale(0.95);
}

.back-icon {
  font-size: 48rpx;
  color: #374151;
  font-weight: 500;
}

.navbar-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.navbar-placeholder {
  width: 64rpx;
}

/* ============ 搜索框 ============ */
.search-container {
  padding: 16rpx 24rpx 24rpx;
  background: #FFFFFF;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 80rpx;
  background: #F3F4F6;
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.search-box:focus-within {
  background: #FFFFFF;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 53, 0.1);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1F2937;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #D1D5DB;
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 28rpx;
  margin-left: 12rpx;
}

.search-clear:active {
  background: #9CA3AF;
}

/* ============ 标签切换 ============ */
.tabs-container {
  background: #FFFFFF;
  padding: 0 24rpx 16rpx;
  border-bottom: 1rpx solid #F3F4F6;
}

.tabs {
  display: flex;
  gap: 16rpx;
}

.tab-item {
  flex: 1;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F9FAFB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #6B7280;
  font-weight: 500;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.25);
}

/* ============ 内容区 ============ */
.content-scroll {
  flex: 1;
  padding: 24rpx;
}

.tab-content {
  min-height: 100%;
}

/* ============ 区块样式 ============ */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.section-action {
  font-size: 24rpx;
  color: #FF6B35;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 53, 0.1);
  border-radius: 12rpx;
}

.section-action:active {
  background: rgba(255, 107, 53, 0.2);
}

/* ============ 最近搜索 ============ */
.recent-section {
  margin-bottom: 32rpx;
}

.recent-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.recent-tag {
  padding: 16rpx 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #374151;
  border: 1rpx solid #E5E7EB;
  transition: all 0.2s ease;
}

.recent-tag:active {
  background: #F9FAFB;
  border-color: #FF6B35;
  color: #FF6B35;
}

/* ============ 类型筛选 ============ */
.type-filters {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.type-filter {
  flex-shrink: 0;
  padding: 16rpx 28rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #374151;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.type-filter.active {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(255, 142, 83, 0.1) 100%);
  border-color: #FF6B35;
  color: #FF6B35;
  font-weight: 600;
}

/* ============ 运动列表 ============ */
.exercise-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.exercise-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.exercise-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.15);
}

.exercise-card.frequent {
  border: 1rpx solid rgba(255, 107, 53, 0.2);
  background: linear-gradient(135deg, rgba(255, 255, 255, 1) 0%, rgba(255, 247, 237, 0.5) 100%);
}

.exercise-icon {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.8) 0%, rgba(255, 247, 237, 0.8) 100%);
  border-radius: 20rpx;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.exercise-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.exercise-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
}

.exercise-meta {
  font-size: 24rpx;
  color: #9CA3AF;
}

.exercise-count {
  font-size: 22rpx;
  color: #FF6B35;
  font-weight: 500;
}

.exercise-action {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
  flex-shrink: 0;
}

.add-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 300;
}

/* ============ 加载状态 ============ */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid rgba(255, 107, 53, 0.2);
  border-top-color: #FF6B35;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}

/* ============ 空状态 ============ */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #D1D5DB;
}

