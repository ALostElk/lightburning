/* === 全局容器 === */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0FFF4 0%, #FFFFFF 100%);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* === 顶部搜索区 (复用 Diet Search) === */
.search-header {
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  position: sticky;
  z-index: 50;
  background: rgba(240, 255, 244, 0.9);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
}

.nav-back-btn {
  width: 72rpx; height: 72rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.1);
  flex-shrink: 0;
}
.back-arrow { font-size: 40rpx; color: #334155; margin-top: -6rpx; }

.search-capsule {
  flex: 1; height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border: 1rpx solid rgba(255, 255, 255, 1);
  border-radius: 40rpx;
  display: flex; align-items: center; padding: 0 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(148, 163, 184, 0.08);
  transition: all 0.3s ease;
}
.search-capsule:focus-within {
  border-color: rgba(74, 222, 128, 0.4);
  box-shadow: 0 0 0 4rpx rgba(74, 222, 128, 0.1);
  background: #fff;
}

.search-icon-css {
  width: 24rpx; height: 24rpx; border: 3rpx solid #94A3B8;
  border-radius: 50%; position: relative; margin-right: 16rpx;
}
.search-icon-css::after {
  content: ''; position: absolute; bottom: -8rpx; right: -8rpx;
  width: 10rpx; height: 3rpx; background: #94A3B8; transform: rotate(45deg);
}

.search-input { flex: 1; font-size: 28rpx; color: #334155; height: 100%; }
.input-placeholder { color: #94A3B8; font-weight: 300; }
.clear-btn { padding: 10rpx; color: #CBD5E1; font-size: 32rpx; }

/* === 内容区 === */
.search-body { flex: 1; width: 100%; box-sizing: border-box; padding: 0 32rpx; }

/* 标题样式 */
.section-title-sm {
  font-size: 26rpx; color: #94A3B8; margin: 30rpx 0 20rpx;
}
.group-header {
  display: flex; justify-content: space-between; align-items: center;
  margin: 30rpx 0 20rpx;
}
.group-title { font-size: 28rpx; font-weight: 600; color: #334155; }
.clear-icon { font-size: 24rpx; opacity: 0.6; padding: 10rpx; }

/* 标签云 */
.tag-cloud { display: flex; flex-wrap: wrap; gap: 16rpx; }
.glass-tag {
  padding: 12rpx 32rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  font-size: 26rpx; color: #64748B;
}

/* 分类筛选 (横向滚动) */
.filter-scroll {
  display: flex; gap: 20rpx; overflow-x: auto; padding: 10rpx 4rpx;
  margin-bottom: 30rpx;
}
.filter-chip {
  padding: 16rpx 36rpx;
  background: #fff;
  border: 2rpx solid #F1F5F9;
  border-radius: 24rpx;
  font-size: 28rpx; color: #64748B;
  white-space: nowrap; transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}
.filter-chip.active {
  background: linear-gradient(135deg, #ECFDF5 0%, #FFF 100%);
  border-color: #4ADE80;
  color: #10B981; font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(74, 222, 128, 0.15);
}

/* 运动卡片 (Air Card) */
.exercise-list { display: flex; flex-direction: column; gap: 20rpx; }
.exercise-card {
  display: flex; align-items: center;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.7);
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.05);
  backdrop-filter: blur(10rpx);
  transition: all 0.2s;
}
.exercise-card:active {
  transform: scale(0.98); background: rgba(255, 255, 255, 0.9);
}

.ex-icon-box {
  width: 88rpx; height: 88rpx;
  background: linear-gradient(135deg, rgba(209, 250, 229, 0.5) 0%, rgba(255, 255, 255, 0.8) 100%);
  border-radius: 24rpx;
  display: flex; align-items: center; justify-content: center;
  font-size: 44rpx; margin-right: 24rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.ex-info { flex: 1; display: flex; flex-direction: column; gap: 6rpx; }
.ex-name { font-size: 30rpx; font-weight: 600; color: #334155; }
.ex-meta { font-size: 24rpx; color: #94A3B8; }

.add-btn-circle {
  width: 64rpx; height: 64rpx; border-radius: 50%;
  background: rgba(74, 222, 128, 0.1);
  display: flex; align-items: center; justify-content: center;
  transition: all 0.2s;
}
.plus-icon { width: 24rpx; height: 24rpx; position: relative; }
.plus-icon::before, .plus-icon::after {
  content: ''; position: absolute; background: #10B981; border-radius: 2rpx;
}
.plus-icon::before { width: 100%; height: 4rpx; top: 10rpx; left: 0; }
.plus-icon::after { width: 4rpx; height: 100%; top: 0; left: 10rpx; }

.exercise-card:active .add-btn-circle { background: #10B981; }
.exercise-card:active .plus-icon::before, 
.exercise-card:active .plus-icon::after { background: #fff; }

/* 空状态 */
.empty-state { text-align: center; padding: 60rpx; color: #CBD5E1; font-size: 26rpx; }

/* === 时长录入弹窗 (Glass Modal) === */
.duration-modal {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  z-index: 200; visibility: hidden; opacity: 0; transition: all 0.3s;
  background: rgba(0, 0, 0, 0.5);
  display: flex; align-items: flex-end;
}
.duration-modal.show { visibility: visible; opacity: 1; }

.modal-content {
  width: 100%;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.95) 0%, rgba(240, 255, 244, 0.95) 100%);
  backdrop-filter: blur(24px);
  border-radius: 48rpx 48rpx 0 0;
  padding: 48rpx 40rpx calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  box-shadow: 0 -20rpx 60rpx rgba(0, 0, 0, 0.1);
}

.modal-header {
  display: flex; justify-content: space-between; align-items: center; margin-bottom: 40rpx;
}
.modal-title { font-size: 34rpx; font-weight: 600; color: #1E293B; }
.modal-close { font-size: 40rpx; color: #94A3B8; padding: 10rpx; }

.modal-info {
  display: flex; flex-direction: column; align-items: center; gap: 16rpx; margin-bottom: 50rpx;
}
.modal-emoji { font-size: 80rpx; }
.modal-name { font-size: 36rpx; font-weight: 600; color: #334155; }

/* 滑块区 */
.slider-box { margin-bottom: 50rpx; }
.slider-header {
  display: flex; justify-content: space-between; align-items: flex-end; margin-bottom: 24rpx;
}
.slider-header text:first-child { font-size: 26rpx; color: #64748B; }
.slider-value {
  font-size: 56rpx; font-weight: 700; color: #059669; /* 深绿色 */
  font-family: 'SF Pro Display', sans-serif;
}
.slider-value .unit { font-size: 24rpx; color: #94A3B8; font-weight: 400; margin-left: 8rpx; }

.quick-tags { display: flex; justify-content: space-between; margin-top: 20rpx; }
.quick-tag {
  font-size: 24rpx; color: #64748B; background: #fff;
  padding: 8rpx 20rpx; border-radius: 20rpx; border: 1rpx solid #E2E8F0;
}

/* 消耗预览 */
.burn-preview {
  background: rgba(74, 222, 128, 0.08);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 40rpx;
}
.burn-label { font-size: 26rpx; color: #64748B; }
.burn-value { font-size: 36rpx; font-weight: 700; color: #059669; }
.burn-unit { font-size: 24rpx; font-weight: 400; color: #059669; }

/* 确认按钮 */
.confirm-btn {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: white; text-align: center; padding: 32rpx;
  border-radius: 60rpx; font-size: 32rpx; font-weight: 700;
  box-shadow: 0 12rpx 30rpx rgba(5, 150, 105, 0.3);
  transition: all 0.2s;
}
.confirm-btn:active { transform: scale(0.98); box-shadow: 0 6rpx 16rpx rgba(5, 150, 105, 0.4); }

/* 动画 */
.animate-fade-in {
  animation: fadeIn 0.4s ease;
}
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
