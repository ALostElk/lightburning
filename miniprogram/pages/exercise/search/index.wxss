/**
 * 运动搜索页面样式
 * 与饮食搜索保持一致的设计语言
 */

 .container {
  min-height: 100vh;
  background: #F5F7FA;
  display: flex;
  flex-direction: column;
}

/* ============ 自定义导航栏 ============ */
.custom-navbar {
  display: flex;
  align-items: center;
  padding: 100rpx 24rpx 20rpx;
  background: #ffffff;
  position: relative;
}

.navbar-back {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e4e6eb;
  border-radius: 50%;
  transition: all 0.2s ease;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.navbar-back:active {
  background: #e4e6eb;
  transform: scale(0.95);
}

.back-icon {
  font-size: 48rpx;
  color: #374151;
  font-weight: 500;
}

/* 搜索框容器 - 占据剩余空间 */
.custom-navbar .search-container {
  flex: 0.9;
  width:650rpx;
}

.search-box {
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  height: 80rpx;
  background: #eaecf0;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  width:100%;
}

.search-box:focus-within {
  background: #FFFFFF;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 53, 0.1);
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #1F2937;
  min-width: 0; /* 防止文本溢出 */
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #D1D5DB;
  border-radius: 50%;
  color: #FFFFFF;
  font-size: 28rpx;
  margin-left: 12rpx;
  flex-shrink: 0;
}

.search-clear:active {
  background: #9CA3AF;
}

/* ============ 内容区 ============ */
.content-scroll {
  flex: 1;
  padding: 24rpx;
}

/* ============ 区块样式 ============ */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-left: 30rpx;   /* 左侧留白 */
  padding-right: 30rpx;  /* 右侧留白 */
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.section-action {
  font-size: 24rpx;
  color: #FF6B35;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 53, 0.1);
  border-radius: 12rpx;
}

.section-action:active {
  background: rgba(255, 107, 53, 0.2);
}

/* ============ 最近搜索 ============ */
.recent-section {
  margin-bottom: 32rpx;
}

.recent-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.recent-tag {
  padding: 16rpx 24rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #374151;
  border: 1rpx solid #E5E7EB;
  transition: all 0.2s ease;
}

.recent-tag:active {
  background: #F9FAFB;
  border-color: #FF6B35;
  color: #FF6B35;
}

/* ============ 类型筛选 ============ */
.type-filters {
  display: flex;
  gap: 16rpx; /* 去掉间距，用内边距控制 */
  margin-bottom: 24rpx;
  overflow-x: hidden; /* 隐藏溢出，确保不出现滚动条 */
  padding-bottom: 8rpx;
  padding-left: 20rpx;  /* 左边界留白 */
  padding-right: 20rpx; /* 右边界留白 */
  box-sizing: border-box; /* 确保内边距不影响总宽度 */
}

.type-filter {
  flex: 1; /* 关键：每个按钮等分剩余空间 */
  min-width: 0; /* 防止文本溢出 */
  padding: 20rpx 0; /* 调整上下内边距 */
  background: #FFFFFF;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #374151;
  border: 2rpx solid #E5E7EB;
  transition: all 0.3s ease;
  white-space: nowrap;
  text-align: center; /* 文字居中 */
  /* 确保内容在按钮内居中 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.type-filter.active {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(255, 142, 83, 0.1) 100%);
  border-color: #FF6B35;
  color: #FF6B35;
  font-weight: 600;
}

/* ============ 运动列表 ============ */
.exercise-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  /* 添加左右内边距，实现左右边距 */
  padding-left: 20rpx;  /* 左边界留白 */
  padding-right: 20rpx; /* 右边界留白 */
  box-sizing: border-box; /* 确保内边距不影响总宽度 */
}

.exercise-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.exercise-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.15);
}

.exercise-icon {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.8) 0%, rgba(255, 247, 237, 0.8) 100%);
  border-radius: 20rpx;
  font-size: 50rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.exercise-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.exercise-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
}

.exercise-meta {
  font-size: 28rpx;
  color: #9CA3AF;
}

.exercise-action {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
  flex-shrink: 0;
}

.add-icon {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: 300;
}

/* ============ 加载状态 ============ */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 64rpx;
  height: 64rpx;
  border: 6rpx solid rgba(255, 107, 53, 0.2);
  border-top-color: #FF6B35;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #9CA3AF;
}

/* ============ 空状态 ============ */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #9CA3AF;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #D1D5DB;
}

