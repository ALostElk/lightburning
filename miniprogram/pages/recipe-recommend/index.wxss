/* pages/recipe-recommend/index.wxss */

/* 全局容器 - 极简清新绿 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F0FDF4 0%, #F8FAFC 100%);
  padding-bottom: 40rpx;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

/* 顶部标签切换 */
.tabs-wrapper {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(240, 253, 244, 0.95);
  backdrop-filter: blur(10px);
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0,0,0,0.03);
}

.tabs-list {
  display: flex;
  justify-content: center;
  gap: 32rpx;
}

.tab-pill {
  padding: 12rpx 36rpx;
  background: transparent;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  color: #64748B;
  font-weight: 500;
  font-size: 28rpx;
}

.tab-pill.active {
  background: #FFFFFF;
  color: #059669; /* Emerald 600 */
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.1);
  font-weight: 600;
}

/* 内容区域 */
.content-area {
  padding: 24rpx 32rpx;
}

/* AI 建议区块 - 极简风格 */
.ai-section {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
  border: 1px solid rgba(16, 185, 129, 0.05);
}

.ai-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}
.ai-dot {
  width: 12rpx;
  height: 12rpx;
  background: #059669;
  border-radius: 50%;
}
.ai-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
}

.ai-item {
  font-size: 26rpx;
  color: #475569;
  line-height: 1.6;
  padding: 16rpx;
  background: #F8FAF9;
  border-radius: 12rpx;
}

/* 食谱卡片 - 纯文字版 */
.recipe-card {
  margin-bottom: 32rpx;
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(100, 116, 139, 0.04);
  border: 1px solid #FAFBFD;
  position: relative;
  transition: transform 0.2s ease;
}
.recipe-card:active {
  transform: scale(0.99);
}

/* 头部：标题与分数 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}
.header-main {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #1E293B;
  line-height: 1.3;
}

.score-badge {
  display: inline-flex;
  align-items: baseline;
  gap: 2rpx;
}
.score-val {
  color: #059669;
  font-weight: 800;
  font-size: 32rpx;
}
.score-unit {
  color: #059669;
  font-size: 22rpx;
  font-weight: 500;
}

/* 收藏按钮 */
.fav-btn {
  padding: 10rpx;
  margin-right: -10rpx;
  margin-top: -10rpx;
}
.fav-icon {
  font-size: 40rpx;
  color: #cbd5e1;
  transition: color 0.2s;
}
.fav-icon.active {
  color: #F87171;
}

/* 标签行 */
.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 32rpx;
}
.tag-item {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  background: #F1F5F9;
  color: #475569;
  border-radius: 8rpx;
  font-weight: 500;
}

/* 核心数据 - 卡片式数据展示 */
.data-grid {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #F8FAFC;
  border-radius: 20rpx;
  padding: 24rpx 40rpx;
  margin-bottom: 24rpx;
}

.data-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}
.data-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #334155;
  font-family: 'DIN Alternate', sans-serif;
  line-height: 1;
}
.data-label {
  font-size: 22rpx;
  color: #94A3B8;
  margin-top: 6rpx;
}

.data-divider {
  width: 2rpx;
  height: 48rpx;
  background: #E2E8F0;
}

/* 描述/理由 */
.desc-box {
  margin-top: 20rpx;
}
.desc-text {
  font-size: 26rpx;
  color: #64748B;
  line-height: 1.6;
  text-align: justify;
}

/* 底部按钮 */
.refresh-footer {
  margin: 20rpx 0 60rpx;
  display: flex;
  justify-content: center;
}
.glass-btn {
  background: #334155;
  color: #FFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 100rpx;
  padding: 24rpx 64rpx;
  box-shadow: 0 8rpx 20rpx rgba(51, 65, 85, 0.2);
  transition: all 0.2s;
  width: auto;
}
.glass-btn:active {
  transform: scale(0.96);
  background: #1E293B;
}

/* 加载与空状态 */
.loading-state, .empty-state {
  padding-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}
.loading-spinner {
  width: 50rpx;
  height: 50rpx;
  border: 4rpx solid #E2E8F0;
  border-top-color: #059669;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
.empty-circle {
  width: 140rpx;
  height: 140rpx;
  background: #F1F5F9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.empty-icon-text {
  font-size: 60rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
}
@keyframes spin { to { transform: rotate(360deg); } }