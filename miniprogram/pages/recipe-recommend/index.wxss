/* pages/recipe-recommend/index.wxss */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF5F0 0%, #F5F5F5 100%);
  padding-bottom: 40rpx;
}

/* 标签切换 */
.tabs-container {
  position: sticky;
  top: 0;
  z-index: 100;
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tabs {
  display: flex;
  justify-content: space-around;
  padding: 0 20rpx;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
  transform: scale(1.05);
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.tab-label {
  font-size: 24rpx;
  color: #666;
}

.tab-item.active .tab-label {
  color: #fff;
  font-weight: 600;
}

/* AI建议 */
.ai-suggestions {
  margin: 20rpx;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  color: #fff;
}

.ai-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.ai-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  padding: 16rpx;
  margin-top: 12rpx;
  backdrop-filter: blur(10rpx);
}

.suggestion-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.suggestion-message {
  font-size: 26rpx;
  line-height: 1.6;
  flex: 1;
}

.severity-warning {
  border-left: 4rpx solid #FFD700;
}

.severity-error {
  border-left: 4rpx solid #FF6B6B;
}

.severity-success {
  border-left: 4rpx solid #51CF66;
}

/* 刷新按钮 */
.refresh-section {
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.btn-refresh {
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #FF6B35;
  border-radius: 50rpx;
  padding: 16rpx 40rpx;
  font-size: 26rpx;
  color: #FF6B35;
}

.refresh-icon {
  margin-right: 8rpx;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #FFE8E0;
  border-top-color: #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* 食谱列表 */
.recipe-list {
  padding: 0 20rpx;
}

.recipe-card {
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s;
}

.recipe-card:active {
  transform: scale(0.98);
}

.recipe-image-container {
  position: relative;
  width: 100%;
  height: 360rpx;
}

.recipe-image {
  width: 100%;
  height: 100%;
}

.recipe-score {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 8rpx 16rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.score-icon {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.score-value {
  font-size: 24rpx;
  font-weight: 600;
}

.recipe-info {
  padding: 24rpx;
}

.recipe-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.recipe-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.recipe-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 50%;
}

.action-icon {
  font-size: 32rpx;
}

.recipe-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

/* 营养信息 */
.nutrition-info {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  margin-bottom: 16rpx;
  border-top: 1rpx solid #F0F0F0;
  border-bottom: 1rpx solid #F0F0F0;
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nutrition-icon {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.nutrition-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.nutrition-unit {
  font-size: 20rpx;
  color: #999;
  margin-top: 2rpx;
}

/* 标签 */
.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
}

/* 烹饪信息 */
.cooking-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

