/* pages/recipe-recommend/index.wxss */

/* 全局容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  padding-bottom: 40rpx;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

/* 顶部标签切换 (Floating Pills) */
.tabs-wrapper {
  position: sticky;
  top: 0;
  z-index: 100;
  background: rgba(245, 250, 255, 0.95); /* 半透明背景防遮挡 */
  backdrop-filter: blur(10px);
  padding: 20rpx 0;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.05);
}

.tabs-list {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.tab-pill {
  padding: 16rpx 32rpx;
  background: #F1F5F9;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  color: #64748B;
}

.tab-pill.active {
  background: #334155; /* Slate-700 */
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(51, 65, 85, 0.3);
}

.tab-icon {
  font-size: 28rpx;
}
.tab-label {
  font-size: 28rpx;
  font-weight: 500;
}

/* 内容区域 */
.content-area {
  padding: 20rpx 32rpx;
}

/* 通用玻璃卡片 */
.glass-card {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(148, 163, 184, 0.05);
  overflow: hidden;
}

/* AI 建议区块 */
.ai-section {
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.ai-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}
.ai-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #334155;
}
.ai-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.ai-item {
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #475569;
  border-left: 6rpx solid #CBD5E1;
}
.ai-item.success { border-left-color: #10B981; }
.ai-item.warning { border-left-color: #F59E0B; }
.ai-item.error { border-left-color: #EF4444; }

/* 食谱卡片 */
.recipe-card {
  margin-bottom: 32rpx;
  display: flex;
  flex-direction: column;
}

.card-image-box {
  width: 100%;
  height: 360rpx;
  position: relative;
  background: #F1F5F9;
}
.card-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.score-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  color: #FFD700;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 4rpx;
}
.fav-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.card-content {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #334155;
  line-height: 1.3;
}

.card-desc {
  font-size: 26rpx;
  color: #64748B;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.5;
}

/* 标签行 (Flex fix for bug) */
.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
}

.tag-pill {
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  background: #F1F5F9;
  border-radius: 30rpx;
  color: #475569;
}
.meta-item {
  font-size: 22rpx;
  color: #94A3B8;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

/* 换一批按钮 */
.refresh-footer {
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}
.glass-btn {
  background: #334155;
  color: #FFF;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 50rpx;
  padding: 24rpx 0;
  width: 100%;
  box-shadow: 0 8rpx 20rpx rgba(51, 65, 85, 0.2);
}
.glass-btn:active {
  transform: scale(0.98);
}

/* 加载与空状态 */
.loading-state, .empty-state {
  height: 60vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E2E8F0;
  border-top-color: #334155;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
}
.empty-text {
  font-size: 28rpx;
  color: #94A3B8;
}
@keyframes spin { to { transform: rotate(360deg); } }