/* pages/stats/weekly.wxss */

/* ===== 全局: 低密度 (Low Density) & 清新淡雅 ===== */
.page {
  padding: 40rpx 40rpx 100rpx;
  min-height: 100vh;
  box-sizing: border-box;
  color: #2F3E33;
  background: linear-gradient(180deg, #F8FDF9 0%, #FFFFFF 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

/* 1. 顶部日期 (Floating) */
.header-range {
  display: flex;
  justify-content: center;
  margin-bottom: 50rpx;
}

.range-pill {
  font-size: 26rpx;
  color: #557C58;
  background: #E8F5E9;
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 2. 通用: 玻璃卡片 */
.glass-card {
  background: rgba(255, 255, 255, 0.85); /* Highly opaque */
  border-radius: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(46, 125, 50, 0.05); /* Greenish shadow */
  backdrop-filter: blur(20px);
  padding: 40rpx;
  margin-bottom: 0;
}

/* 3. 大数据卡片 */
.big-stat-card {
  margin-bottom: 60rpx;
  padding: 48rpx 40rpx;
}

.card-header-clean {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  color: #1B5E20;
  font-weight: 600;
}

.header-tag {
  font-size: 24rpx;
  color: #388E3C;
  background: #F1F8E9;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.stat-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  align-items: center;
}

.vertical-line {
  width: 1rpx;
  height: 60rpx;
  background: #E8F5E9;
}

.stat-val {
  font-size: 56rpx;
  font-weight: 300;
  color: #2F3E33;
  font-family: 'Helvetica Neue', sans-serif;
}

.stat-unit {
  font-size: 24rpx;
  color: #A5D6A7;
  font-weight: 400;
}

.stat-label {
  font-size: 24rpx;
  color: #8D9E90;
}

.footer-hint {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx dashed #E8F5E9;
  font-size: 24rpx;
  color: #A5D6A7;
  text-align: center;
}

/* 4. 每日追踪 (List) */
.section-container {
  margin-bottom: 60rpx;
}

.section-title-outer {
  font-size: 24rpx;
  color: #8D9E90;
  margin-bottom: 24rpx;
  padding-left: 12rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.day-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.day-row {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.d-label {
  font-size: 26rpx;
  color: #557C58;
  width: 60rpx;
}

.d-bar-track {
  flex: 1;
  height: 12rpx;
  background: #F1F8E9;
  border-radius: 999rpx;
  overflow: hidden;
}

.d-bar-fill {
  height: 100%;
  background: #66BB6A;
  border-radius: 999rpx;
}

.d-score {
  font-size: 26rpx;
  color: #2F3E33;
  font-weight: 600;
  width: 60rpx;
  text-align: right;
  font-family: 'Helvetica Neue', monospace;
}

.empty-state {
  text-align: center;
  font-size: 26rpx;
  color: #ccc;
  padding: 20rpx;
}

/* 5. 文字报告 (Clean Text Blocks - No Emoji) */
.text-report-card {
  display: flex;
  flex-direction: column;
  gap: 40rpx;
}

.report-block {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.rb-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* Dot Indicators */
.indicator-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  position: relative;
}

/* Soft glow for dots */
.indicator-dot::after {
  content: "";
  position: absolute;
  top: -6rpx; left: -6rpx; right: -6rpx; bottom: -6rpx;
  border-radius: 50%;
  opacity: 0.25;
}

.highlight-bg { background: #F59E0B; }
.highlight-bg::after { background: #F59E0B; }

.improve-bg   { background: #F87171; }
.improve-bg::after   { background: #F87171; }

.suggest-bg   { background: #3B82F6; }
.suggest-bg::after   { background: #3B82F6; }

.rb-title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2F3E33;
  letter-spacing: 1rpx;
}

.rb-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #4B5563; /* Slate-600 */
  text-align: justify;
  padding-left: 32rpx; /* Align with title text (16+16 gap) */
}

.divider-dash {
  height: 1rpx;
  background: #F1F8E9;
  width: 100%;
}
