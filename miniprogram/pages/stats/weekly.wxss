/* pages/stats/weekly.wxss */

.page {
  padding: 16rpx 20rpx 40rpx;
  /* 同样改成柔和渐变背景 */
  background: linear-gradient(180deg, #f7fff8 0%, #e7fff1 45%, #f5fff8 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 时间范围 */
.range-bar {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 20rpx;
}

.range-text {
  font-size: 26rpx;
  color: #666;
}

/* 通用卡片，保持和首页一致的风格 */
.card {
  border-radius: 24rpx;
  padding: 20rpx 24rpx;
  margin-bottom: 20rpx;
  /* 浅色渐变 + 深色文字 */
  color: #333333;
  position: relative;
  overflow: hidden;
}


/* 卡片渐变改成柔和浅色 */
.card--primary {
  /* 周概览：淡蓝绿 */
  background: linear-gradient(135deg, #e2f2ff, #e6fff6);
}

.card--green {
  /* 运动 / 完成度：薄荷绿 */
  background: linear-gradient(135deg, #e0ffe9, #d4f9e4);
}

.card--blue {
  /* 摄入 / 热量：浅蓝紫 */
  background: linear-gradient(135deg, #e4edff, #dde7ff);
}

.card--orange {
  /* 建议 / 提示：暖橙 */
  background: linear-gradient(135deg, #ffe8d2, #ffd4b8);
}

.card--plain {
  background: #ffffff;
  color: #333333;
}

/* 头部 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
}

.card-sub {
  font-size: 22rpx;
  opacity: 0.86;
}

.card-body {
  margin-top: 8rpx;
}

/* 顶部摘要里的两列 */
.summary-row {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}

.summary-block {
  flex: 1;
}

.summary-block:nth-child(2) {
  text-align: right;
}

.summary-label {
  font-size: 22rpx;
  opacity: 0.9;
}

.summary-value {
  margin-top: 4rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* tag */
.card-footer {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.18);
}

/* 每日完成度行 */
.day-row {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.day-label {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
}

.day-progress {
  flex: 1;
  height: 14rpx;
  border-radius: 999rpx;
  background: #f1f1f5;
  margin: 0 16rpx;
  overflow: hidden;
}

.day-progress-inner {
  height: 100%;
  border-radius: 999rpx;
  /* 周内每天完成度：用和首页一致的薄荷绿色渐变 */
  background: linear-gradient(90deg, #49c58c, #2fb6a0);
}

.day-score {
  width: 60rpx;
  text-align: right;
  font-size: 24rpx;
  color: #333;
}

/* 文案块 */
.text-block {
  margin-top: 12rpx;
  font-size: 24rpx;
  line-height: 1.6;
  color: #444444; 
}



/* 空状态 */
.empty {
  padding: 16rpx 0;
  font-size: 22rpx;
  color: #999;
}
