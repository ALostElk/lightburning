/* pages/stats/weekly.wxss */
/* Match Home/Stats: low-saturation + glass + soft glow (WXSS-safe, no '*') */

.page {
  padding: 20rpx 28rpx 48rpx;
  min-height: 100vh;
  box-sizing: border-box;
  color: #334155;
  /* 和 home / stats 统一的天空白淡渐变 */
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
}

/* 周范围条：轻胶囊 */
.range-bar {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 8rpx 0 18rpx;
}

.range-text {
  font-size: 24rpx;
  color: #64748B;
  padding: 10rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.70);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  box-shadow: 0 10rpx 22rpx rgba(148, 163, 184, 0.10);
  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
}

/* ============ 通用卡片（玻璃拟态 + 光晕） ============ */
.card {
  position: relative;
  overflow: hidden;

  border-radius: 32rpx;
  padding: 22rpx 24rpx;
  margin-bottom: 18rpx;

  background: rgba(255, 255, 255, 0.70);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  box-shadow:
    0 18rpx 40rpx rgba(148, 163, 184, 0.10),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.55);

  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
  color: #334155;
}

/* 顶部柔和光晕 */
.card::before {
  content: "";
  position: absolute;
  left: -20%;
  top: -25%;
  width: 140%;
  height: 140%;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.22;
  background: radial-gradient(circle, var(--glow, rgba(148, 163, 184, 1)) 0%, transparent 70%);
  z-index: 0;
}

/* 让内容盖在光晕之上（WXSS-safe：列举类名，不用 *） */
.card-header,
.card-body,
.card-footer,
.summary-row,
.summary-block,
.day-row,
.day-label,
.day-progress,
.day-progress-inner,
.day-score,
.text-block,
.empty {
  position: relative;
  z-index: 1;
}

/* 各卡主题光晕（低饱和） */
.card--primary { --glow: rgba(93, 173, 255, 1); }  /* 淡蓝 */
.card--green   { --glow: rgba(110, 231, 183, 1); } /* 薄荷 */
.card--blue    { --glow: rgba(94, 234, 212, 1); }  /* 青蓝 */
.card--orange  { --glow: rgba(253, 186, 116, 1); } /* 柔橙 */
.card--plain   { --glow: rgba(148, 163, 184, 1); } /* 灰蓝 */

/* ============ 卡片头部 ============ */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1E293B;
  letter-spacing: 1rpx;
}

.card-sub {
  font-size: 22rpx;
  color: #64748B;
}

.card-body {
  margin-top: 6rpx;
}

/* ============ 总览摘要两列 ============ */
.summary-row {
  display: flex;
  justify-content: space-between;
  gap: 18rpx;
  margin-top: 8rpx;
}

.summary-block {
  flex: 1;
}

.summary-block:nth-child(2) {
  text-align: right;
}

.summary-label {
  font-size: 22rpx;
  color: #94A3B8;
}

.summary-value {
  margin-top: 6rpx;
  font-size: 34rpx;
  font-weight: 800;
  color: #0F172A;
  font-family: 'SF Mono', 'Menlo', monospace;
}

/* tag：轻玻璃胶囊 */
.card-footer {
  margin-top: 14rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.70);
  color: #475569;
}

/* ============ 每日完成度行 ============ */
.day-row {
  display: flex;
  align-items: center;
  margin-top: 14rpx;
}

.day-label {
  width: 90rpx;
  font-size: 24rpx;
  color: #64748B;
}

.day-progress {
  flex: 1;
  height: 14rpx;
  border-radius: 999rpx;
  margin: 0 16rpx;
  overflow: hidden;

  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.70);
}

.day-progress-inner {
  height: 100%;
  border-radius: 999rpx;
  /* 薄荷渐变：跟你 stats 计划条一致 */
  background: linear-gradient(90deg, rgba(110,231,183,1), rgba(94,234,212,1));
}

.day-score {
  width: 64rpx;
  text-align: right;
  font-size: 24rpx;
  font-weight: 700;
  color: #1E293B;
  font-family: 'SF Mono', 'Menlo', monospace;
}

/* 文案块：更“呼吸感” */
.text-block {
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 1.7;
  color: #475569;
}

/* 空状态 */
.empty {
  padding: 16rpx 0;
  font-size: 22rpx;
  color: #94A3B8;
}
