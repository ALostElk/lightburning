page {
  background: #f3fff6;
}

.page {
  padding: 20rpx 24rpx 40rpx;
  box-sizing: border-box;
}

.shadow-card {
  border-radius: 28rpx;
  background: #ffffff;
  box-shadow: 0 18rpx 40rpx rgba(0, 0, 0, 0.08);
}

/* 顶部周卡片 */
.week-card {
  padding: 26rpx 26rpx 30rpx;
  background: linear-gradient(135deg, #eafff3, #f9fffb);
  margin-bottom: 26rpx;
}

.week-top-row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 14rpx;
}

.week-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #303f4c;
}

.week-date {
  font-size: 22rpx;
  color: #8d9aa6;
}

.week-main {
  display: flex;
  margin-top: 10rpx;
}

.week-circle {
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.week-circle-inner {
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  border: 14rpx solid rgba(255, 255, 255, 0.85);
  background: #f7fff9;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.week-circle-main {
  font-size: 40rpx;
  font-weight: 600;
  color: #14b96b;
}

.week-circle-sub {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #96a3af;
}

.week-info {
  flex: 1;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.week-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.week-info-row:last-child {
  margin-bottom: 0;
}

.dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.dot-green {
  background: #14b96b;
}

.dot-blue {
  background: #4b8cff;
}

.dot-gray {
  background: #c3ccd5;
}

.week-info-label {
  font-size: 24rpx;
  color: #4c5965;
  flex-shrink: 0;
}

.week-info-value {
  margin-left: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #273746;
}

.week-info-small {
  margin-left: 12rpx;
  font-size: 22rpx;
  color: #8896a2;
}

/* 每日得分 */
.daily-score-card {
  padding: 24rpx 24rpx 12rpx;
  margin-bottom: 26rpx;
}

.card-header {
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333e4a;
}

.card-sub {
  margin-top: 4rpx;
  font-size: 22rpx;
  color: #9aa6b2;
}

.score-row {
  display: flex;
  padding: 14rpx 0;
  border-bottom: 1rpx solid #f1f3f6;
}

.score-row:last-child {
  border-bottom: none;
}

.score-label {
  width: 170rpx;
}

.score-day {
  font-size: 24rpx;
  color: #465360;
}

.score-date {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #a0adb8;
}

.score-bar {
  flex: 1;
  display: flex;
  align-items: center;
}

.score-bar-bg {
  flex: 1;
  height: 12rpx;
  border-radius: 999rpx;
  background: #edf2f7;
  overflow: hidden;
}

.score-bar-fill {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #57e3a2, #14b96b);
}

.score-value {
  width: 80rpx;
  text-align: right;
  font-size: 24rpx;
  color: #273746;
  margin-left: 12rpx;
}

/* 文案卡片 */
.text-card {
  padding: 22rpx 24rpx 24rpx;
  margin-bottom: 20rpx;
}

.text-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #333e4a;
  margin-bottom: 8rpx;
}

.text-content {
  font-size: 24rpx;
  line-height: 1.6;
  color: #5b6976;
}

.empty-tip {
  padding: 18rpx 0 4rpx;
  font-size: 24rpx;
  color: #9aa6b2;
  text-align: center;
}
