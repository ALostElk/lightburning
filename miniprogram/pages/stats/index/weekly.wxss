.page {
  min-height: 100vh;
  padding: 24rpx 24rpx 40rpx;
  box-sizing: border-box;
  background: linear-gradient(180deg, #f8fbff 0%, #f2f5ff 40%, #ffffff 100%);
}

/* 顶部总结卡片 */

.header-card {
  padding: 28rpx 24rpx 20rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #4f46e5 0%, #6366f1 40%, #0ea5e9 100%);
  color: #ffffff;
  box-shadow: 0 16rpx 40rpx rgba(15, 23, 42, 0.18);
  margin-bottom: 32rpx;
}

.header-title-row {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
}

.header-sub {
  margin-top: 6rpx;
  font-size: 22rpx;
  opacity: 0.9;
}

.summary-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.summary-block {
  flex: 1;
  padding: 16rpx 18rpx;
  border-radius: 20rpx;
  background: rgba(15, 23, 42, 0.18);
  backdrop-filter: blur(10rpx);
}

.summary-label {
  font-size: 22rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 600;
}

.summary-extra {
  margin-top: 4rpx;
  font-size: 22rpx;
  opacity: 0.85;
}

/* 通用卡片 */

.section-card {
  margin-bottom: 24rpx;
  padding: 20rpx 22rpx 18rpx;
  border-radius: 22rpx;
  background: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.section-sub {
  font-size: 22rpx;
  color: #9ca3af;
}

.empty-text {
  padding: 8rpx 0 4rpx;
  font-size: 24rpx;
  color: #9ca3af;
}

/* 每日完成度 */

.day-row {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.day-left {
  width: 160rpx;
}

.day-name {
  font-size: 24rpx;
  color: #374151;
}

.day-date {
  font-size: 20rpx;
  color: #9ca3af;
}

.day-center {
  flex: 1;
  padding: 0 16rpx;
}

.day-bar {
  width: 100%;
  height: 14rpx;
  border-radius: 999rpx;
  background: #e5e7eb;
  overflow: hidden;
}

.day-bar-fill {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #22c55e 0%, #16a34a 40%, #10b981 100%);
}

.day-right {
  width: 80rpx;
  text-align: right;
  font-size: 24rpx;
  color: #111827;
}

.day-score {
  font-weight: 600;
}

/* 文本 */

.desc-text {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.6;
}

/* 分享按钮 */

.share-btn {
  margin-top: 20rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 999rpx;
  border: none;
  background: linear-gradient(90deg, #0ea5e9 0%, #6366f1 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
}
