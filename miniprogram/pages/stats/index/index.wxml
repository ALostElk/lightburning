<view class="header-card">
  <view class="header-top">
    <view class="header-title">数据概览</view>
    <view class="header-link" bindtap="goWeeklyReport">
      周报告 >
    </view>
  </view>
  <view class="header-card">
  <view class="header-top">
    <view class="header-title">选择周期</view>
    <view class="header-link" bindtap="goWeeklyReport">
     
    </view>
  </view>
    <view class="range-tabs">
      <view
        class="range-tab {{rangeType === 7 ? 'active' : ''}}"
        data-days="7"
        bindtap="onRangeChange"
      >近7天</view>
      <view
        class="range-tab {{rangeType === 30 ? 'active' : ''}}"
        data-days="30"
        bindtap="onRangeChange"
      >近30天</view>
      <view
        class="range-tab {{rangeType === 90 ? 'active' : ''}}"
        data-days="90"
        bindtap="onRangeChange"
      >近90天</view>
    </view>
    <view class="time-text">{{startDate}} ~ {{endDate}}</view>
  </view>

  <!-- 核心指标卡片 -->
  <view class="kpi-row">
    <view class="kpi-card">
      <view class="kpi-label">体重变化</view>
      <view class="kpi-value">{{weightDeltaText}}</view>
      <view class="kpi-sub">当前：{{currentWeight || '--'}} kg</view>
    </view>
    <view class="kpi-card">
      <view class="kpi-label">平均净热量</view>
      <view class="kpi-value">{{avgNetCalories || '--'}} kcal</view>
      <view class="kpi-sub">目标差值：{{avgDeficitText}}</view>
    </view>
  </view>

  <!-- 运动统计 + 达标率 -->
  <view class="section-card">
    <view class="section-header">
      <view class="section-title">运动 & 达标</view>
      <view class="section-sub">统计期间</view>
    </view>
    <view class="exercise-row">
      <view class="exercise-block">
        <view class="exercise-label">总运动次数</view>
        <view class="exercise-value">{{exerciseStats.totalCount}}</view>
      </view>
      <view class="exercise-block">
        <view class="exercise-label">总运动时长</view>
        <view class="exercise-value">{{exerciseStats.totalDuration}} min</view>
      </view>
      <view class="exercise-block">
        <view class="exercise-label">总消耗</view>
        <view class="exercise-value">{{exerciseStats.totalCalories}} kcal</view>
      </view>
    </view>
    <view class="rate-row">
      <view class="rate-text">
        达标天数：{{goalDays}} / {{totalDays}} 天
      </view>
      <view class="rate-bar">
        <view class="rate-fill" style="width: {{goalRateWidth}};"></view>

      </view>
      <view class="rate-percent">{{goalRate}}%</view>
    </view>
  </view>

  <!-- 体重变化折线图 -->
  <view class="section-card">
    <view class="section-header">
      <view class="section-title">体重变化</view>
      <view class="section-sub">更直观地看到趋势</view>
    </view>
    
  </view>

  <!-- 热量趋势图 -->
  <view class="section-card">
    <view class="section-header">
      <view class="section-title">热量趋势</view>
      <view class="section-sub">摄入 / 消耗 / 净差</view>
    </view>
    
  </view>

  <!-- 营养素分布 -->
  <view class="section-card">
    <view class="section-header">
      <view class="section-title">营养素分布</view>
      <view class="section-sub">平均每日摄入</view>
    </view>
    
  </view>
</view>
