/* pages/stats/index.wxss */
/* Match Home: low-saturation + glass + soft glow */

.page {
  padding: 20rpx 28rpx 48rpx;
  min-height: 100vh;
  box-sizing: border-box;
  color: #334155; /* Slate-700 */
  /* 和 home 一致的“天空白”淡渐变 */
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
}

/* ============ 时间范围卡片（玻璃拟态） ============ */
.range-tabs-card {
  margin: 16rpx 0 22rpx;
  padding: 22rpx 24rpx;
  border-radius: 32rpx;

  background: rgba(255, 255, 255, 0.70);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  box-shadow:
    0 16rpx 36rpx rgba(148, 163, 184, 0.10),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.55);

  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
}

.range-tabs-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #334155;
  letter-spacing: 1rpx;
  margin-bottom: 16rpx;
}

/* pill 容器 */
.range-tabs {
  display: flex;
  align-items: center;
  gap: 14rpx;
  padding: 6rpx;
  border-radius: 999rpx;
  background: rgba(148, 163, 184, 0.12); /* Slate-400 低透明 */
  border: 1rpx solid rgba(255, 255, 255, 0.65);
}

.range-tab {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #64748B; /* Slate-500 */
  background: rgba(255,255,255,0.55);
  border: 1rpx solid rgba(255,255,255,0.6);
  transition: transform 0.15s ease;
}

.range-tab:active {
  transform: scale(0.98);
}

.range-tab.active {
  color: #1E293B; /* Slate-800 */
  font-weight: 700;
  background: rgba(255, 255, 255, 0.92);
  border: 1rpx solid rgba(255,255,255,0.95);
  box-shadow: 0 10rpx 22rpx rgba(148, 163, 184, 0.18);
}

.range-text {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #94A3B8; /* Slate-400 */
}

/* ============ 通用卡片（玻璃 + 内发光） ============ */
.card {
  position: relative;
  overflow: hidden;

  border-radius: 32rpx;
  padding: 22rpx 24rpx;
  margin-bottom: 18rpx;

  background: rgba(255, 255, 255, 0.70);
  border: 1rpx solid rgba(255, 255, 255, 0.85);
  box-shadow:
    0 18rpx 40rpx rgba(148, 163, 184, 0.10),
    inset 0 0 0 1rpx rgba(255, 255, 255, 0.55);

  backdrop-filter: blur(18px);
  -webkit-backdrop-filter: blur(18px);
  color: #334155;
}

/* 顶部柔和光晕：用变量控制每张卡的“主题色” */
.card::before {
  content: "";
  position: absolute;
  left: -20%;
  top: -25%;
  width: 140%;
  height: 140%;
  border-radius: 50%;
  filter: blur(60rpx);
  opacity: 0.22;
  background: radial-gradient(circle, var(--glow, rgba(110, 231, 183, 1)) 0%, transparent 70%);
  z-index: 0;
}

/* WXSS 兼容写法：不要用通配选择器 * */
.card-header,
.card-body,
.card-footer,
.summary-row,
.summary-block,
.chart-wrapper,
.divider,
.progress-section,
.progress-row,
.progress-bar,
.macro-row,
.macro-item,
.daily-item,
.daily-main,
.daily-sub,
.empty {
  position: relative;
  z-index: 1;
}


/* 各卡主题光晕（低饱和） */
.card--primary { --glow: rgba(93, 173, 255, 1); }  /* 淡蓝 */
.card--pink    { --glow: rgba(255, 154, 158, 1); } /* 柔粉 */
.card--green   { --glow: rgba(110, 231, 183, 1); } /* 薄荷 */
.card--blue    { --glow: rgba(94, 234, 212, 1); }  /* 青蓝 */
.card--orange  { --glow: rgba(253, 186, 116, 1); } /* 柔橙 */
.card--plain   { --glow: rgba(148, 163, 184, 1); } /* 灰蓝 */

/* ============ 卡片排版 ============ */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 12rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1E293B;
  letter-spacing: 1rpx;
}

.card-sub {
  font-size: 22rpx;
  color: #64748B;
}

.card-body {
  margin-top: 6rpx;
}

/* 两列摘要 */
.summary-row {
  display: flex;
  justify-content: space-between;
  gap: 18rpx;
}

.summary-block {
  flex: 1;
}

.summary-block:nth-child(2) {
  text-align: right;
}

.summary-label {
  font-size: 22rpx;
  color: #94A3B8;
}

.summary-value {
  margin-top: 6rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #0F172A;
  font-family: 'SF Mono', 'Menlo', monospace;
}

/* tag：轻玻璃胶囊 */
.card-footer {
  margin-top: 14rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.70);
  color: #475569;
}

/* ============ 图表区域 ============ */
.chart-wrapper {
  margin-top: 10rpx;
  padding: 14rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.40);
  border: 1rpx solid rgba(255, 255, 255, 0.65);
}

.weight-chart {
  width: 100%;
  height: 120px;
}

.divider {
  height: 1px;
  margin: 16rpx 0;
  background: rgba(148, 163, 184, 0.20);
}

/* ============ 进度条（更“干净”的 home 风） ============ */
.progress-section {
  margin-top: 4rpx;
}

.progress-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-row--bottom {
  margin-top: 8rpx;
}

.progress-label {
  font-size: 22rpx;
  color: #475569;
}

.progress-desc {
  font-size: 22rpx;
  color: #64748B;
}

.progress-percent {
  font-size: 24rpx;
  font-weight: 700;
  color: #1E293B;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.progress-bar {
  margin-top: 10rpx;
  height: 14rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.55);
  border: 1rpx solid rgba(255, 255, 255, 0.70);
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  border-radius: 999rpx;
  /* 柔橙（体重） */
  background: linear-gradient(90deg, rgba(253,186,116,1), rgba(255,154,158,1));
}

.progress-inner--green {
  /* 薄荷（计划） */
  background: linear-gradient(90deg, rgba(110,231,183,1), rgba(94,234,212,1));
}

/* ============ 运动状态文字 ============ */
.exercise-status {
  margin-top: 12rpx;
  font-size: 22rpx;
  color: #475569;
}

/* ============ 营养结构 ============ */
.macro-row {
  margin-top: 14rpx;
  display: flex;
  justify-content: space-between;
  gap: 10rpx;
}

.macro-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  border-radius: 22rpx;
  background: rgba(255, 255, 255, 0.35);
  border: 1rpx solid rgba(255, 255, 255, 0.60);
}

.macro-label {
  font-size: 22rpx;
  color: #94A3B8;
}

.macro-val {
  margin-top: 6rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: #0F172A;
  display: block;
  font-family: 'SF Mono', 'Menlo', monospace;
}

/* ============ 每日记录列表（更“轻”的分割线） ============ */
.daily-item {
  padding: 16rpx 0;
  border-bottom: 1px solid rgba(148, 163, 184, 0.16);
}

.daily-main {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.daily-date {
  font-size: 26rpx;
  color: #334155;
}

.daily-cal {
  font-size: 26rpx;
  font-weight: 700;
  color: #FF6B35;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.daily-sub {
  font-size: 22rpx;
  color: #64748B;
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.empty {
  padding: 18rpx 0 4rpx;
  font-size: 22rpx;
  color: #94A3B8;
}

/* ============ 周报入口（像 home 的轻玻璃按钮） ============ */
.weekly-entry {
  margin-top: 10rpx;
  padding: 22rpx 24rpx;
  border-radius: 32rpx;

  background: rgba(255, 255, 255, 0.80);
  border: 1rpx solid rgba(255, 255, 255, 0.90);
  box-shadow: 0 14rpx 34rpx rgba(148, 163, 184, 0.12);

  display: flex;
  justify-content: space-between;
  align-items: center;

  color: #334155;
  font-size: 26rpx;
}

.weekly-entry:active {
  transform: scale(0.99);
}

.weekly-arrow {
  font-size: 34rpx;
  color: #FF6B35;
}
