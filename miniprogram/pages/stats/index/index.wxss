/* pages/stats/index.wxss */

/* ===== 全局: 低密度 (Low Density) & 清新淡雅 ===== */
.page {
  padding: 24rpx 40rpx 100rpx; /* Increased padding */
  min-height: 100vh;
  box-sizing: border-box;
  color: #2F3E33;
  /* 极简灰绿渐变背景 */
  background: linear-gradient(180deg, #F8FDF9 0%, #FFFFFF 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

/* 1. 顶部悬浮切换 (Floating Tabs) */
.header-actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx; /* Huge margin for breathability */
}

.range-tabs {
  display: flex;
  background: #E8F5E9; /* Very light green pill */
  padding: 8rpx;
  border-radius: 100rpx;
  gap: 8rpx;
}

.range-tab {
  padding: 12rpx 32rpx;
  border-radius: 100rpx;
  font-size: 26rpx;
  color: #557C58;
  font-weight: 500;
  transition: all 0.3s ease;
}

.range-tab.active {
  background: #FFFFFF;
  color: #1B5E20;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.range-text {
  margin-top: 16rpx;
  font-size: 22rpx;
  color: #8D9E90;
  letter-spacing: 1rpx;
}

/* 2. 通用: 标题 (Small Caps Style) */
.section-title {
  font-size: 24rpx;
  color: #8D9E90;
  font-weight: 500;
  letter-spacing: 2rpx;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
  text-transform: uppercase;
}

/* 3. 通用: 玻璃卡片 (Clean) */
.glass-card {
  background: rgba(255, 255, 255, 0.85); /* Highly opaque */
  border-radius: 40rpx; /* Softer corners */
  /* No borders, just soft shadow */
  box-shadow: 0 10rpx 40rpx rgba(46, 125, 50, 0.05); /* Greenish shadow */
  margin-bottom: 40rpx; /* Spacing */
  padding: 40rpx;
  backdrop-filter: blur(20px);
}

/* 4. 核心大数据卡片 */
.big-stat-card {
  padding: 48rpx 40rpx;
}

.stat-row-main {
  display: flex;
  align-items: center;
  justify-content: space-between; /* Spread evenly */
  margin-bottom: 32rpx;
}

.stat-block {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.vertical-divider {
  width: 1rpx;
  height: 60rpx;
  background: #E8F5E9;
}

.stat-label {
  font-size: 24rpx;
  color: #8D9E90;
}

.stat-val {
  font-size: 40rpx;
  color: #2F3E33;
  font-weight: 500;
  font-family: 'Helvetica Neue', sans-serif;
}

.stat-val.big {
  font-size: 56rpx;
  font-weight: 400; /* Lighter weight for big numbers */
  color: #1B5E20;
}

.stat-unit {
  font-size: 24rpx;
  color: #A5D6A7;
  margin-left: 8rpx;
  font-weight: 400;
}

.stat-row-sub {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.sub-pill {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  background: #F1F8E9;
  color: #557C58;
  border-radius: 999rpx;
}

/* 5. 极简卡片 (Minimal) */
.minimal-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.card-header-min {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.min-title {
  font-size: 30rpx;
  color: #2F3E33;
  font-weight: 500;
}

.min-sub {
  font-size: 24rpx;
  color: #8D9E90;
}

.progress-track {
  height: 12rpx;
  background: #F1F8E9;
  border-radius: 999rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  border-radius: 999rpx;
}

.fill-orange { background: #FFB74D; } /* Soft Orange */
.fill-green { background: #66BB6A; } /* Fresh Green */

.progress-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #8D9E90;
}

/* 6. 双列布局 (Dual Grid) */
.dual-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.small-card {
  margin-bottom: 0; /* Override default */
  padding: 32rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.small-header {
  font-size: 24rpx;
  color: #8D9E90;
  margin-bottom: 12rpx;
}

.small-val {
  font-size: 40rpx;
  color: #2F3E33;
  font-family: 'Helvetica Neue', sans-serif;
  margin-bottom: 8rpx;
}

.small-desc {
  font-size: 20rpx;
  color: #A5D6A7;
}

.macro-mini-row {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #557C58;
  margin-bottom: 8rpx;
}

.macro-dot {
  width: 12rpx; height: 12rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}
.carbs { background: #E8F5E9; border: 2rpx solid #66BB6A; }
.protein { background: #E8F5E9; border: 2rpx solid #FFB74D; }
.fat { background: #E8F5E9; border: 2rpx solid #ef5350; }

/* 7. 每日记录 (Clean List) */
.section-container {
  margin-bottom: 40rpx;
}

.daily-list {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 0 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.02); /* Very subtle */
}

.daily-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #F1F8E9;
}

.daily-row:last-child {
  border-bottom: none;
}

.date-big {
  font-size: 28rpx;
  color: #2F3E33;
}

.d-cal {
  font-size: 32rpx;
  font-family: 'Helvetica Neue', sans-serif;
  color: #1B5E20;
  font-weight: 500;
}

.d-unit {
  font-size: 22rpx;
  color: #8D9E90;
  margin-left: 4rpx;
}

.empty-state {
  text-align: center;
  color: #ccc;
  padding: 40rpx;
  font-size: 24rpx;
}

/* 底部入口 */
.footer-action {
  text-align: center;
  font-size: 26rpx;
  color: #557C58;
  padding: 20rpx;
  opacity: 0.8;
}
