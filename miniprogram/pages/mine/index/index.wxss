/* pages/mine/index/index.wxss */
/**
 * “我的”页面 - 设计语言: Daylight Futurism (日光未来主义)
 * 保留原有功能，复刻参考图样式
 */

/* ============ 页面容器 ============ */
.page {
  min-height: 100vh;
  padding-bottom: 200rpx;
  position: relative;
  background: #f8fafc; /* 适配整体风格的浅色背景 */
  padding-top: 30rpx; /* 增加顶部padding，解决整体位置太靠上的问题 */
}

/* ============ 粘性头部（用户信息区） ============ */
.sticky-header {
  position: sticky;
  top: 0;
  z-index: 40;
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.5);
  padding-top: 20rpx; /* 增加顶部内边距，调整位置 */
  padding-bottom: 10rpx; /* 增加底部内边距，调整位置 */
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
}

/* 用户信息（替换原user-info-card） */
.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
  width: 100%;
}

.avatar-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  object-fit: cover;
}

.status-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 20rpx;
  height: 20rpx;
  background: #52C41A;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
}

.user-text {
  display: flex;
  flex-direction: column;
  gap: 0;
  flex: 1;
}

.greeting {
  font-size: 28rpx; /* 增大问候语字体 */
  color: #9CA3AF;
  line-height: 1.2;
  display: block;
}

.user-name {
  font-size: 36rpx; /* 增大用户名字体 */
  font-weight: 700;
  color: #1F2937;
  line-height: 1.2;
  display: block;
}

/* 编辑按钮（替换原edit-btn） */
.edit-btn {
  padding: 12rpx 24rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
}

.edit-btn:active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

/* ============ 主内容区 ============ */
.main-content {
  padding: 24rpx;
}

/* ============ 日期切换导航栏（对应原今日数据区域） ============ */
.date-nav-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.7) 0%, rgba(255, 251, 235, 0.6) 100%);
  border-radius: 24rpx;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow:
    0 8rpx 32rpx rgba(255, 107, 53, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8),
    inset 0 -1rpx 0 rgba(255, 107, 53, 0.1);
}

.date-nav-arrow {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 237, 213, 0.6) 100%);
  border: 1rpx solid rgba(255, 255, 255, 0.7);
  box-shadow:
    0 4rpx 12rpx rgba(255, 107, 53, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
  transition: all 0.2s ease;
}

.date-nav-arrow:active {
  background: linear-gradient(135deg, rgba(255, 237, 213, 0.9) 0%, rgba(255, 200, 150, 0.7) 100%);
  transform: scale(0.95);
}

.arrow-icon {
  font-size: 40rpx;
  color: #FF6B35;
  font-weight: 500;
}

.date-nav-center {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 36rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.7) 0%, rgba(255, 245, 235, 0.5) 100%);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  box-shadow: inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}

.date-nav-text {
  font-size: 38rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6B35 0%, #F59E0B 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ============ 仪表盘卡片（对应原身体指标+今日数据） ============ */
.dashboard-card {
  margin-bottom: 24rpx;
  border-radius: 36rpx;
  position: relative;
  overflow: hidden;

  /* 液态玻璃基础 */
  background: linear-gradient(
    145deg,
    rgba(255, 255, 255, 0.75) 0%,
    rgba(240, 253, 244, 0.65) 30%,
    rgba(220, 252, 231, 0.55) 60%,
    rgba(187, 247, 208, 0.45) 100%
  ) !important;

  /* 玻璃模糊效果 */
  backdrop-filter: blur(40rpx) saturate(180%);
  -webkit-backdrop-filter: blur(40rpx) saturate(180%);

  /* 边框光泽 */
  border: 1rpx solid rgba(255, 255, 255, 0.6);

  /* 多层阴影营造深度 */
  box-shadow:
    0 8rpx 32rpx rgba(74, 222, 128, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8),
    inset 0 -1rpx 0 rgba(0, 0, 0, 0.02);
}

/* 液态光斑效果 */
.dashboard-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    ellipse 80% 60% at 30% 20%,
    rgba(255, 255, 255, 0.5) 0%,
    transparent 60%
  );
  pointer-events: none;
  z-index: 1;
}

/* 右下角光晕 */
.dashboard-card::after {
  content: '';
  position: absolute;
  bottom: -30%;
  right: -20%;
  width: 80%;
  height: 80%;
  background: radial-gradient(
    ellipse 70% 50% at 70% 70%,
    rgba(74, 222, 128, 0.2) 0%,
    transparent 60%
  );
  pointer-events: none;
  z-index: 1;
}

.dashboard-content {
  padding: 32rpx;
  position: relative;
  z-index: 2;
}

/* 身体指标+数据统计（替换原stats-row+body-stats-card） */
.calories-dashboard {
  display: flex;
  align-items: center;
  gap: 32rpx;
  margin-bottom: 32rpx;
}

/* 环形图（展示今日数据） */
.donut-chart-wrapper {
  flex-shrink: 0;
}

.donut-chart {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.donut-ring {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  mask: radial-gradient(transparent 58%, black 59%);
  -webkit-mask: radial-gradient(transparent 58%, black 59%);
  box-shadow:
    0 0 30rpx rgba(255, 107, 53, 0.3),
    inset 0 0 20rpx rgba(255, 255, 255, 0.2);
}

/* 圆环液态流动效果 */
.donut-ring::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(
    from 0deg,
    transparent 0deg,
    rgba(255, 255, 255, 0.3) 60deg,
    transparent 120deg,
    transparent 360deg
  );
  animation: ring-rotate 4s linear infinite;
}

/* 圆环光泽扫过效果 */
.donut-ring::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    135deg,
    transparent 40%,
    rgba(255, 255, 255, 0.4) 50%,
    transparent 60%
  );
  animation: ring-shine 3s ease-in-out infinite;
}

@keyframes ring-rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

@keyframes ring-shine {
  0%, 100% {
    opacity: 0;
    transform: scale(0.8);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

.donut-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.donut-value-wrapper {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
  justify-content: center;
}

.donut-value {
  font-size: 48rpx;
  font-weight: 800;
  color: #1F2937;
  font-family: 'SF Mono', 'Menlo', monospace;
  line-height: 1;
}

.donut-unit {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 500;
  line-height: 1;
}

.donut-label {
  font-size: 22rpx;
  color: #9CA3AF;
  margin-top: 4rpx;
}

/* 身体指标详细数据 */
.calories-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.calorie-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(220, 252, 231, 0.6);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.calorie-row:active {
  background: rgba(220, 252, 231, 0.9);
  transform: scale(0.98);
}

.calorie-indicator {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  box-shadow: 0 0 8rpx currentColor;
}

.calorie-indicator.bmi {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  box-shadow: 0 0 10rpx rgba(255, 107, 53, 0.5);
}

.calorie-indicator.bmi-kcal {
  background: linear-gradient(135deg, #3D9BFF 0%, #6BB3FF 100%);
  box-shadow: 0 0 10rpx rgba(61, 155, 255, 0.5);
}

.calorie-indicator.tdee {
  background: linear-gradient(135deg, #E5E7EB 0%, #D1D5DB 100%);
  box-shadow: 0 0 8rpx rgba(209, 213, 219, 0.5);
}

.calorie-label {
  font-size: 28rpx;
  color: #374151;
  flex: 1;
  font-weight: 600;
}

.calorie-value-wrapper {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.calorie-value {
  font-size: 30rpx;
  font-weight: 800;
  color: #1F2937;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.calorie-unit {
  font-size: 20rpx;
  color: #9CA3AF;
  font-weight: 500;
}

/* ============ 功能按钮区域 ============ */
.function-section {
  margin-top: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
}

/* 宫格布局 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 4rpx;
}

.grid-item {
  width: 100%;
}

.grid-item.full-width {
  grid-column: span 2;
}

/* 功能卡片 */
.func-card {
  height: 100%;
  border-radius: 36rpx !important;
  /* 基础玻璃质感由组件内部 spotlight-card 处理，这里只需覆盖背景 */
}

.func-content {
  padding: 28rpx;
  display: flex;
  flex-direction: column;
  height: 100%;
  position: relative;
  z-index: 2;
}

/* 全宽卡片变为横向排列 */
.full-width .func-content {
  flex-direction: row;
  align-items: center;
  gap: 24rpx;
}

.full-width .func-arrow {
  margin-top: 0;
  margin-left: auto;
}

/* 图标容器 */
.func-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10rpx);
  -webkit-backdrop-filter: blur(10rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.full-width .func-icon-wrapper {
  margin-bottom: 0;
  flex-shrink: 0;
}

/* 不同类型的图标背景 */
.func-icon-wrapper.plan {
  background: rgba(255, 137, 27, 0.15);
  border: 1rpx solid rgba(255, 137, 27, 0.2);
}

.func-icon-wrapper.dish {
  background: rgba(82, 196, 26, 0.15);
  border: 1rpx solid rgba(82, 196, 26, 0.2);
}

.func-icon-wrapper.fav {
  background: rgba(139, 92, 246, 0.15);
  border: 1rpx solid rgba(139, 92, 246, 0.2);
}

.func-icon-wrapper.stats {
  background: rgba(244, 63, 94, 0.15);
  border: 1rpx solid rgba(244, 63, 94, 0.2);
}

.func-icon-wrapper.help {
  background: rgba(59, 130, 246, 0.15);
  border: 1rpx solid rgba(59, 130, 246, 0.2);
}

.func-icon {
  font-size: 36rpx;
}

/* 文字信息 */
.func-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
}

.func-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
}

.func-desc {
  font-size: 22rpx;
  color: #6B7280;
}

/* 箭头 */
.func-arrow {
  margin-top: 16rpx;
  align-self: flex-end;
  font-size: 28rpx;
  color: #9CA3AF;
  font-weight: 300;
}

/* ============ 弹窗样式（适配新风格） ============ */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  z-index: 99;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 250, 245, 0.98) 100%);
  backdrop-filter: blur(40rpx);
  -webkit-backdrop-filter: blur(40rpx);
  border-radius: 40rpx;
  padding: 40rpx;
  z-index: 100;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
  color: #1F2937;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(229, 231, 235, 0.8);
  border-radius: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 32rpx;
  font-size: 28rpx;
  box-shadow:
    0 4rpx 12rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.nickname-input:focus {
  border-color: #FF6B35;
  background: rgba(255, 255, 255, 0.95);
  box-shadow:
    0 0 0 4rpx rgba(255, 107, 53, 0.15),
    0 8rpx 24rpx rgba(255, 107, 53, 0.12);
}

.modal-btns {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  border-radius: 24rpx;
  font-size: 30rpx;
  border: none;
  transition: all 0.3s ease;
}

.modal-btn.cancel {
  background: rgba(243, 244, 246, 0.85);
  backdrop-filter: blur(20rpx);
  color: #6B7280;
  font-weight: 600;
  box-shadow:
    0 4rpx 12rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.modal-btn.cancel:active {
  transform: scale(0.98);
  background: rgba(229, 231, 235, 0.9);
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8E53 100%);
  color: #fff;
  font-weight: 700;
  box-shadow:
    0 8rpx 24rpx rgba(255, 107, 53, 0.35),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

.modal-btn.confirm:active {
  transform: scale(0.98);
  box-shadow:
    0 4rpx 16rpx rgba(255, 107, 53, 0.25),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.3);
}

/* 解决数据显示问题的额外样式 */
.user-basic {
  font-size: 24rpx;
  color: #6B7280;
  line-height: 1.5;
}

.nickname-edit-tip {
  font-size: 20rpx;
  color: #9CA3AF;
  margin-bottom: 4rpx;
  display: block;
}