/* pages/mine/index/index.wxss */
.page {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息卡（恢复原样式） */
.user-info-card {
  background: linear-gradient(to right, #6a11cb, #2575fc);
  color: #fff;
  padding: 30rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar-wrap {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #fff;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-base {
  flex: 1;
}

.user-name-wrap {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
}

.edit-btn {
  font-size: 24rpx;
  background: rgba(255,255,255,0.3);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.nickname-edit-tip {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 8rpx;
  cursor: pointer;
}

.user-basic {
  font-size: 26rpx;
  margin-top: 10rpx;
  opacity: 0.9;
}

/* 今日数据区域（恢复原样式） */
.stats-row {
  background: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
}

.stats-item {
  text-align: center;
}

.stats-label {
  font-size: 24rpx;
  color: #888;
}

.stats-value {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 8rpx;
}

/* 身体指标区域（恢复原样式） */
.body-stats-card {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.body-stats-row {
  display: flex;
  justify-content: space-around;
}

.body-stats-item {
  text-align: center;
}

.stats-key {
  font-size: 24rpx;
  color: #888;
}

.stats-val {
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 8rpx;
}

/* 功能按钮区域（恢复原样式） */
.function-list {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.func-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.func-text {
  font-size: 28rpx;
  flex: 1;
}

.func-desc {
  font-size: 24rpx;
  color: #888;
  margin-right: 20rpx;
}

.func-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 弹窗样式（简化适配原页面） */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 99;
}

.modal-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  z-index: 100;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 32rpx;
  font-size: 28rpx;
}

.modal-btns {
  display: flex;
  justify-content: space-between;
}

.modal-btn {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #333;
}

.modal-btn.confirm {
  background: #67C23A;
  color: #fff;
}