/* pages/mine/index/index.wxss */
/**
 * “我的”页面 - V4.0 Green Elegant
 * 清新、自然、极简
 */

.page {
  min-height: 100vh; /* Changed from 200vh to 100vh for fit */
  /* 淡绿雅致渐变 */
  background: linear-gradient(180deg, #F8FDF9 0%, #FFFFFF 100%);
  padding: 160rpx 40rpx 200rpx; /* Adjusted padding */
  box-sizing: border-box;
  color: #2F3E33;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
}

/* ============ 极简头部 ============ */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 50rpx;
}

.text-area {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.greeting-text {
  font-size: 32rpx;
  color: #8D9E90; /* Muted Green */
  font-weight: 400;
}

.name-text {
  font-size: 56rpx;
  color: #1B5E20; /* Dark Green */
  font-weight: 300;
  letter-spacing: -1rpx;
}

.edit-pill {
  margin-top: 16rpx;
  display: inline-block;
  padding: 10rpx 28rpx;
  background: #E8F5E9;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #557C58;
  width: fit-content;
}

.avatar-area {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-glow {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  opacity: 0.2;
  animation: breathe 3s ease-in-out infinite;
  z-index: 0;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  z-index: 1;
  background-color: #F1F8E9;
  box-shadow: 0 8rpx 24rpx rgba(46, 125, 50, 0.1);
}

@keyframes breathe {
  0%, 100% { transform: scale(1); opacity: 0.2; }
  50% { transform: scale(1.1); opacity: 0.4; }
}

/* ============ 身体与计划卡片 (New) ============ */
.glass-card {
  background: rgba(255, 255, 255, 0.85);
  border-radius: 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(46, 125, 50, 0.05);
  backdrop-filter: blur(20px);
  padding: 40rpx;
  margin-bottom: 40rpx;
}

.stats-card {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.stats-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-val {
  font-size: 44rpx;
  font-weight: 400;
  color: #2F3E33;
  font-family: 'Helvetica Neue', sans-serif;
}

.stat-label {
  font-size: 22rpx;
  color: #8D9E90;
}

.stat-label-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.bmi-tag {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  background: #E8F5E9;
  color: #388E3C;
  border-radius: 8rpx;
}

.vertical-line {
  width: 1rpx;
  height: 40rpx;
  background: #E8F5E9;
}

.divider-dash {
  height: 1rpx;
  background: #F1F8E9; /* Actually solid line for cleanliness */
  width: 100%;
}

.plan-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.plan-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.plan-label {
  font-size: 22rpx;
  color: #8D9E90;
}

.plan-val-row {
  display: flex;
  align-items: baseline;
  gap: 16rpx;
}

.plan-val {
  font-size: 32rpx;
  font-weight: 500;
  color: #1B5E20;
}

.plan-target {
  font-size: 26rpx;
  color: #557C58;
}

.plan-arrow {
  color: #A5D6A7;
  font-size: 32rpx;
}

/* ============ 功能区 (无图标极简设计) ============ */
.minimal-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.minimal-item {
  height: 180rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(46, 125, 50, 0.02);
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  transition: all 0.3s ease;
}

.minimal-item:active {
  background: rgba(255, 255, 255, 0.9);
  transform: scale(0.98);
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #2F3E33;
}

.item-desc {
  font-size: 22rpx;
  color: #8D9E90;
}

/* ============ 弹窗 ============ */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(46, 125, 50, 0.1);
  backdrop-filter: blur(8rpx);
  z-index: 100;
}

.modal-content {
  position: fixed;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 40rpx;
  padding: 50rpx;
  z-index: 101;
  box-shadow: 0 20rpx 60rpx rgba(46, 125, 50, 0.15);
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #1B5E20;
  text-align: center;
}

.nickname-input {
  background: #F8FDF9;
  border: 1rpx solid #E8F5E9;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #2F3E33;
}

.modal-btns {
  display: flex;
  gap: 24rpx;
  margin-top: 10rpx;
}

.modal-btn {
  flex: 1;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  padding: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.modal-btn.cancel {
  background: #F1F8E9;
  color: #557C58;
}

.modal-btn.confirm {
  background: #388E3C;
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(56, 142, 60, 0.2);
}