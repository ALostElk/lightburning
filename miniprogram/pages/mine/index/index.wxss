/* pages/mine/index/index.wxss */
/**
 * “我的”页面 - V3.0 Final Polish
 * 极简、淡雅、日光未来主义
 */

.page {
  min-height: 200vh;
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  padding: 200rpx 32rpx 200rpx; 
  box-sizing: border-box;
  color: #334155;
}

/* ============ 极简头部 ============ */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 60rpx;
  padding-top: 20rpx;
}

.text-area {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.greeting-text {
  font-size: 32rpx;
  color: #94A3B8;
  font-weight: 300;
}

.name-text {
  font-size: 56rpx;
  color: #334155;
  font-weight: 300;
  letter-spacing: -1rpx;
}

.edit-pill {
  margin-top: 10rpx;
  display: inline-block;
  padding: 8rpx 24rpx;
  background: rgba(255, 255, 255, 0.6);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 30rpx;
  font-size: 22rpx;
  color: #94A3B8;
  backdrop-filter: blur(4rpx);
  width: fit-content;
}

.avatar-area {
  position: relative;
  width: 140rpx;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-glow {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  opacity: 0.2;
  animation: breathe 3s ease-in-out infinite;
  z-index: 0;
}

.avatar-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  z-index: 1;
  background-color: #f1f5f9;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.2);
}

@keyframes breathe {
  0%, 100% { transform: scale(1); opacity: 0.2; }
  50% { transform: scale(1.1); opacity: 0.4; }
}

/* ============ 功能区 (无图标极简设计) ============ */
.minimal-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.minimal-item {
  height: 180rpx;
  background: rgba(255, 255, 255, 0.4); /* 更高的透明度 */
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  border-radius: 32rpx;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-end; /* 文字置于底部 */
  transition: all 0.3s ease;
}

.minimal-item:active {
  background: rgba(255, 255, 255, 0.8);
  transform: scale(0.98);
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.item-title {
  font-size: 32rpx; /* 大号字体 */
  font-weight: 300; /* 细体 */
  color: #334155;
  letter-spacing: 1rpx;
}

.item-desc {
  font-size: 22rpx;
  color: #94A3B8; /* 浅灰 */
  font-weight: 300;
}


/* ============ 弹窗 ============ */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(15, 23, 42, 0.2);
  backdrop-filter: blur(8rpx);
  z-index: 100;
}

.modal-content {
  position: fixed;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: rgba(255,255,255,0.95);
  border: 1rpx solid rgba(255,255,255,1);
  border-radius: 40rpx;
  padding: 50rpx;
  z-index: 101;
  box-shadow: 0 20rpx 60rpx rgba(148, 163, 184, 0.2);
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #334155;
  text-align: center;
}

.nickname-input {
  background: #F8FAFC;
  border: 1rpx solid #E2E8F0;
  border-radius: 20rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #334155;
}

.modal-btns {
  display: flex;
  gap: 24rpx;
  margin-top: 10rpx;
}

.modal-btn {
  flex: 1;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  padding: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
}

.modal-btn.cancel {
  background: #F1F5F9;
  color: #64748B;
}

.modal-btn.confirm {
  background: #334155;
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(51, 65, 85, 0.3);
}