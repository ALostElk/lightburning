/* miniprogram/pages/plan/detail/index.wxss */
.plan-detail-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  padding: 32rpx;
  color: #334155;
  box-sizing: border-box;
}

/* ========== 加载状态 ========== */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999;
}

/* ========== 计划头部 ========== */
.plan-header {
  position: relative;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  border-radius: 40rpx;
  padding: 44rpx 40rpx;
  color: #065F46;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.05);
  overflow: hidden;
}

.plan-header::after {
  content: '';
  position: absolute;
  top: -20%;
  left: -20%;
  width: 140%;
  height: 140%;
  background: radial-gradient(circle, #6EE7B7 0%, transparent 70%);
  opacity: 0.15;
  filter: blur(30rpx);
  z-index: 0;
}

.plan-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.plan-title {
  font-size: 40rpx;
  font-weight: 600;
  flex: 1;
  letter-spacing: 2rpx;
}

.status-badge {
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10rpx);
  color: #065F46;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.02);
}

.status-badge.active {
  background: rgba(255, 255, 255, 0.9);
}

/* 计划简要信息 */
.plan-meta {
  display: flex;
  gap: 30rpx;
  font-size: 26rpx;
  opacity: 0.98;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.meta-item:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.98);
}

.meta-icon {
  font-size: 32rpx;
}

.meta-text {
  line-height: 1.3;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* 进度条部分 */
.progress-section {
  background: rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  position: relative;
  z-index: 1;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
}

.progress-label {
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.progress-text {
  font-size: 30rpx;
  font-weight: 600;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 1) 100%);
  border-radius: 6rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.2);
}

.progress-days {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  opacity: 0.95;
  font-weight: 500;
}

/* ========== 计划内容 ========== */
.plan-content {
  background-color: white;
  border-radius: 40rpx;
  padding: 36rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(148, 163, 184, 0.05);
  border: 1rpx solid rgba(241, 245, 249, 1);
}

.section {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 1) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.08);
  border: 1rpx solid rgba(236, 241, 249, 1);
  transition: all 0.3s ease;
}

.section:hover {
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.12);
  transform: translateY(-2rpx);
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #475569;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #4ECDC4;
  letter-spacing: 1rpx;
  display: flex;
  align-items: center;
}

.section-title::first-letter {
  margin-right: 12rpx;
  font-size: 36rpx;
}

/* 时间安排卡片样式 */
.section.schedule {
  background: linear-gradient(135deg, rgba(78, 205, 196, 0.05) 0%, rgba(167, 243, 208, 0.1) 100%);
  border: 1rpx solid rgba(78, 205, 196, 0.2);
}

.section.schedule .section-title {
  color: #065F46;
  border-left-color: #4ECDC4;
}

/* 目标设定卡片样式 */
.section.goals {
  background: linear-gradient(135deg, rgba(78, 205, 196, 0.03) 0%, rgba(167, 243, 208, 0.08) 100%);
  border: 1rpx solid rgba(78, 205, 196, 0.15);
}

.section.goals .section-title {
  color: #065F46;
  border-left-color: #A7F3D0;
}

.section.goals .info-row {
  background: rgba(255, 255, 255, 0.9);
}

.section.goals .info-row:active {
  background: rgba(78, 205, 196, 0.15);
  border-color: rgba(78, 205, 196, 0.4);
}

.section.goals .info-value.highlight {
  background: linear-gradient(135deg, rgba(78, 205, 196, 0.2) 0%, rgba(167, 243, 208, 0.3) 100%);
  border: 1rpx solid rgba(78, 205, 196, 0.4);
  box-shadow: 0 2rpx 8rpx rgba(78, 205, 196, 0.2);
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 16rpx;
  margin-bottom: 12rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  border: 1rpx solid rgba(236, 241, 249, 1);
  transition: all 0.3s ease;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row:active {
  background: rgba(78, 205, 196, 0.1);
  border-color: rgba(78, 205, 196, 0.3);
  transform: scale(1.01);
}

.info-label {
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.info-label::first-letter {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.info-value {
  font-size: 28rpx;
  color: #334155;
  font-weight: 600;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.02);
  transition: all 0.3s ease;
}

.info-value.highlight {
  color: #065F46;
  font-size: 30rpx;
  background: rgba(78, 205, 196, 0.15);
  font-weight: 700;
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(78, 205, 196, 0.3);
}

/* 健康评估卡片 */
.health-card {
  border-radius: 24rpx;
  padding: 32rpx;
  border-left: 6rpx solid;
  transition: all 0.3s ease;
  margin: 0 -16rpx;
}

.health-card.healthy {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.08) 0%, rgba(34, 197, 94, 0.12) 100%);
  border-color: #22c55e;
  box-shadow: 0 4rpx 16rpx rgba(34, 197, 94, 0.1);
}

.health-card.warning {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, rgba(245, 158, 11, 0.12) 100%);
  border-color: #f59e0b;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.1);
}

.health-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.health-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.health-icon {
  font-size: 36rpx;
}

.health-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #475569;
  letter-spacing: 0.5rpx;
}

.health-desc {
  font-size: 26rpx;
  color: #64748B;
  line-height: 1.8;
  display: block;
  margin-left: 48rpx;
  padding-top: 4rpx;
}

/* 建议列表 */
.suggestions {
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  border: 1rpx solid rgba(236, 241, 249, 1);
}

.suggestion-item {
  display: flex;
  margin-bottom: 20rpx;
  padding: 16rpx;
  transition: all 0.3s ease;
  border-radius: 12rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-item:active {
  background: rgba(78, 205, 196, 0.1);
  padding-left: 24rpx;
}

.suggestion-text {
  font-size: 26rpx;
  color: #64748B;
  line-height: 1.8;
  font-weight: 500;
}

.suggestion-text::before {
  content: '•';
  color: #4ECDC4;
  font-weight: bold;
  margin-right: 12rpx;
  font-size: 32rpx;
  vertical-align: middle;
}

/* ========== 操作按钮 ========== */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 0 20rpx 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 700;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.primary-btn {
  background: linear-gradient(135deg, #4ECDC4 0%, #A7F3D0 100%);
  color: #065F46;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.25);
  border: none;
}

.primary-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.3);
}

.secondary-btn {
  background-color: white;
  color: #4ECDC4;
  border: 2rpx solid #4ECDC4;
  box-shadow: 0 4rpx 12rpx rgba(148, 163, 184, 0.05);
}

.secondary-btn:active {
  background-color: rgba(78, 205, 196, 0.05);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
