/* miniprogram/pages/plan/detail/index.wxss */
/* ============ 页面容器 ============ */
.page-container {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 200rpx;
  position: relative;
  /* Background handled by global app.wxss */
}

/* ========== 加载状态 ========== */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #6B7280;
}

/* ============ 液态玻璃卡片通用样式 ============ */
.card {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 32rpx;
  border-radius: 36rpx;
  position: relative;
  overflow: hidden;
  padding: 32rpx;
  transition: all 0.2s ease;
  
  /* Base Glass Styles */
  backdrop-filter: blur(40rpx) saturate(180%);
  -webkit-backdrop-filter: blur(40rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

/* 点击浮动效果 */
.card:active {
  transform: scale(0.98);
}

/* ============ 头部卡片 (Active Status) ============ */
/* ============ 头部卡片 (Active Status) ============ */
.card-header {
  /* High-end Transparent Blue Gradient with Texture */
  background: linear-gradient(
    135deg, 
    rgba(61, 155, 255, 0.85) 0%, 
    rgba(22, 119, 255, 0.90) 100%
  ) !important;
  backdrop-filter: blur(20rpx);
  box-shadow: 
    0 12rpx 40rpx rgba(61, 155, 255, 0.35),
    0 4rpx 12rpx rgba(0, 0, 0, 0.05),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.5),
    inset 0 0 30rpx rgba(255, 255, 255, 0.2); /* Inner glow for liquid texture */
  color: white;
}
.card-header::before {
  /* Enhance light spot for header */
  background: radial-gradient(
    circle at top left,
    rgba(255, 255, 255, 0.4) 0%,
    transparent 70%
  ) !important;
}
.card-header:active {
  box-shadow: 0 4rpx 16rpx rgba(61, 155, 255, 0.3);
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.plan-title {
  font-size: 40rpx;
  font-weight: 800;
  flex: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.status-badge {
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  color: white;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
}

.status-badge.active {
  background: rgba(255, 255, 255, 0.35);
}

.plan-meta {
  display: flex;
  gap: 32rpx;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(0, 0, 0, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.meta-icon {
  font-size: 28rpx;
}

.meta-text {
  font-weight: 500;
}

/* 进度条 */
.progress-section {
  background: rgba(0, 0, 0, 0.15);
  border-radius: 20rpx;
  padding: 24rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.progress-text {
  font-size: 30rpx;
  font-weight: 700;
  font-family: 'SF Mono', 'Menlo', monospace;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: white;
  border-radius: 6rpx;
  transition: width 0.3s ease;
  box-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

.progress-days {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  opacity: 0.8;
}

/* ============ 内容玻璃卡片 ============ */
.glass-card {
  /* Liquid Glass Base */
  background: linear-gradient(
    145deg,
    rgba(255, 255, 255, 0.75) 0%,
    rgba(235, 248, 255, 0.65) 30%,
    rgba(215, 240, 255, 0.55) 60%,
    rgba(190, 230, 255, 0.45) 100%
  ) !important;
  box-shadow:
    0 8rpx 32rpx rgba(61, 155, 255, 0.1),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}
.glass-card:active {
  box-shadow: 0 4rpx 16rpx rgba(61, 155, 255, 0.15);
}

/* 液态光斑效果 */
.glass-card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    ellipse 80% 60% at 30% 20%,
    rgba(255, 255, 255, 0.5) 0%,
    transparent 60%
  );
  pointer-events: none;
  z-index: 1;
}

/* 内容布局 */
.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 32rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #3D9BFF; /* Blue accent */
  display: flex;
  align-items: center;
  position: relative;
  z-index: 2;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
  position: relative;
  z-index: 2;
}

.info-row:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #4B5563;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #1F2937;
  font-weight: 600;
  font-family: 'SF Mono', 'Menlo', monospace; /* For numbers */
}

.info-value.highlight {
  color: #3D9BFF;
  font-weight: 700;
}

/* 健康评估 */
.health-card {
  border-radius: 20rpx;
  padding: 24rpx;
  border-left: 6rpx solid;
  position: relative;
  z-index: 2;
}

.health-card.healthy {
  background: rgba(82, 196, 26, 0.1);
  border-color: #52C41A;
}

.health-card.warning {
  background: rgba(250, 173, 20, 0.1);
  border-color: #FAAD14;
}

.health-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.health-icon {
  font-size: 30rpx;
}

.health-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #1F2937;
}

.health-desc {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 1.5;
  display: block;
}

/* 建议列表 */
.suggestions {
  padding: 0 8rpx;
  position: relative;
  z-index: 2;
}

.suggestion-item {
  display: flex;
  margin-bottom: 16rpx;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-text {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 1.6;
}

/* ========== 操作按钮 ========== */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 16rpx 0;
  margin-top: 40rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 700;
  transition: all 0.2s ease;
}

.primary-btn {
  background: linear-gradient(135deg, #3D9BFF 0%, #1677FF 100%);
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(61, 155, 255, 0.3);
}

.primary-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(61, 155, 255, 0.3);
}

.secondary-btn {
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(20rpx);
  color: #3D9BFF;
  border: 2rpx solid #3D9BFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.secondary-btn:active {
  background: rgba(61, 155, 255, 0.1);
  transform: scale(0.98);
}
