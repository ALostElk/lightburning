/* miniprogram/pages/plan/detail/index.wxss */
.plan-detail-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #f0f2f5 100%);
  padding: 20rpx;
}

/* ========== 加载状态 ========== */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  font-size: 28rpx;
  color: #999;
}

/* ========== 计划头部 ========== */
.plan-header {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 50%, #FF8E8E 100%);
  border-radius: 24rpx;
  padding: 44rpx 40rpx;
  color: white;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.25);
  position: relative;
  overflow: hidden;
}

.plan-header::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.plan-title {
  font-size: 40rpx;
  font-weight: 700;
  flex: 1;
  letter-spacing: 1rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-badge {
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10rpx);
  color: white;
  font-weight: 600;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.status-badge.active {
  background: rgba(255, 255, 255, 0.35);
}

/* 计划简要信息 */
.plan-meta {
  display: flex;
  gap: 30rpx;
  font-size: 26rpx;
  opacity: 0.98;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
  flex-wrap: wrap;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.meta-item:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.98);
}

.meta-icon {
  font-size: 32rpx;
}

.meta-text {
  line-height: 1.3;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

/* 进度条部分 */
.progress-section {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 28rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  position: relative;
  z-index: 1;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
}

.progress-label {
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0.5rpx;
}

.progress-text {
  font-size: 30rpx;
  font-weight: 700;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 6rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
  box-shadow: inset 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 1) 100%);
  border-radius: 6rpx;
  transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(255, 255, 255, 0.3);
}

.progress-days {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  opacity: 0.95;
  font-weight: 500;
}

/* ========== 计划内容 ========== */
.plan-content {
  background-color: white;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.section {
  margin-bottom: 36rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #FF6B6B;
  letter-spacing: 0.5rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.2s ease;
}

.info-row:last-child {
  border-bottom: none;
}

.info-row:active {
  background: rgba(255, 107, 107, 0.02);
  margin: 0 -36rpx;
  padding-left: 36rpx;
  padding-right: 36rpx;
  border-radius: 12rpx;
}

.info-label {
  font-size: 28rpx;
  color: #555;
  font-weight: 600;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 700;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.02);
}

.info-value.highlight {
  color: #FF6B6B;
  font-size: 30rpx;
  background: rgba(255, 107, 107, 0.1);
  font-weight: 700;
}

/* 健康评估卡片 */
.health-card {
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid;
  transition: all 0.3s ease;
}

.health-card.healthy {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.08) 0%, rgba(34, 197, 94, 0.12) 100%);
  border-color: #22c55e;
}

.health-card.warning {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, rgba(245, 158, 11, 0.12) 100%);
  border-color: #f59e0b;
}

.health-card:active {
  transform: scale(0.98);
}

.health-status {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.health-icon {
  font-size: 32rpx;
}

.health-text {
  font-size: 28rpx;
  font-weight: 700;
  color: #333;
  letter-spacing: 0.5rpx;
}

.health-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-left: 44rpx;
  padding-top: 4rpx;
}

/* 建议列表 */
.suggestions {
  padding: 8rpx 0;
}

.suggestion-item {
  display: flex;
  margin-bottom: 16rpx;
  padding: 12rpx 0;
  transition: all 0.2s ease;
}

.suggestion-item:last-child {
  margin-bottom: 0;
}

.suggestion-item:active {
  padding-left: 12rpx;
}

.suggestion-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.8;
  font-weight: 500;
}

/* ========== 操作按钮 ========== */
.action-buttons {
  display: flex;
  gap: 24rpx;
  padding: 0 20rpx 20rpx;
  margin-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 700;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.primary-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.35);
  border: none;
}

.primary-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.secondary-btn {
  background-color: white;
  color: #FF6B6B;
  border: 2rpx solid #FF6B6B;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.secondary-btn:active {
  background-color: rgba(255, 107, 107, 0.05);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}
