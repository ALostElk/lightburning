/* pages/plan/generate/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx 30rpx 40rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
}

/* 当前状态 */
.current-status {
  display: flex;
  justify-content: space-between;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.status-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
}

/* 参数设置 */
.param-item {
  margin-bottom: 40rpx;
}

.param-item:last-child {
  margin-bottom: 0;
}

.param-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.param-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.param-input {
  display: flex;
  align-items: center;
}

.param-input input {
  width: 100rpx;
  height: 50rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.param-unit {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.slider {
  width: 100%;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* 计划预览 */
.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.preview-item:last-child {
  border-bottom: none;
}

.preview-label {
  font-size: 28rpx;
  color: #666;
}

.preview-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.preview-value.primary {
  color: #FF6B6B;
}

.preview-value.success {
  color: #51CF66;
}

.preview-value.danger {
  color: #FF6B6B;
}

/* 健康评估 */
.health-assessment {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid;
}

.assessment-icon {
  font-size: 32rpx;
  margin-right: 15rpx;
}

.assessment-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 500;
}

/* 温馨提示 */
.tips-card {
  background: linear-gradient(135deg, #FFF5F0 0%, #FFF8F3 100%);
}

.tips {
  display: flex;
  flex-direction: column;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 2;
}

/* 生成按钮 */
.generate-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  margin-top: 40rpx;
}

