/* pages/plan/generate/index.wxss */
/* ============ 页面容器 ============ */
.page-container {
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 200rpx; /* Space for FAB or just bottom padding */
  position: relative;
  /* No background color to match consistency rules (white/transparent) */
}

/* ============ 页面标题 ============ */
.header {
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 800;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: #6B7280;
}

/* ============ 液态玻璃卡片通用样式 ============ */
.card {
  width: 100%; /* Force full width */
  box-sizing: border-box;
  margin-bottom: 32rpx;
  border-radius: 36rpx;
  position: relative;
  overflow: hidden;
  padding: 32rpx;
  transition: all 0.2s ease;
  
  /* Base Glass Styles */
  backdrop-filter: blur(40rpx) saturate(180%);
  -webkit-backdrop-filter: blur(40rpx) saturate(180%);
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

/* 点击浮动效果 */
.card:active {
  transform: scale(0.98);
}

/* ============ 具体卡片渐变与阴影 ============ */

/* 1. 当前状态卡片 - 对应午餐/绿色 (Lunch Gradient) */
.card-status {
  background: linear-gradient(135deg, #F0FDF4 0%, #DCFCE7 100%) !important;
  box-shadow: 
    0 8rpx 32rpx rgba(82, 196, 26, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}
.card-status:active {
  box-shadow: 0 4rpx 16rpx rgba(82, 196, 26, 0.2);
}

/* 2. 计划参数卡片 - 对应早餐/橙色 (Breakfast Gradient) */
.card-params {
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%) !important;
  box-shadow: 
    0 8rpx 32rpx rgba(255, 107, 53, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}
.card-params:active {
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.2);
}

/* 3. 计划预览卡片 - 对应晚餐/紫色 (Dinner Gradient) */
.card-preview {
  background: linear-gradient(135deg, #F5F3FF 0%, #EDE9FE 100%) !important;
  box-shadow: 
    0 8rpx 32rpx rgba(139, 92, 246, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}
.card-preview:active {
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.2);
}

/* 4. 温馨提示卡片 - 对应加餐/粉色 (Snack Gradient) */
.tips-card {
  background: linear-gradient(135deg, #FFF1F2 0%, #FFE4E6 100%) !important;
  box-shadow: 
    0 8rpx 32rpx rgba(244, 63, 94, 0.15),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
}
.tips-card:active {
  box-shadow: 0 4rpx 16rpx rgba(244, 63, 94, 0.2);
}

/* Liquid Light Spots */
.card::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    ellipse 80% 60% at 30% 20%,
    rgba(255, 255, 255, 0.5) 0%,
    transparent 60%
  );
  pointer-events: none;
  z-index: 1;
}

/* Content z-index fix */
.current-status, .card-title, .param-item, .preview-item, .health-assessment, .tips {
  position: relative;
  z-index: 2;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 32rpx;
  padding-left: 0;
  display: flex;
  align-items: center;
}

/* ============ 当前状态 ============ */
.current-status {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.status-label {
  font-size: 24rpx;
  color: #6B7280;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.status-value {
  font-size: 40rpx;
  font-weight: 800;
  color: #1F2937;
  font-family: 'SF Mono', 'Menlo', monospace;
}

/* ============ 参数设置 ============ */
.param-item {
  margin-bottom: 48rpx;
}

.param-item:last-child {
  margin-bottom: 0;
}

.param-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.param-label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 600;
}

.param-input {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: rgba(255, 255, 255, 0.5);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
}

.param-input input {
  width: 100rpx;
  height: 50rpx;
  text-align: right;
  font-size: 32rpx;
  font-weight: bold;
  color: #3D9BFF; /* Keep Blue for inputs */
  background: transparent;
  padding: 0;
}

.param-unit {
  font-size: 24rpx;
  color: #9CA3AF;
  font-weight: 500;
}

.slider {
  width: 100%;
  margin: 24rpx 0;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #9CA3AF;
}

/* ============ 计划预览 ============ */
.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.04);
}

.preview-item:last-child {
  border-bottom: none;
}

.preview-label {
  font-size: 28rpx;
  color: #4B5563;
  font-weight: 500;
}

.preview-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
}

.preview-value.primary {
  color: #3D9BFF;
}

.preview-value.success {
  color: #52C41A;
}

.preview-value.danger {
  color: #FF4D4F;
}

/* ============ 健康评估 ============ */
.health-assessment {
  display: flex;
  align-items: center;
  margin-top: 32rpx;
  padding: 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid;
  gap: 16rpx;
  /* Default/Base style */
  background: rgba(255, 255, 255, 0.5);
}

.assessment-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 600;
  line-height: 1.4;
}

/* Status: Good (Green Gradient like Status Card) */
.health-assessment.status-good {
  background: linear-gradient(135deg, #F0FDF4 0%, #DCFCE7 100%);
  border-color: #52C41A;
}
.health-assessment.status-good .assessment-text {
  color: #135200;
}

/* Status: Warning/Slow (Orange Gradient like Params Card) */
.health-assessment.status-warning {
  background: linear-gradient(135deg, #FFF7ED 0%, #FFEDD5 100%);
  border-color: #FAAD14; /* Orange Border */
}
.health-assessment.status-warning .assessment-text {
  color: #9A3412; /* Dark Orange Text */
}

/* Status: Danger (Red/Pink Gradient like Tips Card) */
.health-assessment.status-danger {
  background: linear-gradient(135deg, #FFF1F2 0%, #FFE4E6 100%);
  border-color: #FF4D4F;
}
.health-assessment.status-danger .assessment-text {
  color: #9F1239;
}

/* ============ 温馨提示 ============ */
.tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #6B7280;
  line-height: 1.6;
}

/* ============ 生成按钮 ============ */
.generate-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background: linear-gradient(135deg, #3D9BFF 0%, #1677FF 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
  border-radius: 50rpx;
  margin-top: 48rpx;
  border: none;
  box-shadow: 
    0 8rpx 24rpx rgba(61, 155, 255, 0.3),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.3);
  transition: all 0.2s ease;
}

.generate-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(61, 155, 255, 0.3);
}

.generate-btn[loading] {
  opacity: 0.8;
}
