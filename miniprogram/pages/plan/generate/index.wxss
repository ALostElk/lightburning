/* pages/plan/generate/index.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx 30rpx 40rpx;
}

/* ========== 页面标题样式 ========== */
.header {
  margin-bottom: 30rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #999;
}

/* ========== 卡片样式 ========== */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #FF6B6B;
}

/* ========== 当前状态样式 ========== */
.current-status {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.status-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.status-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
}

/* ========== 参数设置样式 ========== */
.param-item {
  margin-bottom: 40rpx;
}

.param-item:last-child {
  margin-bottom: 0;
}

.param-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.param-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.param-input {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.param-input input {
  width: 100rpx;
  height: 50rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B6B;
  background: #f8f8f8;
  padding: 0 15rpx;
  border-radius: 6rpx;
}

.param-unit {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

.slider {
  width: 100%;
  margin: 15rpx 0;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* ========== 计划预览样式 ========== */
.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.preview-item:last-child {
  border-bottom: none;
}

.preview-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.preview-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.preview-value.primary {
  color: #FF6B6B;
}

.preview-value.success {
  color: #51CF66;
  font-size: 28rpx;
}

.preview-value.danger {
  color: #FF6B6B;
}

/* ========== 健康评估样式 ========== */
.health-assessment {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid;
  gap: 12rpx;
}

.assessment-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.assessment-text {
  flex: 1;
  font-size: 26rpx;
  font-weight: 500;
  line-height: 1.4;
}

/* ========== 温馨提示样式 ========== */
.tips-card {
  background: linear-gradient(135deg, #FFF5F0 0%, #FFF8F3 100%);
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* ========== 生成按钮样式 ========== */
.generate-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  margin-top: 40rpx;
  border: none;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
}

.generate-btn:active {
  opacity: 0.95;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

