/* pages/plan/generate/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5FAFF 0%, #FFFFFF 100%);
  padding: 32rpx;
  box-sizing: border-box;
  color: #334155;
}

/* ========== 页面标题样式 ========== */
.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: 600;
  color: #065F46;
  margin-bottom: 12rpx;
  letter-spacing: 2rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #94A3B8;
  line-height: 1.5;
}

/* ========== 卡片样式 ========== */
.card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 250, 252, 1) 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(148, 163, 184, 0.08);
  border: 1rpx solid rgba(236, 241, 249, 1);
  transition: all 0.3s ease;
}

.card:hover {
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.12);
  transform: translateY(-2rpx);
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #475569;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #4ECDC4;
  letter-spacing: 1rpx;
  display: flex;
  align-items: center;
}

.card-title::first-letter {
  margin-right: 12rpx;
  font-size: 36rpx;
}

/* ========== 当前状态样式 ========== */
.current-status {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  gap: 20rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.status-item:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.98);
}

.status-label {
  font-size: 26rpx;
  color: #64748B;
  margin-bottom: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

.status-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #065F46;
  letter-spacing: 0.5rpx;
}

/* ========== 参数设置样式 ========== */
.param-item {
  margin-bottom: 36rpx;
  padding: 22rpx 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  border: 1rpx solid rgba(236, 241, 249, 1);
  transition: all 0.3s ease;
}

.param-item:last-child {
  margin-bottom: 0;
}

.param-item:active {
  background: rgba(78, 205, 196, 0.1);
  border-color: rgba(78, 205, 196, 0.3);
  transform: scale(1.01);
}

.param-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.param-label {
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  display: flex;
  align-items: center;
}

.param-label::first-letter {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.param-input {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.param-input .clickable-number {
  width: 120rpx;
  height: 60rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
  background: rgba(0, 0, 0, 0.02);
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(236, 241, 249, 1);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.param-input .clickable-number:active {
  border-color: #4ECDC4;
  box-shadow: 0 0 0 4rpx rgba(78, 205, 196, 0.1);
  background: rgba(78, 205, 196, 0.1);
}

.param-input .number-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
}

/* 兼容旧的input样式 */
.param-input input {
  width: 120rpx;
  height: 60rpx;
  text-align: right;
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
  background: rgba(0, 0, 0, 0.02);
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(236, 241, 249, 1);
  transition: all 0.3s ease;
}

.param-input input:focus {
  border-color: #4ECDC4;
  box-shadow: 0 0 0 4rpx rgba(78, 205, 196, 0.1);
  background: rgba(78, 205, 196, 0.1);
}

.param-unit {
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
}

.slider {
  width: 100%;
  margin: 20rpx 0;
  height: 8rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}



/* ========== 计划预览样式 ========== */
.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 16rpx;
  margin-bottom: 12rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 16rpx;
  border: 1rpx solid rgba(236, 241, 249, 1);
  transition: all 0.3s ease;
}

.preview-item:last-child {
  margin-bottom: 0;
}

.preview-item:active {
  background: rgba(78, 205, 196, 0.1);
  border-color: rgba(78, 205, 196, 0.3);
  transform: scale(1.01);
}

.preview-label {
  font-size: 28rpx;
  color: #64748B;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.preview-label::first-letter {
  margin-right: 10rpx;
  font-size: 32rpx;
}

.preview-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #334155;
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  background: rgba(0, 0, 0, 0.02);
}

.preview-value.primary {
  color: #065F46;
  background: rgba(78, 205, 196, 0.1);
  font-size: 30rpx;
  font-weight: 700;
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(78, 205, 196, 0.3);
}

.preview-value.success {
  color: #22c55e;
  background: rgba(34, 197, 94, 0.1);
  font-size: 28rpx;
}

.preview-value.danger {
  color: #065F46;
  background: rgba(78, 205, 196, 0.1);
}

/* ========== 健康评估样式 ========== */
.health-assessment {
  border-radius: 24rpx;
  padding: 32rpx;
  border-left: 6rpx solid;
  transition: all 0.3s ease;
  margin: 0 -16rpx;
  margin-top: 24rpx;
}

.health-assessment.healthy {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.08) 0%, rgba(34, 197, 94, 0.12) 100%);
  border-color: #22c55e;
  box-shadow: 0 4rpx 16rpx rgba(34, 197, 94, 0.1);
}

.health-assessment.warning {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.08) 0%, rgba(245, 158, 11, 0.12) 100%);
  border-color: #f59e0b;
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.1);
}

.health-assessment:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.assessment-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.assessment-text {
  font-size: 30rpx;
  font-weight: 700;
  color: #475569;
  letter-spacing: 0.5rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.assessment-desc {
  font-size: 26rpx;
  color: #64748B;
  line-height: 1.8;
  display: block;
  margin-left: 48rpx;
  padding-top: 4rpx;
}

/* ========== 温馨提示样式 ========== */
.tips-card {
  background: linear-gradient(135deg, #FFF5F0 0%, #FFF8F3 100%);
  border: 2rpx solid rgba(255, 107, 107, 0.1);
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 8rpx 0;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-left: 8rpx;
  position: relative;
}

.tip-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 12rpx;
  width: 6rpx;
  height: 6rpx;
  background: #FF6B6B;
  border-radius: 50%;
}

/* ========== 生成按钮样式 ========== */
.generate-btn {
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #4ECDC4 0%, #A7F3D0 100%);
  color: #065F46;
  font-size: 32rpx;
  font-weight: 700;
  border-radius: 48rpx;
  margin-top: 40rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(78, 205, 196, 0.25);
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.generate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(78, 205, 196, 0.3);
}

