/* pages/plan/generate/index.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #f0f2f5 100%);
  padding: 20rpx 30rpx 40rpx;
}

/* ========== 页面标题样式 ========== */
.header {
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.title {
  display: block;
  font-size: 52rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #888;
  line-height: 1.5;
}

/* ========== 卡片样式 ========== */
.card {
  background: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #FF6B6B;
  letter-spacing: 0.5rpx;
}

/* ========== 当前状态样式 ========== */
.current-status {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  gap: 20rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  padding: 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.08) 0%, rgba(255, 142, 83, 0.08) 100%);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.status-item:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.12) 0%, rgba(255, 142, 83, 0.12) 100%);
}

.status-label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.status-value {
  font-size: 36rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.5rpx;
}

/* ========== 参数设置样式 ========== */
.param-item {
  margin-bottom: 48rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.03) 0%, rgba(255, 142, 83, 0.03) 100%);
  border-radius: 16rpx;
  border: 2rpx solid rgba(255, 107, 107, 0.1);
}

.param-item:last-child {
  margin-bottom: 0;
}

.param-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.param-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 700;
  letter-spacing: 0.5rpx;
}

.param-input {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.param-input input {
  width: 120rpx;
  height: 60rpx;
  text-align: right;
  font-size: 30rpx;
  font-weight: 700;
  color: #FF6B6B;
  background: #fff;
  padding: 0 18rpx;
  border-radius: 12rpx;
  border: 2rpx solid rgba(255, 107, 107, 0.2);
  transition: all 0.2s ease;
}

.param-input input:focus {
  border-color: #FF6B6B;
  box-shadow: 0 0 0 4rpx rgba(255, 107, 107, 0.1);
}

.param-unit {
  font-size: 26rpx;
  color: #999;
  font-weight: 600;
}

.slider {
  width: 100%;
  margin: 20rpx 0;
  height: 8rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

/* ========== 数值选择器样式 ========== */
.picker {
  margin: 20rpx 0;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.1) 0%, rgba(255, 142, 83, 0.1) 100%);
  border: 2rpx solid rgba(255, 107, 107, 0.3);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: 600;
  transition: all 0.3s ease;
}

.picker-display:active {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.15) 0%, rgba(255, 142, 83, 0.15) 100%);
  border-color: #FF6B6B;
  transform: scale(0.98);
}

/* ========== 计划预览样式 ========== */
.preview-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.2s ease;
}

.preview-item:last-child {
  border-bottom: none;
}

.preview-item:active {
  background: rgba(255, 107, 107, 0.02);
  margin: 0 -36rpx;
  padding-left: 36rpx;
  padding-right: 36rpx;
  border-radius: 12rpx;
}

.preview-label {
  font-size: 28rpx;
  color: #555;
  font-weight: 600;
}

.preview-value {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(0, 0, 0, 0.02);
}

.preview-value.primary {
  color: #FF6B6B;
  background: rgba(255, 107, 107, 0.1);
  font-size: 32rpx;
}

.preview-value.success {
  color: #51CF66;
  background: rgba(81, 207, 102, 0.1);
  font-size: 28rpx;
}

.preview-value.danger {
  color: #FF6B6B;
  background: rgba(255, 107, 107, 0.1);
}

/* ========== 健康评估样式 ========== */
.health-assessment {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid;
  gap: 14rpx;
  background: rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
}

.health-assessment:active {
  transform: scale(0.98);
}

.assessment-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.assessment-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  line-height: 1.5;
}

/* ========== 温馨提示样式 ========== */
.tips-card {
  background: linear-gradient(135deg, #FFF5F0 0%, #FFF8F3 100%);
  border: 2rpx solid rgba(255, 107, 107, 0.1);
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding: 8rpx 0;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
  padding-left: 8rpx;
  position: relative;
}

.tip-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 12rpx;
  width: 6rpx;
  height: 6rpx;
  background: #FF6B6B;
  border-radius: 50%;
}

/* ========== 生成按钮样式 ========== */
.generate-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
  border-radius: 48rpx;
  margin-top: 40rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.35);
  transition: all 0.3s ease;
  letter-spacing: 2rpx;
}

.generate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

